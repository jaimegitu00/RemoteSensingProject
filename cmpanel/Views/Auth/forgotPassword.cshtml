@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Remote & Sensing - Forgot Password</title>

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <!-- SweetAlert2 -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            overflow: hidden;
        }

        .forgot-password-container {
            max-width: 480px;
            width: 100%;
            padding: 20px;
        }

        .card {
            border: none;
            border-radius: 20px;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
            overflow: hidden;
        }

        .card-body {
            padding: 35px 30px;
        }

        .logo-container {
            text-align: center;
            margin-bottom: 20px;
        }

            .logo-container img {
                max-height: 50px;
                margin: 0 10px;
            }

        .header-section {
            text-align: center;
            margin-bottom: 25px;
        }

            .header-section i {
                font-size: 48px;
                color: #667eea;
                margin-bottom: 15px;
            }

            .header-section h2 {
                font-size: 24px;
                font-weight: 700;
                color: #1a1a1a;
                margin-bottom: 8px;
            }

            .header-section p {
                color: #666;
                font-size: 14px;
                line-height: 1.6;
            }

        .form-label {
            font-weight: 600;
            color: #333;
            font-size: 13px;
            margin-bottom: 6px;
        }

        .input-group {
            margin-bottom: 18px;
        }

        .input-group-text {
            background-color: #f8f9fa;
            border: 1px solid #e0e0e0;
            border-right: none;
            padding: 10px 14px;
        }

            .input-group-text i {
                color: #667eea;
                font-size: 16px;
            }

        .form-control {
            border: 1px solid #e0e0e0;
            border-left: none;
            padding: 10px 14px;
            font-size: 14px;
            transition: all 0.3s ease;
        }

            .form-control:focus {
                box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
                border-color: #667eea;
            }

        .input-group:focus-within .input-group-text {
            border-color: #667eea;
            background-color: #f0f3ff;
        }

        .btn-reset {
            width: 100%;
            padding: 11px;
            font-size: 15px;
            font-weight: 600;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
            border-radius: 10px;
            color: white;
            transition: all 0.3s ease;
            margin-top: 10px;
        }

            .btn-reset:hover {
                transform: translateY(-2px);
                box-shadow: 0 10px 25px rgba(102, 126, 234, 0.4);
            }

            .btn-reset:active {
                transform: translateY(0);
            }

        .back-to-login {
            text-align: center;
            margin-top: 20px;
            padding-top: 20px;
            border-top: 1px solid #e0e0e0;
        }

            .back-to-login a {
                color: #667eea;
                text-decoration: none;
                font-weight: 600;
                font-size: 14px;
                display: inline-flex;
                align-items: center;
                gap: 8px;
                transition: all 0.3s ease;
            }

                .back-to-login a:hover {
                    color: #764ba2;
                    gap: 12px;
                }

        .info-box {
            background-color: #f0f3ff;
            border-left: 4px solid #667eea;
            padding: 12px;
            border-radius: 8px;
            margin-bottom: 18px;
        }

            .info-box p {
                margin: 0;
                color: #555;
                font-size: 12px;
                line-height: 1.6;
            }

        @@media (max-width: 576px) {
            .card-body {
                padding: 30px 25px;
            }

            .header-section h2 {
                font-size: 22px;
            }

            .header-section i {
                font-size: 42px;
            }
        }
    </style>
</head>
<body>

    <div class="forgot-password-container">
        <div class="card">
            <div class="card-body">
                <!-- Logo Section -->
                <div class="logo-container">
                    <img src="~/images/macreel.png" />
                    <img src="~/images/remote_sensing_logo.jfif" />
                </div>

                <!-- Header Section -->
                <div class="header-section">
                    <i class="bi bi-shield-lock"></i>
                    <h2>Forgot Password?</h2>
                    <p>No worries! Enter your email address and we'll send you a One-Time Password (OTP) to reset your password.</p>
                </div>

                <!-- Info Box -->
                <div class="info-box">
                    <p><i class="bi bi-info-circle me-2"></i>Check your spam folder if you don't receive the OTP within a few minutes.</p>
                </div>

                <!-- Forgot Password Form -->
                <form id="forgot-password-form">
                    <div class="mb-3" id="email-field">
                        <label for="email" class="form-label">Email Address</label>
                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="bi bi-envelope"></i>
                            </span>
                            <input type="email"
                                   class="form-control"
                                   id="email"
                                   name="email"
                                   placeholder="Enter your email address"
                                   autocomplete="email"
                                   >
                        </div>
                    </div>

                    <div class="mb-3" id="otp-field" style="display: none;">
                        <label for="otp" class="form-label">Enter OTP</label>
                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="bi bi-key"></i>
                            </span>
                            <input type="text"
                                   class="form-control"
                                   id="otp"
                                   name="otp"
                                   placeholder="Enter 6-digit OTP"
                                   maxlength="6">
                        </div>
                    </div>

                    <div id="password-fields" style="display: none;">
                        <div class="mb-3">
                            <label for="new-password" class="form-label">New Password</label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="bi bi-lock"></i>
                                </span>
                                <input type="password"
                                       class="form-control"
                                       id="new-password"
                                       name="new-password"
                                       placeholder="Enter new password">
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="confirm-password" class="form-label">Confirm Password</label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="bi bi-lock-fill"></i>
                                </span>
                                <input type="password"
                                       class="form-control"
                                       id="confirm-password"
                                       name="confirm-password"
                                       placeholder="Confirm your password">
                            </div>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-reset" id="submit-btn">
                        <i class="bi bi-send me-2" id="btn-icon"></i><span id="btn-text">Send OTP</span>
                    </button>
                </form>

                <!-- Back to Login Link -->
                <div class="back-to-login">
                    <a href="/Auth/Login">
                        <i class="bi bi-arrow-left"></i>
                        Back to Login
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap 5 JS Bundle -->


    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <!-- jQuery -->

    <script>
        let currentStep = 1;

        $("#forgot-password-form").on("submit", function (e) {
            e.preventDefault();

            if (currentStep === 1) {
                handleSendOTP();
            } else if (currentStep === 2) {
                handleVerifyOTP();
            } else if (currentStep === 3) {
                handleChangePassword();
            }
        });

        function handleSendOTP() {
            const email = $("#email").val().trim();

            if (email === "") {
                Swal.fire("Error", "Please enter email", "error");
                return;
            }

            // Demo success (no backend)
            Swal.fire("Success", "OTP sent (Demo)", "success").then(() => {
                moveToStep2();
            });
        }

        function moveToStep2() {
            currentStep = 2;
            $("#email-field").hide();
            $("#otp-field").show();
            $("#btn-text").text("Verify OTP");
            $("#btn-icon").removeClass("bi-send").addClass("bi-check-circle");
            $(".header-section h2").text("Verify OTP");
            $(".header-section p").text("Enter the OTP sent to your email");
        }

        function handleVerifyOTP() {
            const otp = $("#otp").val().trim();

            if (otp.length !== 6) {
                Swal.fire("Error", "Enter 6 digit OTP", "error");
                return;
            }

            Swal.fire("Verified", "OTP verified (Demo)", "success").then(() => {
                moveToStep3();
            });
        }

        function moveToStep3() {
            currentStep = 3;
            $("#otp-field").hide();
            $("#password-fields").show();
            $("#btn-text").text("Change Password");
            $("#btn-icon").removeClass("bi-check-circle").addClass("bi-shield-check");
            $(".header-section h2").text("Set New Password");
            $(".header-section p").text("Create your new password");
            $(".info-box").hide();
        }

        function handleChangePassword() {
            const pass1 = $("#new-password").val().trim();
            const pass2 = $("#confirm-password").val().trim();

            if (pass1 === "" || pass2 === "") {
                Swal.fire("Error", "Fill all fields", "error");
                return;
            }

            if (pass1 !== pass2) {
                Swal.fire("Error", "Passwords do not match", "error");
                return;
            }

            Swal.fire("Success", "Password changed (Demo UI only)", "success");
        }
    </script>


</body>
</html>