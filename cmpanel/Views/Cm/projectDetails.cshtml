@{
    ViewBag.Title = "Project Detail";
    Layout = "~/Views/Shared/_CmLayout.cshtml";
}

@section Styles {
    <style>
        .info-card {
            border-radius: 14px;
            box-shadow: 0 6px 18px rgba(0,0,0,0.08);
            transition: transform .2s ease, box-shadow .2s ease;
            height: 100%;
        }

            .info-card:hover {
                transform: translateY(-4px);
                box-shadow: 0 10px 22px rgba(0,0,0,0.12);
            }

        .section-title {
            font-size: 13px;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: .6px;
            color: #6c757d;
            margin-bottom: 12px;
        }

        .icon-circle {
            width: 44px;
            height: 44px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #fff;
            font-size: 18px;
        }

        .value-text {
            font-size: 15px;
            font-weight: 600;
        }
    </style>
}

<div class="container-fluid">

    <!-- HEADER -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h4 style="font-size:16px;">Project Detail</h4>
        <a href="/Cm/ProjectList" class="btn btn-sm btn-outline-secondary">
            ← Back
        </a>
    </div>

    <!-- TOP SUMMARY (SYMMETRIC) -->
    <div class="row g-4 mb-4">

        <div class="col-lg-4 col-md-6">
            <div class="card info-card">
                <div class="card-body d-flex gap-3">
                    <div class="icon-circle bg-primary">
                        <i data-feather="layers"></i>
                    </div>
                    <div>
                        <div class="section-title">Project</div>
                        <div class="value-text">Commercial Complex Construction</div>
                        <small class="text-muted">ABC Developers Pvt. Ltd.</small>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4 col-md-6">
            <div class="card info-card">
                <div class="card-body d-flex gap-3">
                    <div class="icon-circle bg-warning">
                        <i data-feather="activity"></i>
                    </div>
                    <div>
                        <div class="section-title">Status</div>
                        <span class="badge bg-warning">Ongoing</span>
                        <div class="mt-2">
                            <small class="text-muted">Start: 15 Jan 2024</small><br />
                            <small class="text-muted">End: 30 Mar 2025</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4 col-md-12">
            <div class="card info-card">
                <div class="card-body d-flex gap-3">
                    <div class="icon-circle bg-success">
                        <i data-feather="map-pin"></i>
                    </div>
                    <div>
                        <div class="section-title">Location</div>
                        <div class="value-text">Mumbai, India</div>
                        <small class="text-muted">Project Manager: Rahul Sharma</small>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <!-- SECOND ROW -->
    <div class="row g-4 mb-4">

        <div class="col-lg-6">
            <div class="card info-card">
                <div class="card-body">
                    <div class="section-title">Project Description</div>
                    <p class="mb-0">
                        Construction of a modern commercial complex with retail
                        spaces, offices, underground parking, and utilities.
                        Currently progressing through the structural phase.
                    </p>
                </div>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="card info-card">
                <div class="card-body">
                    <div class="section-title">Milestone Information</div>
                    <p class="mb-1"><strong>Next Milestone:</strong> RCC Structure Completion</p>
                    <p class="mb-0"><strong>Expected Completion:</strong> March 2025</p>
                </div>
            </div>
        </div>

    </div>

    <!-- BOTTOM INFO STRIP -->
    <div class="row g-4">

        <div class="col-lg-3 col-md-6">
            <div class="card info-card text-center">
                <div class="card-body">
                    <div class="icon-circle bg-info mx-auto mb-2">
                        <i data-feather="calendar"></i>
                    </div>
                    <div class="section-title">Duration</div>
                    <div class="value-text">14 Months</div>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-6">
            <div class="card info-card text-center">
                <div class="card-body">
                    <div class="icon-circle bg-secondary mx-auto mb-2">
                        <i data-feather="users"></i>
                    </div>
                    <div class="section-title">Team Size</div>
                    <div class="value-text">25 Members</div>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-6">
            <div class="card info-card text-center">
                <div class="card-body">
                    <div class="icon-circle bg-dark mx-auto mb-2">
                        <i data-feather="briefcase"></i>
                    </div>
                    <div class="section-title">Category</div>
                    <div class="value-text">Commercial</div>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-6">
            <div class="card info-card text-center">
                <div class="card-body">
                    <div class="icon-circle bg-success mx-auto mb-2">
                        <i data-feather="check-circle"></i>
                    </div>
                    <div class="section-title">Priority</div>
                    <div class="value-text">High</div>
                </div>
            </div>
        </div>

    </div>

</div>

@section Scripts {
    <script>
        if (window.feather) {
            feather.replace();
        }
    </script>
}
