<script>
    $(document).ready(function () {


        $("#meetingform").on("submit", function (event) {
            event.preventDefault();

            let formData = {};
            let meetingMemberList = [];
            let keyPointList = [];

            var arrData = $(this).serializeArray();

            arrData.forEach(function (para) {
                if (para.name == "MeetingMember") {
                    meetingMemberList.push(para.value)
                }
                else if (para.name == "keyPoint") {
                    keyPointList.push(para.value)
                }
                else {
                    formData[para.name]= para.value
                }
            });

            if ($("#Attachment").get(0).files.length > 0) {
                formData["Attachment"]= $("#Attachment").get(0).files[0]
            }
            formData["meetingMemberList"]= meetingMemberList
            formData["keyPointList"]=keyPointList

            debugger

            $.ajax({
                url: '/Admin/AddMeeting',
                type: 'POST',
                processData: false,
                contentType: false,
                data: formData,
                success: function (response) {
                    if (response.success) {
                        Swal.fire({
                            title: 'Success',
                            icon: 'success',
                            text: 'Meeting Added Successfully!',
                            confirmButtonText: 'ok'
                        }).then(()=> {
                            window.location.reload();
                        })
                    } else {
                        Swal.fire({
                            title: 'Error',
                            icon: 'error',
                            text: 'Failed to added meeting',
                            confirmButtonText: 'ok'
                        })
                    }
                },
                error: function (xhr, status, error) {
                    console.error("Error occurred:", {
                        status: status,
                        error: error,
                        response: xhr.responseText
                    });
                    Swal.fire({
                        title: 'Error',
                        icon: 'error',
                        text: 'An error occurred while adding the meeting. Please try again.',
                        confirmButtonText: 'ok'
                    })
                }
            });
        });


    });


</script>

<script>
    $(document).ready(function () {

        $('#meetingTable').DataTable();

        $.ajax({
            url: '/Admin/GetAllMeeting',
            type: 'GET',
            success: function (res) {
                $('#meetingTable tbody').empty();
                var rows = '';
                $.each(res.empList, function (index, item) {
                    rows += `<tr>
                    <td>${index + 1}</td>
                    <td>${item.MeetingTitle}</td>
                    <td>${item.MeetingType}</td>
                    <td>${item.MeetingDate}</td>
                <td>
                      <span class="${item.CompleteStatus == 0 ? 'badge badge-pending' : 'badge badge-completed'}">
                        ${item.CompleteStatus == 0 ? 'Pending' : 'Completed'}
                      </span>
                    </td>

                    <td>
                            <ul class="d-flex list-unstyled justify-content-evenly">
                            <li>
                                <a href="/admin/MeetingConclusion"><i class="fa-solid fa-circle-plus" style="color:orange" title="Add Conclusion"></i></a>
                            </li>
                            <li><a href="/Admin/Min_Of_Meeting?Id=${item.Id}"><i class="fa-solid fa-pencil"></i></a></li>
                        </ul>
                    </td>
                    </tr>`;
                });
                $('#meetingTable tbody').append(rows);
            },
            error: function (xhr, error) {
                console.log("An error accured", error);
            }
        })
    })
</script>
