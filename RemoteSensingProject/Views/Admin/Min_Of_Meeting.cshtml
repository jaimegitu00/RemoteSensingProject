                                </div>
                                <div class="col-sm-6 col-12">

                                    <div class="form-group m-0">
                                        <input type="text" class="form-control keypointDetails" id="keyPoint" name="keyPoint" placeholder="Enter Key Points">
                                    </div>
                                </div>
                            }

