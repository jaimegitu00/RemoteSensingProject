<script>
    $(document).ready(function () {


        $("#meetingforms").on("submit", function (event) {
            event.preventDefault();
            showLoading(true);
            let formData = new FormData();
            let meetingMemberList = [];
            let keyPointList = [];

            var arrData = $(this).serializeArray();

            arrData.forEach(function (para) {
                if (para.name == "MeetingMember") {
                    meetingMemberList.push(para.value);
                }
                else if (para.name == "keyPointList") {
                    keyPointList.push(para.value);

                }
                else {
                    formData.append(para.name, para.value);
                }
            });

            if ($("#Attachment").get(0).files.length > 0) {
                formData.append("Attachment", $("#Attachment").get(0).files[0]);
            }
            formData.append("meetingMemberList", meetingMemberList)
            formData.append("KeyPointList", keyPointList)
            debugger

            $.ajax({
                url: '/Admin/AddMeeting',
                type: 'POST',
                processData: false, // Important: Don't process data
                contentType: false, // Important: Don't set content type
                data: formData,
                success: function (response) {
                    if (response.success) {
                        Swal.fire({
                            title: 'Success',
                            icon: 'success',
                            text: 'Meeting Added Successfully!',
                            confirmButtonText: 'ok'
                        }).then(() => {
                            window.location.reload();
                        })
                    } else {
                        Swal.fire({
                            title: 'Error',
                            icon: 'error',
                            text: 'Failed to added meeting',
                            confirmButtonText: 'ok'
                        })
                    }
                },
                error: function (xhr, status, error) {
                    console.error("Error occurred:", {
                        status: status,
                        error: error,
                        response: xhr
                    });
                    Swal.fire({
                        title: 'Error',
                        icon: 'error',
                        text: 'An error occurred while adding the meeting. Please try again.',
                        confirmButtonText: 'ok'
                    })
                }
            });
        });


        $("#updateMeetingModal").on("submit", function (event) {
            event.preventDefault();
            showLoading(true);

            let formData = new FormData(this);


            $(".updatekeypointDetails").each(function (i, d) {
                formData.append(`keyPointList[${i}]`, d.value);
                formData.append(`KeyPointId[${i}]`, d.getAttribute("data-id") || 0);
            });

            let attachment = $("#Attachment").get(0).files[0];
            if (attachment) {
                formData.append("Attachment", attachment);
            }

            for (let [key, value] of formData.entries()) {
                console.log(`${key}: ${value}`);
            }

            $.ajax({
                url: '/Admin/UpdateMeeting',
                type: 'POST',
                processData: false,
                contentType: false,
                data: formData,
                success: function (response) {
                  
                    if (response.success) {
                        Swal.fire({
                            title: 'Success',
                            icon: 'success',
                            text: 'Meeting Updated Successfully!',
                            confirmButtonText: 'OK'
                        }).then(() => {
                            window.location.reload();
                        });
                    } else {
                        Swal.fire({
                            title: 'Error',
                            icon: 'error',
                            text: 'Failed to update the meeting.',
                            confirmButtonText: 'OK'
                        });
                    }
                },
                error: function (xhr, status, error) {
                    showLoading(false);

                    console.error("AJAX Error:", {
                        status: status,
                        error: error,
                        response: xhr.responseText
                    });

                    Swal.fire({
                        title: 'Error',
                        icon: 'error',
                        text: 'An error occurred while updating the meeting. Please try again.',
                        confirmButtonText: 'OK'
                    });
                }
            });
        });




    });


</script>

