    function updateMeeting(id) {
        showLoading(true);

        $(".updateKeyItem").remove()
        $("#updateModal").modal("show")
        $("#meetingId").val(id)
        $.ajax({
            url: '/Admin/GetMeetingById',
            type: 'get',
            data: { id: id },
            success: function (res) {
                showLoading(false);
                console.log(res)
                if (res != null) {
                    $(".updatemeetType").each(function (i, d) {
                        if (res.MeetingType.toLowerCase() == d.value) {

                            d.setAttribute("checked", true)
                        }
                    })

                    $("#updatevenueEle").toggle(res.MeetingType.toLowerCase() == "offline");
                    $("#updatemeetingLinkContainer").toggle(res.MeetingType.toLowerCase() == "online");
                    if (res.MeetingType.toLowerCase() == "offline") {

                        $("#updatemeetingaddress").val(res.MeetingLink)
                        $("#updatemeetingaddress").attr("required", true)
                        $("#updatemeetinglink").attr("required", false)

                    } else {
                        $("#updatemeetinglink").val(res.MeetingLink)
                        $("#updatemeetinglink").attr("required", true)
                        $("#updatemeetingaddress").attr("required", false)

                    }
                    $("#updatemeetingtitle").val(res.MeetingTitle)
                    $("#updatemeetingdatetime").val(res.MeetingTimeString)
                    $("#updateMeetingMember").val(res.memberId).change();
                    if (res.MeetingKeyPointDict.length > 0) {
                        res.MeetingKeyPointDict.forEach(function (d, i) {
                            const inputField = `
   <div class="row gutters keyItems updateKeyItem" style="display: flex; align-items: center; margin-bottom: 10px;">
     <div class="col-sm-2 col-12"><label style="display: block;font-weight:bold; margin-bottom: 5px;">Key Point ${i + 1}</label></div>

     <div class="col-sm-6 col-12">
