<script>
    $(document).ready(function () {

        $('#meetingTable').DataTable();

        $.ajax({
            url: '/Admin/GetAllMeeting',
            type: 'GET',
            success: function (res) {
                $('#meetingTable tbody').empty();
                var rows = '';
                $.each(res.empList, function (index, item) {
                    rows += `<tr>
                    <td>${index + 1}</td>
                    <td>${item.MeetingTitle}</td>
                    <td>${item.MeetingType}</td>
                    <td>${item.MeetingDate}</td>
                <td>
                      <span class="${item.CompleteStatus == 0 ? 'badge badge-pending' : 'badge badge-completed'}">
                        ${item.CompleteStatus == 0 ? 'Pending' : 'Completed'}
                      </span>
                    </td>

                    <td>
                            <ul class="d-flex list-unstyled justify-content-evenly">
                            <li>
                                <a href="/admin/MeetingConclusion?meeting=${item.Id}"><i class="fa-solid fa-circle-plus" style="color:orange" title="Add Conclusion"></i></a>
                            </li>
                            <li><a onclick='updateMeeting(${item.Id})'><i class="fa-solid fa-pencil"></i></a></li>
                        </ul>
                    </td>
                    </tr>`;
                });
                $('#meetingTable tbody').append(rows);
            },
            error: function (xhr, error) {
                console.log("An error accured", error);
            }
        })
    })

    function updateMeeting(id) {
        $(".updateKeyItem").remove()
        $("#updateModal").modal("show")
        $("#meetingId").val(id)
        $.ajax({
            url: '/Admin/GetMeetingById',
            type: 'get',
            data: {id:id},
            success: function (res) {
                console.log(res)
                if(res!=null){
                    $("#updatemeetinglink").val(res.MeetingLink)
                    $("#updatemeetingtitle").val(res.MeetingTitle)
                    $("#updatemeetingdatetime").val(res.MeetingTimeString)
                    $("#updateMeetingMember").val(res.memberId).change();
                    if(res.MeetingKeyPointDict.length>0){
                        res.MeetingKeyPointDict.forEach(function(d,i){
         const inputField = `
