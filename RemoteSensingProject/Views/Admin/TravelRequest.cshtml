                                <th>Period From</th>
                                <th>Period To</th>
                                <th class="text-center">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (data != null)
                            {
                                int i = 1;
                                foreach (var item in data)
                                {
                                    <tr>
                                        <td>@i</td>
                                        <td>
                                            <a href="#" data-title="View Details" class="action" data-id="@item.id">
                                                @item.projectManager
                                            </a>
                                         </td>
                                        <td>@item.projectCode</td>
                                        <td>@item.projectName</td>
                                        <td>@item.purpose</td>
                                        <td>@Convert.ToDateTime(item.dateOfDept).ToString("dd-MM-yyyy")</td>
                                        <td>@item.place</td>
                                        <td>@Convert.ToDateTime(item.periodFrom).ToString("dd-MM-yyyy")</td>
                                        <td>@Convert.ToDateTime(item.periodTo).ToString("dd-MM-yyyy")</td>
                                        <td data-id="id_@item.id">
                                            <a href="#" class="changeStatus" data-value="true" data-title="Approve" data-id="@item.id">
                                                <i class="fa-solid fa-check text-success"></i>
                                            </a> &nbsp; | &nbsp;
                                            <a href="#" class="changeStatus" data-title="Reject" data-value="false" data-id="@item.id">
                                                <i class="fa-solid fa-xmark text-danger"></i>
                                            </a>
                                        </td>
                                    </tr>
                                    i++;
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
