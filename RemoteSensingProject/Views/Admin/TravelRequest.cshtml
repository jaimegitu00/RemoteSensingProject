<script>
    $(document).ready(function () {
        $(".changeStatus").on("click", async function (e) {
            e.preventDefault();
            
            let status = $(this).data("value");
            let id = $(this).data("id")
            let remark = "";

            if (!status) {
                Swal.close();


                const { value: text, isConfirmed } = await Swal.fire({
                    input: "text",
                    inputLabel: "Remark",
                    inputPlaceholder: "Type your remark here...",
                    inputAttributes: {
                        "aria-label": "Type your remark here",
                        "autocomplete":"off"
                    },
                    showCancelButton: true,
                    allowOutsideClick: false,
                    allowEscapeKey: false
                });
                if (isConfirmed && text) {
                    remark = text;
                    Swal.fire({
                        title: 'Please wait !',
                        allowOutsideClick: false,
                        allowEscapeKey: false,
                        text: 'Your request under process',
                        didOpen: () => { Swal.showLoading(); }
                    })
                }
                else if (!isConfirmed) {
                    return
                }
            }
            $.ajax({
                url: '/admin/TravelRequest',
                type: 'post',
                data: { status: status, id: id, remark: remark },
                success: function (res) {
                    if (res.status) {
                        Swal.fire({
                            title: 'Success',
                            text: res.message,
                            icon: 'success',
                            didClose: () => { location.reload() }
                        })
                    }
                    else {
                        Swal.fire({
                            title: 'success',
                            text: res.message,
                            icon: 'success'
                        })
                    }
                },
                error: function (xhr) {
                    Swal.fire({
                        title: 'error',
                        text: 'Server busy Please try after sometime.',
                        icon: 'error'
                    })
                }
            })
        })
    });
</script>

<script>
    $(document).ready(function () {
        $("#printBtn").click(function () {

            Swal.fire({
                title: "Please wait !",
                text: "Processing your request....",
                allowOutsideClick: false,
                allowEscapeKey: false,
                didOpen: () => {
                    Swal.showLoading();
                }
            })
            var formContent = document.getElementById("formToPrint").outerHTML;

            var style = `<link href="${window.location.origin}/assets/css/TourProposalStyle.css" rel="stylesheet" type="text/css"/>
      <link href="${window.location.origin}/assets/css/style.css" rel="stylesheet" type="text/css"/>
      `;
            let htmlContentToPdf = `<html><head>${style}</head><body><div>${formContent}</div></body></html>`;

            fetch("/login/ExportHtmlToPdf", {
                method: "POST",
                headers: {
                    "Content-Type": "application/json"
                },
                body: JSON.stringify({ HtmlText: htmlContentToPdf }) 
            })
                .then(response => {
                    if (!response.ok) {
                        throw new Error("Failed to generate PDF");
                    }

                    const contentDisposition = response.headers.get("Content-Disposition");
                    let fileName = "Generated.pdf"; 

                    if (contentDisposition) {
                        const match = contentDisposition.match(/filename="?([^"]+)"?/);
                        if (match && match[1]) {
                            fileName = match[1];
                        }
                    }

                    return response.blob().then(blob => ({ blob, fileName }));
                })
                .then(({ blob, fileName }) => {
                    Swal.fire({
                        title: "Successfully !",
                        text: "Reinbursement pdf generated successfully.",
                        icon: "success"
                    })
                    const link = document.createElement("a");
                    const url = URL.createObjectURL(blob);
                    link.href = url;
                    link.download = fileName;
                    document.body.appendChild(link);
                    link.click();
                    link.remove();
                    URL.revokeObjectURL(url); 
                })
                .catch(error => {
                    Swal.fire({
                        title: "Sorry !",
                        text: "Some issue occured while processing your request.",
                        icon: "error"
                    })
                    console.error("Error:", error)
                });

        })
    });

    // Project Manager Filter
    $("#Filter1").on("change", function () {
        const url = new URL(window.location.href);
        const manager = $(this).val();

        if (manager) url.searchParams.set("managerFilter", manager);
        else url.searchParams.delete("managerFilter");

        const project = $("#Filter2").val();
        if (project) url.searchParams.set("projectFilter", project);
        else url.searchParams.delete("projectFilter");

        showLoader();
        window.location.href = url.toString();
    });

    // Project Filter
    $("#Filter2").on("change", function () {
        const url = new URL(window.location.href);
        const project = $(this).val();

        if (project) url.searchParams.set("projectFilter", project);
        else url.searchParams.delete("projectFilter");

        const manager = $("#Filter1").val();
        if (manager) url.searchParams.set("managerFilter", manager);
        else url.searchParams.delete("managerFilter");

        showLoader();
        window.location.href = url.toString();
    });

    // Restore selected values on page load
    $(document).ready(function () {
        const urlParams = new URLSearchParams(window.location.search);
        const manager = urlParams.get("managerFilter");
        const project = urlParams.get("projectFilter");

        if (manager) $("#Filter1").val(manager);
        if (project) $("#Filter2").val(project);
    });

</script>