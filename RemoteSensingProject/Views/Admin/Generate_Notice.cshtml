
@{
    ViewBag.Title = "Generate_Notice";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}


<style>
    .select2-container--default .select2-selection--single .select2-selection__rendered {
        color: #444;
        line-height: 13px;
    }
</style>

<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="row" id="projectmanagerdesc">
                   
                </div>
                <hr />
                <form class="forms-sample">
                    <div class="row">
                        <div class="col-lg-6 mb-3">
                            <label for="upload" class="form-label">Project Name</label>
                                <select class="form-select form-select-lg" id="selectProject">
                                    <option selected>--Select Project--</option>
                                    @if (ViewBag.ProjectList != null) {
    if (ViewBag.ProjectList.Count > 0)
                {
                                            foreach(var item in ViewBag.ProjectList)
                    {
                        <option value="@item.Id">@item.ProjectTitle</option>
                    }
                    <option></option>
                }
                                    }
                                </select>
                        </div> 
                        <div class="col-lg-6 mb-3">
                            <label for="upload" class="form-label">Attachment</label>
                            <input class="form-control" type="file" id="upload">
                        </div>
                       
                    </div>
                  
                    <div class="row">
                        <div class="col-lg-12 mb-3">
                            <label for="description" class="form-label"> Write Notice</label>
                    <textarea class="form-control form-control-sm" name="tinymce" id="tinymceExample" rows="10" placeholder=""></textarea>
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary"><i class="link-icon" data-feather="plus"></i>Send Notice</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


<script>
    $("#selectProject").on("change", function () {
        let pId = $(this).val();
        $.ajax({
            url: "/admin/GetProjectManagerByProjectId",
            type: "get",
            data: { id: pId },
            success: function (res) {
                if (res != null) {
                    $("#projectmanagerdesc").html(
                        `
                         <div class="col-sm-3">
     <h6 class="mb-2 text-success">Send Notice To Project Manager</h6>
 </div>
 <div class="col-sm-9">
     <span>Project Name. :- <label style="color: #029e9d">${res.ProjectTitle}</label></span> ||
     <span>Project Manager :- <label style="color: #029e9d">${res.ProjectManager}</label></span> ||
     <span>Completion Date :- <label style="color: #029e9d">${res.CompletionDate}</label></span>
 </div>
                        `
                    )
                }
            }, error: function (xhr) {
                Swal.fire({
                    title: "error",
                    text: "some error occured",
                    icon:"error"
                })
            }
        })
    })
</script>