<script>
    $(document).ready(function () {



        // HR Count input validation
        $("#humanResourcesCount").on("input", function () {
            const hrCount = parseInt($(this).val()) || 0;
            updateHRDisplay(hrCount);
            updateOtherCount();
        });

        // Add Designation button click
        $("#addHRItem").click(function (e) {
            e.preventDefault();
            addHRRow();
        });

        // Add new HR row function
        function addHRRow() {
            let totalHR = parseInt($("#humanResourcesCount").val()) || 0;

            if (isNaN(totalHR) || totalHR <= 0) {
                Swal.fire("Warning!", "Please enter a valid Human Resources count first.", "warning");
                return;
            }

            // Show HR container if hidden
            $("#humanResourcesContainer").show();

            // Check if it's the first row
            let count = $("#hrRows .hrRow").length;

            if (count === 0) {
                // First click: create default 2 rows
                let row1 = generateHRRow(false);
                let row2 = generateHRRow(true, totalHR);
                $("#hrRows").append(row1 + row2);
            } else {
                // Add new designation row
                let newRow = generateHRRow(false);
                $("#hrRows").append(newRow);
            }

            // Update other count
            updateOtherCount();
        }

        // Generate HR row HTML
        function generateHRRow(isOther = false, value = 0) {
            if (isOther) {
                return `
                <div class="row hrRow mb-2 align-items-center">
                    <div class="col-lg-6">
                        <input type="text" class="form-control form-control-sm hr-other" value="Other" readonly>
                    </div>
                    <div class="col-lg-4">
                        <input type="number" class="form-control form-control-sm hr-count" value="${value}" readonly>
                    </div>
                    <div class="col-lg-2"></div>
                </div>`;
            } else {
                return `
                <div class="row hrRow mb-2 align-items-center">
                    <div class="col-lg-6">
                     <select class="form-control form-control-sm hr-designation-select">
                         <option value="">Select Designation</option>
                          ${designations.map(d =>
                    `<option value="${d.id}">${d.name}</option>`
                ).join('')}
                   </select>

                    </div>
                    <div class="col-lg-4">
                        <input type="number" class="form-control form-control-sm hr-count" placeholder="Count" min="0">
                    </div>
                    <div class="col-lg-2 text-center">
                        <a href="#" class="deleteHRRow"><i class="fa-solid fa-trash text-danger fs-4"></i></a>
                    </div>
                </div>`;
            }
        }

        // Delete HR row
        $("#humanResourcesContainer").on("click", ".deleteHRRow", function (e) {
            e.preventDefault();
            $(this).closest(".hrRow").remove();
            updateOtherCount();

            // Hide container if no rows left
            if ($("#hrRows .hrRow").length === 0) {
                $("#humanResourcesContainer").hide();
            }
        });

        // HR count input validation
        $(document).on("input", ".hr-count", function () {
            let totalHR = parseInt($("#humanResourcesCount").val()) || 0;
            let sum = 0;

            // Sum of all designation counts except Other
            $("#hrRows .hrRow").each(function () {
                if (!$(this).find(".hr-other").length) {
                    let val = parseInt($(this).find(".hr-count").val()) || 0;
                    sum += val;
                }
            });

            if (sum > totalHR) {
                Swal.fire("Warning!", "Total count cannot exceed Human Resources count.", "warning");
                $(this).val(0);
                sum = 0;

                // Recalculate sum after reset
                $("#hrRows .hrRow").each(function () {
                    if (!$(this).find(".hr-other").length) {
                        let val = parseInt($(this).find(".hr-count").val()) || 0;
                        sum += val;
                    }
                });
            }

            updateOtherCount();
        });

        // Update Other count
        function updateOtherCount() {
            let totalHR = parseInt($("#humanResourcesCount").val()) || 0;
            let sum = 0;

            // Calculate sum of all designation counts
            $("#hrRows .hrRow").each(function () {
                if (!$(this).find(".hr-other").length) {
                    let val = parseInt($(this).find(".hr-count").val()) || 0;
                    sum += val;
                }
            });

            let remaining = totalHR - sum;
            if (remaining < 0) remaining = 0;

            // Update Other row value
            $("#hrRows .hrRow").each(function () {
                let otherInput = $(this).find(".hr-other");
                if (otherInput.length) {
                    $(this).find(".hr-count").val(remaining);
                }
            });
        }

        // Update HR display based on count
        function updateHRDisplay(hrCount) {
            if (hrCount > 0) {
                $("#humanResourcesContainer").show();

                // Check if we need to add initial rows
                if ($("#hrRows .hrRow").length === 0) {
                    $("#addHRItem").click();
                } else {
                    updateOtherCount();
                }
            } else {
                // Clear all HR rows if count is 0
                $("#hrRows").empty();
                $("#humanResourcesContainer").hide();
            }
        }

        // Form submission - Collect HR data
        $("#createProjectForm").on("submit", function (e) {
            e.preventDefault();

            let hrData = [];
            let totalHR = parseInt($("#humanResourcesCount").val()) || 0;
            let sum = 0;

            // Collect HR details
            $("#hrRows .hrRow").each(function () {
                const designationSelect = $(this).find(".hr-designation-select");
                const otherInput = $(this).find(".hr-other");
                const countInput = $(this).find(".hr-count");

                let designation = "";
                let count = parseInt(countInput.val()) || 0;

                if (designationSelect.length && designationSelect.val()) {
                    designation = designationSelect.find("option:selected").text();
                } else if (otherInput.length) {
                    designation = otherInput.val();
                }

                if (designation && count > 0) {
                    hrData.push({
                        designation: designation,
                        count: count
                    });
                    sum += count;
                }
            });

            // Validate total count
            if (sum !== totalHR) {
                Swal.fire("Error!", `Total HR count (${sum}) must match Human Resources count (${totalHR}).`, "error");
                return false;
            }

            // Continue with form submission
            console.log("HR Data:", hrData);
            // Add your form submission logic here
        });
    });
</script>

