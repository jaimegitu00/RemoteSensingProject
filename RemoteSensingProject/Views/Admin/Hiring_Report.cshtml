<div class="row mx-0">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-4">
                        <select id="Filter1" class="form-select form-select-sm">
                            <option selected value="">Filter By Project Manager</option>
                            @if (projManager != null)
                            {
                                foreach (var proman in projManager)
                                {
                                    if (proman.EmployeeRole == "projectManager")
                                    {
                                        <option value="@proman.Id">@proman.EmployeeName</option>
                                    }
                                }
                            }
                        </select>
                    </div>
                    <div class="col-sm-4">
                        <select id="Filter2" class="form-select form-select-sm">
                            <option selected value="">Filter By Project</option>
                            @if (projects != null)
                            {
                                foreach (var proj in projects)
                                {
                                    <option value="@proj.Id">@proj.ProjectTitle</option>
                                }
                            }
                        </select>
                    </div>
                    <div class="col-sm-4">
                        <select id="Filter3" class="form-select form-select-sm">
                            <option selected value="">Filter By Status</option>
                            <option value="approved">Approved</option>
                            <option value="pending">Pending</option>
                            <option value="rejected">Rejected</option>
                        </select>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row mx-0 px-0">
    <div class="col-sm-12">
        <div class="card ">
            <div class="card-body">
                <table class="table" id="tableHiring">
                    <thead>
                        <tr>
                            <th>Sr. No.</th>
                            <th>Project Manager</th>
                            <th>Project Code</th>
                            <th>Project Name</th>
                            <th>Head Name</th>
                            <th>Date From</th>
                            <th>Date To</th>
                            <th>Proposed Place</th>
                            <th>Purpose of Visit</th>
                            <th>Total Days & Night</th>
                            <th>Availability of fund</th>
                            <th>Remark</th>
                            @*<th>Action</th>*@
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (data != null)
                        {
                            int i = 1;
                            foreach (var item in data)
                            {
                                <tr>
                                    <td>@i</td>
                                    <td data-id="@item.id"><a href="#" data-title="View Details" class="action">@item.projectManager</a></td>
                                    <td>@item.projectCode</td>
                                    <td>@item.projectName</td>
                                    <td>@item.headName</td>
                                    <td>@Convert.ToDateTime(item.dateFrom).ToString("dd-MMM-yyyy")</td>
                                    <td>@Convert.ToDateTime(item.dateTo).ToString("dd-MMM-yyyy")</td>
                                    <td>@item.proposedPlace</td>
                                    <td>@item.purposeOfVisit</td>
                                    <td>@item.totalDaysNight</td>
                                    <td>@item.amount</td>
                                    <td>
                                        @if (item.adminappr && !item.newRequest && string.IsNullOrEmpty(item.remark))
                                        {<span>Approved</span> }
                                        else if (item.newRequest && !item.adminappr)
                                        { <span>Pending</span>}
                                        else
                                        { <span>@item.remark</span>}
                                    </td>
                                    @*<td class="text-center" data-id="@item.id"><i class="fa-solid fa-eye action"></i></td>*@
                                    <td>
                                        @{
                                            if (item.newRequest == true && item.adminappr == false)
                                            { <span id="status" class="badge bg-primary pt-1">Pending</span> }
                                            else if (item.newRequest == false && item.adminappr == true)
                                            { <span id="status" class="badge bg-success">Approved</span> }
                                            else if (item.newRequest == false && item.adminappr == false)
                                            { <span id="status" class="badge bg-danger">Rejected</span> }
                                        }
                                    </td>
                                </tr>
                                i++;
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>



<div class="modal fade" id="viewHiringVehicle" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
