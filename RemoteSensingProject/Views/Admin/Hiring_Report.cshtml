
@{
    ViewBag.Title = "Hiring_Report";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
    var data = ViewData["hiringList"] as List<RemoteSensingProject.Models.Admin.main.HiringVehicle1>;
    var projects = ViewData["projects"] as List<RemoteSensingProject.Models.Admin.main.Project_model>;
    var projManager = ViewData["projectMangaer"] as List<RemoteSensingProject.Models.Admin.main.Employee_model>;
    string baseUrl = $"{Request.Url.Scheme}://{Request.Url.Authority}";
}
