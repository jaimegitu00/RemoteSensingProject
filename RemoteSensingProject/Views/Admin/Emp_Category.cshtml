@{
    ViewBag.Title = "Emp_Category";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
    var activeTab = Request.QueryString["tab"] ?? "designation";
}
<style>
    /*spinner section start here*/
    #loading {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(255, 255, 255, 0.7); /* White background with opacity */
        backdrop-filter: blur(5px); /* Blur effect */
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 9999;
    }

    /* Spinner */
    .spinner {
        width: 50px;
        height: 50px;
        border: 5px solid #f3f3f3; /* Light grey */
        border-top: 5px solid #3498db; /* Blue */
        border-radius: 50%;
        animation: spin 1s linear infinite;
    }
</style>
<script src="~/Scripts/jquery-3.7.1.min.js"></script>
<div id="loading" style="display: none;">
    <div class="spinner"></div>
</div>

<nav class="page-breadcrumb d-flex align-items-center justify-content-between">
    <ul class="nav nav-tabs">
        <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="#" id="desginationTab">Desgination</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="#" id="divisonTab">Divison</a>
        </li>
    </ul>
    <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addEmployeeCategory"><i class="link-icon" data-feather="plus"></i> Add</button>
</nav>
<div class="row" id="mainContainer">
</div>

<script>
    $(document).ready(function () {

        var activeTab = '@activeTab'; // designation / division

        if (activeTab === 'division') {
            activateDivision();
        } else {
            activateDesignation();
        }

        $("#desginationTab").click(function () {
            activateDesignation();
        });

        $("#divisonTab").click(function () {
            activateDivision();
        });

        function activateDesignation() {
            checkActiveTab();
            $("#desginationTab").addClass("active");
            $("#modalTitle").text("Desgination");
            $("#formTypes").val("Desgination");
            loadPartialContent("_desgination");
        }

        function activateDivision() {
            checkActiveTab();
            $("#divisonTab").addClass("active");
            $("#modalTitle").text("Divison");
            $("#formTypes").val("Divison");
            loadPartialContent("_divison");
        }

        function checkActiveTab() {
            $(".nav-link").removeClass("active");
        }

        function loadPartialContent(partialView) {
            $("#loading").show();
            $.get("/admin/getCategoryPartial", { partial: partialView })
                .done(function (res) {
                    $("#mainContainer").html(res);
                })
                .fail(function () {
                    alert("Failed to load content.");
                })
                .always(function () {
                    $("#loading").hide();
                });
        }
    });
</script>