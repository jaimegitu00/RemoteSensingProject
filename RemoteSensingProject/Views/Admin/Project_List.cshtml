
@{
    ViewBag.Title = "Project_List";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
    int i = 1;
}
<style>
    svg {
        height: 20px;
    }
</style>
<div class="search-box p-4 bg-white rounded mb-3 box-shadow">
    <form class="forms-sample">
        <div class="row align-items-center">
            <div class="col-lg-3">
                <h5>Project Lists</h5>
            </div>
            <div class="col-lg-6 col-md-6">
                <input type="text" placeholder="Search by project name" class="form-control">
            </div>
            <div class="col-lg-3 col-md-6">
                <select class="form-select form-select-lg">
                    <option selected>Project Status</option>
                    <option value="1">Work in Progress</option>
                    <option value="2">Pending</option>
                    <option value="3">Completed</option>
                </select>
            </div>
        </div>
    </form>
</div>
<div class="card">
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-baseline mb-2">
            <h6 class="card-title mb-0">Projects</h6>
        </div>
        <div class="table-responsive">
            <table class="table table-hover mb-0" id="dataTableExample">
                <thead>
                    <tr>
                        <th class="pt-0">#</th>
                        <th class="pt-0">Assign Date</th>
                        <th class="pt-0">Project Name</th>
                        <th class="pt-0">Start Date</th>
                        <th class="pt-0">Completion Date</th>
                        <th class="pt-0">Project Manager</th>
                        <th class="pt-0">Status</th>
                        <th class="pt-0">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in ViewBag.ProjectList as List<RemoteSensingProject.Models.Admin.main.Project_model>)
                    {
                        <tr>
                            <td>@i</td>
                            <td>@item.AssignDate</td>
                            <td>@item.ProjectTitle</td>
                            <td>@item.StartDate</td>
                            <td>@item.CompletionDate</td>
                            <td>@item.ProjectManager</td>
                            <td>
                                <span class="badge bg-warning">Work in Progress</span>
                            </td>
                            <td class="text-center">
                                <ul class="d-flex list-unstyled mb-0 justify-content-center">
                                    <li class="me-2"><a href="#" class="viewProject" data-Id="@item.Id"><i class="link-icon" data-feather="eye"></i></a></li>
                                    <li class="me-2"><a href="#"><i class="link-icon" data-feather="edit"></i></a></li>
                                    <li><a href="#"><i class="link-icon" data-feather="delete"></i></a></li>
                                </ul>
                            </td>
                        </tr>
                        i++;
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="modal fade" id="viewProjectModal" tabindex="-1" aria-labelledby="viewProjectModal" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header d-flex">
                <h1 class="modal-title fs-5 text-success" id="exampleModalLabel"> PPP Based Slum Rehabilitaiton</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="viewProjectModalBody">
               
            </div>
        </div>
    </div>
</div>


<script>
    $(".viewProject").click(function () {
        let id = $(this).attr("data-Id");
        Swal.fire({
            title: "Please wait...",
            text: "Processing your request ...",
            allowOutsideClick: false,
            allowEscapeKey: false,
            timer: 100000,
            didOpen: () => {
                Swal.showLoading();
            }
        })
        $.ajax({
            url: "/admin/GetProjecDatatById",
            type: "get",
            data: { Id: id },
            success: function (res) {
                console.log(res);
                if (res.status) {

                    let stages = `<div class="stageSection">`; 
                    if (res.data.pm.ProjectStage) {
                        if (res.data.stages.length > 0) {
                            $.each(res.data.stages, function (i, d) {
                                stages += `<label class="form-label"><a href="stage2">Stage ${i+1}</a></label>
<div class="row">
    <div class="col-sm-4 mb-2">
        <label class="form-label fw-bolder">Key</label>
        <br />
        <span>${d.KeyPoint}</span>
    </div>
    <div class="col-sm-4 mb-2">
        <label class="form-label fw-bolder">Pdf Document</label>
        <br />
       <a href="${d.Document_Url}"><span>Document</span> <i class="fa-regular fa-file-pdf"></i></a>
    </div>
    <div class="col-sm-4 mb-2">
        <label class="form-label fw-bolder">Completion Date</label>
        <br />
        <span>${d.CompletionDate}</span>
    </div>
    <hr />
</div>`;
                            });
                            stages += "</div>";
                        }
                    }
                    
                    let all_element = `<div class="row">
     <div class="col-sm-4 mb-2">
         <label class="form-label fw-bolder">Title</label>
         <br />
         <span>${res.data.pm.ProjectTitle}</span>
     </div>
     <div class="col-sm-4 mb-2">
         <label class="form-label fw-bolder">Project Manager</label>
         <br />
         <span>${res.data.pm.ProjectManager}</span>
     </div>
     <div class="col-sm-4 mb-2">
         <label class="form-label fw-bolder">Assign Date</label>
         <br />
         <span>${convertToDate(res.data.pm.AssignDate)}</span>
     </div>

     <hr />
 </div>
 <div class="row">
     <div class="col-sm-4 mb-2">
         <label class="form-label fw-bolder">Start Date</label>
         <br />
         <span>${convertToDate(res.data.pm.StartDate)}</span>
     </div>
     <div class="col-sm-4 mb-2">
         <label class="form-label fw-bolder">Completion Date</label>
         <br />
         <span>${convertToDate(res.data.pm.CompletionDate)}</span>
     </div>
     <div class="col-sm-4 mb-2">
         <label class="form-label fw-bolder">Project Type</label>
         <br />
         <span>${res.data.pm.ProjectType}</span>
     </div>

     <hr />
 </div>
 <div class="row">
     <div class="col-sm-4 mb-2">
         <label class="form-label fw-bolder">Department Name</label>
         <br />
         <span>${res.data.pm.ProjectTitle}</span>
     </div>
     <div class="col-sm-4 mb-2">
         <label class="form-label fw-bolder">Contact Person</label>
         <br />
         <span>${res.data.pm.ProjectTitle}</span>
     </div>
     <div class="col-sm-4 mb-2">
         <label class="form-label fw-bolder">Address</label>
         <br />
         <span>${res.data.pm.ProjectTitle}</span>
     </div>
     <hr />
 </div>
 <div class="row">
     <div class="col-sm-4 mb-2">
         <label class="form-label fw-bolder">Budget</label>
         <br />
         <span>${res.data.pm.ProjectBudget}</span>
     </div>
     <div class="col-sm-4 mb-2">
         <label class="form-label fw-bolder">Sub-Ordinate</label>
         <ul class="d-flex list-unstyled justify-content-between m-0">
             <li>Member 1</li>
             <li>Member 2</li>
             <li>Member 3</li>
         </ul>
     </div>
     <div class="col-sm-4 mb-2">
         <label class="form-label fw-bolder">Stage</label>
         <br />
         <span>${res.data.pm.ProjectStage ? "Yes" : "No"}</span>
     </div>
     <hr />
 </div>
 ${res.data.pm.ProjectStage ? stages : ""}
 
     <div class="row">
         <label class="form-label fw-bolder">Description</label>
         <p>${res.data.pm.ProjectDescription}</p>
     </div>` ;

                    function convertToDate(timestamp) {
                        const parsedTimestamp = parseInt(timestamp.match(/\d+/)[0], 10);
                        const date = new Date(parsedTimestamp);
                        return date.toLocaleDateString();
                    }

                    $("#viewProjectModalBody").html(all_element);
                    $("#viewProjectModal").modal("show");
                    Swal.close();
                }
            },
            error: function (res) {
                
            },
            complete: function (res) {

            }
        })
    })
</script>