
@{
    ViewBag.Title = "Project_List";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
    int i = 1;
}
<style>
    svg {
        height: 20px;
    }
</style>
<div class="search-box p-4 bg-white rounded mb-3 box-shadow">
    <form class="forms-sample">
        <div class="row align-items-center">
            <div class="col-lg-3">
                <h5>Project Lists</h5>
            </div>
            <div class="col-lg-6 col-md-6">
                <input type="text" placeholder="Search by project name" id="searchProjectBy" class="form-control">
            </div>
            <div class="col-lg-3 col-md-6">
                <select class="form-select form-select-lg" id="filterProjectStatus">
                    <option selected value="">Project Status</option>
                    <option value="Ongoing">Ongoing</option>
                    <option value="Upcoming">Upcoming</option>
                    <option value="delay">Delay</option>
                    <option value="Complete">Completed</option>
                </select>
            </div>
        </div>
    </form>
</div>
<div class="card">
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-baseline mb-2">
            <h6 class="card-title mb-0">Projects</h6>
        </div>
        <div class="table-responsive">
            <table class="table table-hover mb-0" id="dataTableExample">
                <thead>
                    <tr>
                        <th class="pt-0">Sr. No.</th>
                        <th class="pt-0">Project Code</th>
                        <th class="pt-0">Project Name</th>
                        <th class="pt-0">Project Manager</th>
                        <th class="pt-0">Assign Date</th>
                        <th class="pt-0">Start Date</th>
                        <th class="pt-0">Completion Date</th>
                        <th class="pt-0">Status</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in ViewBag.ProjectList as List<RemoteSensingProject.Models.Admin.main.Project_model>)
                    {
                        <tr>
                            <td>@i</td>
                            <td>@item.projectCode</td>
                            <td>
                                <a href="#" class="viewProject" title="View" data-title="View Detail" data-Id="@item.Id">
                                    @item.ProjectTitle
                                </a>
                            </td>
                            <td>@item.ProjectManager</td>
                            <td>@item.AssignDateString</td>

                            <td>@item.StartDateString</td>
                            <td>@item.CompletionDatestring</td>

                            <td>
                                @if (item.ProjectStatus)
                                {
                                    <span class="badge bg-success">Completed</span>
                                }
                                else if (item.CompletionDate < DateTime.Now)
                                {
                                    <span class="badge bg-danger">Delay</span>
                                }
                                else if (item.StartDate < DateTime.Now)
                                {


                                    <span class="badge bg-warning">Work in Progress</span>
                                }
                                else
                                {
                                    <span class="badge bg-primary">Pending</span>
                                }


                            </td>
                        </tr>
                        i++;
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="modal fade" id="viewProjectModal" tabindex="-1" aria-labelledby="viewProjectModal" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header d-flex">
                <h1 class="modal-title fs-5 text-success" id="exampleModalLabel"> Project Details</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="viewProjectModalBody">
               
            </div>
        </div>
    </div>
</div>


<script>
    $(".viewProject").click(function () {
        let id = $(this).attr("data-Id");
        Swal.fire({
            title: "Please wait...",
            text: "Processing your request ...",
            allowOutsideClick: false,
            allowEscapeKey: false,
            timer: 100000,
            didOpen: () => {
                Swal.showLoading();
            }
        })
        $.ajax({
            url: "/admin/GetProjecDatatById",
            type: "get",
            data: { Id: id },
            success: function (res) {
                console.log(res);
                if (res.status) {

                    let stages = `<div class="stageSection">`; 
                    if (res.data.pm.ProjectStage) {
                        if (res.data.stages.length > 0) {
                            $.each(res.data.stages, function (i, d) {
                                stages += `<label class="form-label"><a href="stage2" data-title="Stage">Stage ${i+1}</a></label>
<div class="row">
    <div class="col-sm-4 mb-2">
        <label class="form-label fw-bolder">Key</label>
        <br />
        <span>${d.KeyPoint}</span>
    </div>
    <div class="col-sm-4 mb-2">
        <label class="form-label fw-bolder">Pdf Document</label>
        <br />
       <a href="${d.Document_Url}"><span>Document</span> <i class="fa-regular fa-file-pdf"></i></a>
    </div>
    <div class="col-sm-4 mb-2">
        <label class="form-label fw-bolder">Completion Date</label>
        <br />
        <span>${d.CompletionDatestring}</span>
    </div>
    <hr />
</div>`;
                            });
                            stages += "</div>";
                        }
                    }
                    let ExternalProject = ""
                    if (res.data.pm.ProjectType === "External") {
                        ExternalProject = `<div class="row">
    <div class="col-sm-4 mb-2">
        <label class="form-label fw-bolder">Department Name</label>
        <br />
        <span>${res.data.pm.ProjectDepartment}</span>
    </div>
    <div class="col-sm-4 mb-2">
        <label class="form-label fw-bolder">Contact Person</label>
        <br />
        <span>${res.data.pm.ContactPerson}</span>
    </div>
    <div class="col-sm-4 mb-2">
        <label class="form-label fw-bolder">Address</label>
        <br />
        <span>${res.data.pm.Address}</span>
    </div>
    <hr />
</div>`;
                    }

                    let subOrdinates = "";
                    if (res.data.SubOrdinate.length > 0) {
                        $.each(res.data.SubOrdinate, function (i, d) {
                            subOrdinates += ` <li>${d.Name}(${d.EmpCode})</li>`;
                        })
                    }
                    let all_element = `<div class="row">
     <div class="col-sm-4 mb-2">
         <label class="form-label fw-bolder">Title</label>
         <br />
         <span>${res.data.pm.ProjectTitle}</span>
     </div>
     <div class="col-sm-4 mb-2">
         <label class="form-label fw-bolder">Project Manager</label>
         <br />
         <span>${res.data.pm.ProjectManager}</span>
     </div>
     <div class="col-sm-4 mb-2">
         <label class="form-label fw-bolder">Assign Date</label>
         <br />
         <span>${res.data.pm.AssignDateString}</span>
     </div>

     <hr />
 </div>
 <div class="row">
     <div class="col-sm-4 mb-2">
         <label class="form-label fw-bolder">Start Date</label>
         <br />
         <span>${res.data.pm.StartDateString}</span>
     </div>
     <div class="col-sm-4 mb-2">
         <label class="form-label fw-bolder">Completion Date</label>
         <br />
         <span>${res.data.pm.CompletionDatestring}</span>
     </div>
     <div class="col-sm-4 mb-2">
         <label class="form-label fw-bolder">Project Type</label>
         <br />
         <span>${res.data.pm.ProjectType}</span>
     </div>

     <hr />
 </div>
 ${res.data.pm.ProjectType === "External" ? ExternalProject : ""}
 <div class="row">
     <div class="col-sm-4 mb-2">
         <label class="form-label fw-bolder">Budget</label>
         <br />
         <span>${res.data.pm.ProjectBudget}</span>
     </div>
     <div class="col-sm-4 mb-2">
         <label class="form-label fw-bolder">Sub-Ordinate</label>
         <ul class="d-flex list-unstyled justify-content-between m-0">
             ${subOrdinates}
         </ul>
     </div>
     <div class="col-sm-4 mb-2">
         <label class="form-label fw-bolder">Stage</label>
         <br />
         <span>${res.data.pm.ProjectStage ? "Yes" : "No"}</span>
     </div>
     <hr />
 </div>
 ${res.data.pm.ProjectStage ? stages : ""}
 
     <div class="row">
         <label class="form-label fw-bolder">Description</label>
         <p>${res.data.pm.ProjectDescription}</p>
     </div>` ;

                    function convertToDate(timestamp) {
                        const parsedTimestamp = parseInt(timestamp.match(/\d+/)[0], 10);
                        const date = new Date(parsedTimestamp);
                        return date.toLocaleDateString();
                    }

                    $("#viewProjectModalBody").html(all_element);
                    $("#viewProjectModal").modal("show");
                    Swal.close();
                }
            },
            error: function (res) {
                
            },
            complete: function (res) {

            }
        })
    })

    $('#searchProjectBy').on('keyup', function () {
        let value = $(this).val().trim();
        const url = new URL(window.location.href);
        url.searchParams.set("searchTerm", value);

        const division = $("#filterProjectStatus").val();
        if (division && division !== "null") url.searchParams.set("statusFilter", division);

        window.history.replaceState({}, "", url);

        clearTimeout(window.searchTimer);
        window.searchTimer = setTimeout(() => {
            showLoader(); // 👈 Add here
            window.location.href = url.toString();
        }, 500);
    });

    $("#filterProjectStatus").on("change", function () {
        const url = new URL(window.location.href);

        if ($(this).val()) url.searchParams.set("statusFilter", $(this).val());
        else url.searchParams.delete("statusFilter");

        const searchValue = $('#searchProjectBy').val().trim();
        if (searchValue) url.searchParams.set("searchTerm", searchValue);

        showLoader(); // 👈
        window.location.href = url.toString();
    });

    $(document).ready(function () {
        const urlParams = new URLSearchParams(window.location.search);

        const search = urlParams.get('searchTerm');
        const division = urlParams.get('statusFilter');

        if (search) {
            $('#searchProjectBy').val(search).focus();
        }

        if (division) {
            $('#filterProjectStatus').val(division);
        }
    });
</script>