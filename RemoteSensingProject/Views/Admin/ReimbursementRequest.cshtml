
@{
    ViewBag.Title = "ReimbursementRequest";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
    var data = ViewData["ReimBurseData"] as List<RemoteSensingProject.Models.ProjectManager.Reimbursement>;
    int i = 1;
    var projManager = ViewData["projectMangaer"] as List<RemoteSensingProject.Models.Admin.main.Employee_model>;
    string baseUrl = $"{Request.Url.Scheme}://{Request.Url.Authority}";
}
<link href="~/assets/css/reinbursementCssDesign.css" rel="stylesheet" />
<div class="row mx-0">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-4">
                        <select id="Filter1" class="form-select form-select-sm">
                            <option selected value="">Filter By Project Manager</option>
                            @if (projManager != null)
                            {
                                foreach (var proman in projManager)
                                {
                                    if (proman.EmployeeRole == "projectManager")
                                    {
                                        <option value="@proman.EmployeeRole">@proman.EmployeeName</option>
                                    }
                                }
                            }
                        </select>
                    </div>
                    <div class="col-sm-4">
                        <select id="typeFilter" class="form-select form-select-sm">
                            <option selected value="">Filter By Type</option>
                            <option value="contigency">Contigency</option>
                            <option value="pi_adjustment">P.I.Adjustment</option>
                        </select>
                    </div>
                    </div>
                </div>
        </div>
    </div>
</div>
<div class="row mx-0">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table id="dataTableExample" class="table">
                        <thead>
                            <tr>
                                <th class="text-center">Sr</th>
                                <th>Project Manager</th>
                                <th>Type</th>
                                <th>Amount</th>
                                <th class="text-center">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (data != null && data.Count > 0)
                            {
                                foreach (var item in data)
                                {
                                    <tr>
                                        <td>@i</td>
                                        <td>@item.EmpName</td>
                                        <td>@item.type</td>
                                        <td>@Convert.ToDecimal(item.amount).ToString("N2")</td>
                                        <td data-id="@item.id" class="text-center">
                                            <a href="#" class="viewSanctionreciept" data-userId="@item.userId" data-type="@item.type" data-id="@item.id">
                                                <i class="fa-solid fa-eye text-success"></i>
                                            </a> &nbsp; | &nbsp;
                                            <a href="#" class="act" data-appr="true" data-id="@item.id" data-type="@item.type">
                                                <i class="fa-solid fa-check text-success"></i>
                                            </a> &nbsp; | &nbsp;
                                            <a href="#" class="act" data-appr="false" data-id="@item.id" data-type="@item.type">
                                                <i class="fa-solid fa-xmark text-danger"></i>
                                            </a>

                                        </td>
                                    </tr>
                                    i++;
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


<!--Modal-->
<div class="modal fade" id="ViewReinburseMentReciept" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-100" aria-labelledby="ViewReinburseMentRecieptLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header d-flex justify-content-between">
                <h1 class="modal-title fs-5" id="ViewReinburseMentRecieptLabel">Reimbursement Form </h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="container" id="formToPrint">
                    <div class="form-container py-3">
                        <div class="text-center mb-3">
                            <h4>REMOTE SENSING APPLICATIONS CENTRE</h4>
                            <h5>UTTAR PRADESH</h5>
                            <div class="px-4 mt-1 d-flex justify-content-between">
                                <span><p>
                                          <img src="@baseUrl/assets/images/remote_sensing_logo.jfif" width="50" />
                                    </p><b>S.F.A.O/Director</b></span>
                                <span>Name of Project/Centre</span>
                            </div>
                        </div>

                        <div class="form-header-text w-100 text-center">
                            <p>
                                The following expenditure of Rs. <span class="dots"></span> have been incurred against Contingent/Advance of
                                Rs. <span class="dots"></span> taken as on <span class="dots"></span> kindly accord the sanction for adjustment/payment in accordance
                                with the enclosed contingent advance approval.
                            </p>
                        </div>


                        <div class="table-responsive mb-0 px-5">
                            <table class="table table-bordered mb-0">
                                <thead class="text-center">
                                    <tr>
                                        <th>S.N.</th>
                                        <th>Vr. No. & Date</th>
                                        <th>Particulars</th>
                                        <th>Items</th>
                                        <th>Purpose</th>
                                        <th>Amount Rs. P.</th>
                                    </tr>
                                </thead>
                                <tbody id="viewReinburseRecieptListBody">
                                </tbody>
                            </table>
                        </div>

                        <div class="bottom-section mt-0 mx-5">
                            <div class="row mt-0">
                                <div class="col-md-6">
                                    <p>Balance Rs. <span class="dots"></span> (Rupees <span class="dots"></span>Only)</p>
                                    <p>paid vide cheque No. <span class="dots"></span> Date<span class="dots"></span></p>

                                </div>
                                <div class="col-md-6 text-end">
                                    <p>Signature <span class="dots"></span></p>
                                    <p>Name : <span class="dots"></span></p>
                                    <p>Designation : <span class="dots"></span></p>
                                </div>
                            </div>

                            <div class="officers-section">
                                <div class="row ps-3">
                                    <p class="pt-2">Checked for Rs. <span class="dots"></span> Rs.<span class="dots"></span></p>
                                    <div class="col-md-4 mt-3">
                                        <p>Asstt. Actt./Acctt./O.S. (Acctts)</p>
                                    </div>
                                    <div class="col-md-4 text-center mt-3">
                                        <p>A.O./S.F.A.O.</p>
                                    </div>
                                    <div class="col-md-4 text-end">
                                        <span class="approved-text">Pending</span>
                                        <p>Sanctioning Authority</p>
                                    </div>
                                </div>
                            </div>

                            <div class="final-section pt-1 mt-0">
                                <p style="margin-right: 15px;">Passed for Rs. <span class="dots"></span> (RS. <span class="dots"></span>)</p>
                                <p style="margin-right: 15px;">Drawing & Disbursing Officer</p>
                            </div>
                        </div>


                    </div>
                </div>
                <div class="text-end m-5">
                    <button class="btn btn-secondary py-1 rounded-0" id="printBtn">Download</button>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

<script>

    $(document).ready(function () {

        //Filter
        $("#typeFilter").on("change", function () {
            let tp = $(this).val();
            let table = $("#dataTableExample").DataTable();
            table.column(2).search(tp).draw();
        });
        $("#Filter1").on("change", function () {
            let tp = $(this).val();
            let table = $("#dataTableExample").DataTable();
            table.column(1).search(tp).draw();
        });

        $("#printBtn").click(function () {

            Swal.fire({
                title: "Please wait !",
                text: "Processing your request....",
                allowOutsideClick: false,
                allowEscapeKey: false,
                didOpen: () => {
                    Swal.showLoading();
                }
            })
            var formContent = document.getElementById("formToPrint").outerHTML;

            var style = `<link href="${window.location.origin}/assets/css/reinbursementCssDesign.css" rel="stylesheet" type="text/css"/>
            <link href="${window.location.origin}/assets/css/style.css" rel="stylesheet" type="text/css"/>
            `;
            let htmlContentToPdf = `<html><head>${style}</head><body><div>${formContent}</div></body></html>`;

            fetch("/login/ExportHtmlToPdf", {
                method: "POST",
                headers: {
                    "Content-Type": "application/json"
                },
                body: JSON.stringify({ HtmlText: htmlContentToPdf }) // Ensure case matches C# model
            })
                .then(response => {
                    if (!response.ok) {
                        throw new Error("Failed to generate PDF");
                    }

                    // Extract filename from Content-Disposition header
                    const contentDisposition = response.headers.get("Content-Disposition");
                    let fileName = "Generated.pdf"; // Default fallback filename

                    if (contentDisposition) {
                        const match = contentDisposition.match(/filename="?([^"]+)"?/);
                        if (match && match[1]) {
                            fileName = match[1];
                        }
                    }

                    return response.blob().then(blob => ({ blob, fileName }));
                })
                .then(({ blob, fileName }) => {
                    Swal.fire({
                        title: "Successfully !",
                        text: "Reinbursement pdf generated successfully.",
                        icon: "success"
                    })
                    const link = document.createElement("a");
                    const url = URL.createObjectURL(blob);
                    link.href = url;
                    link.download = fileName;
                    document.body.appendChild(link);
                    link.click();
                    link.remove();
                    URL.revokeObjectURL(url); // Free up memory
                })
                .catch(error => {
                    Swal.fire({
                        title: "Sorry !",
                        text: "Some issue occured while processing your request.",
                        icon: "error"
                    })
                    console.error("Error:", error)
                });

        })
       
    });

    $(document).ready(function () {
        $(".act").on("click", async function () {
         
            let status = $(this).data("appr");
            let id = $(this).data("id");
            let type = $(this).data("type");
            let remark = "";

            if (!status) {
                Swal.close();
                const { value: userRemark, isConfirmed } = await Swal.fire({
                    title: "Enter Remark",
                    input: "text", 
                    inputLabel: "Remark",
                    inputPlaceholder: "Type here...",
                    showCancelButton: true,
                    confirmButtonText: 'Submit',
                });

                if (isConfirmed && userRemark && userRemark != "") {
                    remark = userRemark;
                    Swal.fire({
                        title: 'Please wait !',
                        text: 'Your request under process',
                        didOpen: () => { Swal.showLoading(); }
                    })
                }
            }
          
            $.ajax({
                url: '/admin/ReimbursementReque',
                type: 'post',
                data: { "status": status, "id": id, "type": type, "remark": remark },
                success: function (res) {
                    if (res.status) {
                        Swal.fire({
                            title: 'Success',
                            text: res.message,
                            icon: 'success',
                            didClose: () => { location.reload() }
                        })
                    }
                    else {
                        Swal.fire({
                            title: 'Success',
                            text: res.message,
                            icon: 'success'
                        })
                    }
                },
                error: function (xhr, status, error) {
                    Swal.fire({
                        title: 'error',
                        text: 'Server busy Please try after sometime.',
                        icon: 'error'
                    })

                    console.log(xhr)
                    console.log(status)
                    console.log(error)
                }
            })
        })

        $(".viewSanctionreciept").click(function () {
            Swal.fire({
                title: "Please wait !",
                text: "Processing your request ....",
                allowOutsideClick: false,
                allowEscapeKey: false,
                didOpen: () => {
                    Swal.showLoading();
                }
            });

            let type = $(this).attr("data-type");
            let userId = $(this).attr("data-userId");
            let id = $(this).attr("data-id");
            $.ajax({
                url: "/api/ViewReinbursementBytype",
                type: "Get",
                data: { "userId": userId, "type": type ,id:id},
                success: function (result) {
                    if (result.status) {
                        $("#viewReinburseRecieptListBody").empty();
                        Swal.close();
                        let totalAmout = 0;
                        let element = "";
                        let adminApprStatus = false;
                        let newRequest = false;

                        $.each(result.data, function (i, d) {
                            element += `
                     <tr>
                     <td>${i + 1}</td>
                     <td>${d.vrNo} & ${convertToDate(d.date)}</td>
                     <td>${d.particulars}</td>
                     <td>${d.items}</td>
                     <td>${d.purpose}</td>
                     <td>${d.amount}</td>
                     </tr>
                     `
                            adminApprStatus = d.adminappr;
                            newRequest = d.newRequest;
                            totalAmout += d.amount;
                        });

                        element += ` <tr>
                      <td colspan="5" class="text-end"><b>Total</b></td>
                      <td>${totalAmout}</td>
                  </tr>`;

                        $(".approved-text").text(newRequest ? "Pending" : !newRequest && !adminApprStatus ? "Rejected" : "Approved")
                        $("#viewReinburseRecieptListBody").append(element);
                        $("#ViewReinburseMentReciept").modal("show");
                    }
                    else {
                        Swal.fire({
                            title: "Sorry !",
                            text: "Some issue occured !",
                            icon: "warning"
                        })
                    }
                },
                error: function () {
                    Swal.fire({
                        title: "Server issue !",
                        text: "Server is busy ! Please try after sometime.",
                        icon: "error",
                        didClose: () => {
                            location.reload(true);
                        }
                    })
                }
            })
        })


        function convertToDate(timestamp) {
            const parsedTimestamp = parseInt(timestamp.match(/\d+/)[0], 10);
            const date = new Date(parsedTimestamp);
            return date.toLocaleDateString();
        }

    });
</script>