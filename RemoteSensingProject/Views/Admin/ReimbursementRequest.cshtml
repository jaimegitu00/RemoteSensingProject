<script>
    $(document).ready(function () {
        $(".act").on("click", function () {
            debugger
            Swal.fire({
                title: 'Please wait !',
                text: 'Your request under process',
                didOpen: () => { Swal.showLoading(); }
            })
            debugger
            let status = $(this).data("appr");
            let userId = $(this).data("userid");
            let type = $(this).data("type");
            $.ajax({
                url: '/admin/ReimbursementReque',
                type: 'post',
                data: { "status": status, "userId": userId, "type" : type },
                success: function (res) {
                    if (res.status) {
                        Swal.fire({
                            title: 'Approved',
                            text: res.message,
                            icon: 'success',
                            didClose: () => { location.reload() }
                        })
                    }
                    else {
                        Swal.fire({
                            title: 'Rejected',
                            text: res.message,
                            icon: 'success'
                        })
                    }
                },
                error: function (xhr) {
                    Swal.fire({
                        title: 'error',
                        text: 'Server busy Please try after sometime.',
                        icon: 'error'
                    })
                }
            })
        })

        $(".viewSanctionreciept").click(function () {
            Swal.fire({
                title: "Please wait !",
                text: "Processing your request ....",
                allowOutsideClick: false,
                allowEscapeKey: false,
                didOpen: () => {
                    Swal.showLoading();
                }
            });

            let type = $(this).attr("data-type");
            let userId = $(this).attr("data-userId");
            $.ajax({
                url: "/api/ViewReinbursementAdminView",
                type: "Get",
                data: { "userId": userId, "type": type },
                success: function (result) {
                    if (result.status) {
                        $("#viewReinburseRecieptListBody").empty();
                        Swal.close();
                        let totalAmout = 0;
                        let element = "";
                        $.each(result.data, function (i, d) {
                            element += `
                     <tr>
                     <td>${i + 1}</td>
                     <td>${d.vrNo} & ${convertToDate(d.date)}</td>
                     <td>${d.particulars}</td>
                     <td>${d.items}</td>
                     <td>${d.purpose}</td>
                     <td>${d.amount}</td>
                     </tr>
                     `
                            totalAmout += d.amount;
                        });

                        element += ` <tr>
                      <td colspan="5" class="text-end"><b>Total</b></td>
                      <td>${totalAmout}</td>
                  </tr>`;

                        $("#viewReinburseRecieptListBody").append(element);
                        $("#ViewReinburseMentReciept").modal("show");
                    }
                    else {
                        Swal.fire({
                            title: "Sorry !",
                            text: "Some issue occured !",
                            icon: "warning"
                        })
                    }
                },
                error: function () {
                    Swal.fire({
                        title: "Server issue !",
                        text: "Server is busy ! Please try after sometime.",
                        icon: "error",
                        didClose: () => {
                            location.reload(true);
                        }
                    })
                }
            })
        })


        function convertToDate(timestamp) {
            const parsedTimestamp = parseInt(timestamp.match(/\d+/)[0], 10);
            const date = new Date(parsedTimestamp);
            return date.toLocaleDateString();
        }

    });
</script>