
@{
    ViewBag.Title = "All_Projects";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
    int i = 1;
}

<style>
    .link-icon {
        height: 16px;
    }
</style>
<style>
    .progress-bar {
        width: 100% !important;
        background-color: #f3f3f3 !important;
        border-radius: 5px !important;
        height: 20px !important;
    }

    .progress {
        height: 100% !important;
        background-color: #4caf50 !important;
        border-radius: 5px !important;
        text-align: center !important;
        line-height: 20px !important; /* Aligns text in the middle */
        color: white !important;
        justify-content: center;
    }
    /* Custom button styling */
    .dt-button {
        font-size: 14px !important;
        padding: 10px 20px !important;
        border-radius: 4px !important;
        border: none !important;
        cursor: pointer !important;
        margin-right: 5px !important;
        display: inline-block !important;
        font-weight: 600 !important;
        transition: all 0.3s ease-in-out !important;
    }

        /* Excel button (Green) */
        .dt-button.buttons-excel {
            background-color: #3b9f42 !important; /* Excel-like green */
            color: white !important;
        }

            .dt-button.buttons-excel:hover {
                background-color: #2a7c2f !important; /* Darker green on hover */
            }

        /* PDF button (Red) */
        .dt-button.buttons-pdf {
            background-color: #e74c3c !important; /* PDF-like red */
            color: white !important;
        }

            .dt-button.buttons-pdf:hover {
                background-color: #c0392b !important; /* Darker red on hover */
            }

    /* Additional styling for the buttons wrapper */
    .dataTables_wrapper .dt-buttons {
        margin-bottom: 10px !important;
    }
</style>
<div class="search-box p-4 bg-white rounded mb-3 box-shadow">
    <form class="forms-sample">
        <div class="row align-items-center">
            <div class="col-lg-2">
                <h5>All Project Lists</h5>
            </div>
            <div class="col-lg-4 col-md-6">
                <input type="text" placeholder="Search by project name" id="searchProjectBy" class="form-control">
            </div>
            <div class="col-lg-3 col-md-6">
                <select class="form-select form-select-lg" id="searchByProjectManager">
                    <option selected value="">Serch by Project Manager</option>
                   @foreach(var item in ViewBag.ManagerList as List<RemoteSensingProject.Models.Admin.main.Employee_model>)
                     {
                          <option value="@item.EmployeeName">@item.EmployeeName</option>
                     }
                </select>
            </div>
            <div class="col-lg-3 col-md-6">
                <select class="form-select form-select-lg" id="filterProjectStatus">
                    <option selected value="">Project Status</option>
                    <option>Work in Progress</option>
                    <option>Not Started</option>
                    <option>Delay</option>
                    <option>Completed</option>
                </select>
            </div>
        </div>
    </form>
</div>
<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table" id="AllProjectList">
                        <thead>
                            <tr>
                                <th>S.No.</th>
                                <th>Project Name</th>
                                <th>Project Manager</th>
                                <th>Assign Date</th>
                                <th>Start Date</th>
                                <th>Completion Date</th>
                                <th>Physical in %</th>
                                <th>Financial in %</th>
                                <th>Overall in %</th>
                                <th>Project Status</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in ViewBag.ProjectList as List<RemoteSensingProject.Models.Admin.main.Project_model>)
                            {
                                <tr>
                                    <td class="text-center">@i</td>
                                    <td>@item.ProjectTitle</td>
                                    <td>@item.ProjectManager</td>
                                    <td>@Convert.ToDateTime(item.AssignDate).ToString("dd MMM yyyy")</td>
                                    <td>@Convert.ToDateTime(item.StartDate).ToString("dd MMM yyyy")</td>
                                    <td>@Convert.ToDateTime(item.CompletionDate).ToString("dd MMM yyyy")</td>
                                    <td>
                                        <div class="progress-bar">
                                            <div class="progress" style="width:@item.physicalcomplete%; color:black;">@item.physicalcomplete%</div>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="progress-bar">
                                            <div class="progress" style="width:@item.Percentage%; color:black;">@item.Percentage%</div>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="progress-bar">
                                            <div class="progress" style="width:@item.overallPercentage%; color:black;">@item.overallPercentage%</div>
                                        </div>
                                    </td>
                                    <td>
                                        @if (item.ProjectStatus || item.physicalcomplete == 100)
                                        {
                                            <span class="badge bg-success">Completed</span>
                                        }
                                        else if (item.CompletionDate < DateTime.Now)
                                        {
                                            <span class="badge bg-danger">Delay</span>
                                        }
                                        else if (item.StartDate < DateTime.Now)
                                        {
                                            <span class="badge bg-warning">Work in Progress</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-primary">Not Started</span>
                                        }
                                    </td>

                                    <td class="text-center">
                                        <ul class="d-flex list-unstyled mb-0 justify-content-center">
                                            <li class="me-2"><a href="#" class="viewProject" data-Id="@item.Id"><i class="link-icon" data-feather="eye"></i></a></li>
                                            <li class="me-2">
                                                <a href="/Admin/View_Weekly_Update?Id=@item.Id" title="View Weekly Update">
                                                    <i class="link-icon " data-feather="calendar" style="color:orangered"> </i>
                                                </a>
                                            </li>

                                            <li class="me-2">
                                                <a href="/Admin/View_Project_Stage?Id=@item.Id" title="Update Stages">
                                                    <i class="link-icon text-info" data-feather="plus-circle"> </i>
                                                </a>
                                            </li>
                                            <li class="me-2">
                                                <a href="/Admin/View_Expenses?Id=@item.Id" title="Add Expenses">
                                                    <i class="link-icon text-danger" data-feather="file-plus"></i>
                                                </a>
                                            </li>
                                        </ul>
                                    </td>
                                </tr>
                                i++;
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="modal fade" id="viewProjectModal" tabindex="-1" aria-labelledby="viewProjectModal" aria-hidden="true">
            <div class="modal-dialog modal-dialog-scrollable modal-lg modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header d-flex">
                        <h1 class="modal-title fs-5 text-success" id="exampleModalLabel"> PPP Based Slum Rehabilitaiton</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body" id="viewProjectModalBody">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $(".viewProject").click(function () {
        let id = $(this).attr("data-Id");
        Swal.fire({
            title: "Please wait...",
            text: "Processing your request ...",
            allowOutsideClick: false,
            allowEscapeKey: false,
            timer: 100000,
            didOpen: () => {
                Swal.showLoading();
            }
        })
        $.ajax({
            url: "/admin/GetProjecDatatById",
            type: "get",
            data: { Id: id },
            success: function (res) {
                console.log(res);
                if (res.status) {

                    let stages = `<div class="stageSection">`;
                    if (res.data.pm.ProjectStage) {
                        if (res.data.stages.length > 0) {
                            $.each(res.data.stages, function (i, d) {
                                stages += `<label class="form-label"><a href="stage2">Stage ${i + 1}</a></label>
<div class="row">
    <div class="col-sm-4 mb-2">
        <label class="form-label fw-bolder">Key</label>
        <br />
        <span>${d.KeyPoint}</span>
    </div>
    <div class="col-sm-4 mb-2">
        <label class="form-label fw-bolder">Pdf Document</label>
        <br />
       <a href="${d.Document_Url}"><span>Document</span> <i class="fa-regular fa-file-pdf"></i></a>
    </div>
    <div class="col-sm-4 mb-2">
        <label class="form-label fw-bolder">Completion Date</label>
        <br />
        <span>${d.CompletionDate}</span>
    </div>
    <hr />
</div>`;
                            });
                            stages += "</div>";
                        }
                    }
                    let ExternalProject = ""
                    if (res.data.pm.ProjectType === "External") {
                        ExternalProject = `<div class="row">
    <div class="col-sm-4 mb-2">
        <label class="form-label fw-bolder">Department Name</label>
        <br />
        <span>${res.data.pm.ProjectDepartment}</span>
    </div>
    <div class="col-sm-4 mb-2">
        <label class="form-label fw-bolder">Contact Person</label>
        <br />
        <span>${res.data.pm.ContactPerson}</span>
    </div>
    <div class="col-sm-4 mb-2">
        <label class="form-label fw-bolder">Address</label>
        <br />
        <span>${res.data.pm.Address}</span>
    </div>
    <hr />
</div>`;
                    }

                    let subOrdinates = "";
                    if (res.data.SubOrdinate.length > 0) {
                        $.each(res.data.SubOrdinate, function (i, d) {
                            subOrdinates += ` <li>${d.Name}(${d.EmpCode})</li>`;
                        })
                    }
                    let all_element = `<div class="row">
     <div class="col-sm-4 mb-2">
         <label class="form-label fw-bolder">Title</label>
         <br />
         <span>${res.data.pm.ProjectTitle}</span>
     </div>
     <div class="col-sm-4 mb-2">
         <label class="form-label fw-bolder">Project Manager</label>
         <br />
         <span>${res.data.pm.ProjectManager}</span>
     </div>
     <div class="col-sm-4 mb-2">
         <label class="form-label fw-bolder">Assign Date</label>
         <br />
         <span>${convertToDate(res.data.pm.AssignDate)}</span>
     </div>

     <hr />
 </div>
 <div class="row">
     <div class="col-sm-4 mb-2">
         <label class="form-label fw-bolder">Start Date</label>
         <br />
         <span>${convertToDate(res.data.pm.StartDate)}</span>
     </div>
     <div class="col-sm-4 mb-2">
         <label class="form-label fw-bolder">Completion Date</label>
         <br />
         <span>${convertToDate(res.data.pm.CompletionDate)}</span>
     </div>
     <div class="col-sm-4 mb-2">
         <label class="form-label fw-bolder">Project Type</label>
         <br />
         <span>${res.data.pm.ProjectType}</span>
     </div>

     <hr />
 </div>
 ${res.data.pm.ProjectType === "External" ? ExternalProject : ""}
 <div class="row">
     <div class="col-sm-4 mb-2">
         <label class="form-label fw-bolder">Budget</label>
         <br />
         <span>${res.data.pm.ProjectBudget}</span>
     </div>
     <div class="col-sm-4 mb-2">
         <label class="form-label fw-bolder">Sub-Ordinate</label>
         <ul class="d-flex list-unstyled justify-content-between m-0">
             ${subOrdinates}
         </ul>
     </div>
     <div class="col-sm-4 mb-2">
         <label class="form-label fw-bolder">Stage</label>
         <br />
         <span>${res.data.pm.ProjectStage ? "Yes" : "No"}</span>
     </div>
     <hr />
 </div>
 ${res.data.pm.ProjectStage ? stages : ""}

     <div class="row">
         <label class="form-label fw-bolder">Description</label>
         <p>${res.data.pm.ProjectDescription}</p>
     </div>` ;

                    function convertToDate(timestamp) {
                        const parsedTimestamp = parseInt(timestamp.match(/\d+/)[0], 10);
                        const date = new Date(parsedTimestamp);
                        return date.toLocaleDateString();
                    }

                    $("#viewProjectModalBody").html(all_element);
                    $("#viewProjectModal").modal("show");
                    Swal.close();
                }
            },
            error: function (res) {

            },
            complete: function (res) {

            }
        })
    })

    $(document).ready(function () {



        $("#searchProjectBy").on("keyup", function () {
            var table = $("#AllProjectList").DataTable();
            table.column(1).search(this.value).draw()
        });
        $("#filterProjectStatus").on("change", function () {
            var table = $("#AllProjectList").DataTable();
            table.column(9).search(this.value).draw()
        })
        $("#searchByProjectManager").on("change", function () {
            var table = $("#AllProjectList").DataTable();
            table.column(2).search(this.value).draw()
        })

        $('#AllProjectList').DataTable({
            deferRender: false,
            layout: {
                topStart: {
                    buttons: ['excel', 'pdf']
                }
            },
            drawCallback: function () {
                feather.replace();
            }
        });
        feather.replace();
    });
</script>


