        </div>
    </div>
</div>

<script>
    function showLoading(action) {
        Swal.fire({
            title: "Please Wait..!",
            text: "Request are under process.",
            allowOutsideClick: false,
            didOpen: () => {
                Swal.showLoading();
            }
        });
        if (!action) {
            Swal.close();
        }
    }

    $(document).ready(function () {

        loadMeetings();

        // Search Meeting Name
        $("#searchmeetingName").on("keyup", function () {
            clearTimeout(window.searchTermTimer);
            window.searchTermTimer = setTimeout(() => {
                loadMeetings();
            }, 500);
        });

        // Meeting Status Filter
        $("#searchByMeetingStatus").on("change", function () {
            loadMeetings();
        });

        // Meeting Mode Filter
        $("#searchmeetingMode").on("change", function () {
            loadMeetings();
        });

        document.getElementById('AllMemmberDetails').addEventListener('hide.bs.modal', function () {
            $('#AllConclusionModal').modal('show');
        }); document.getElementById('customModalTwo').addEventListener('hide.bs.modal', function () {
            $('#AllConclusionModal').modal('show');
        });
    })

    function loadMeetings() {
        let searchTerm = $("#searchmeetingName").val().trim();
        let statusFilter = $("#searchByMeetingStatus").val();
        let meetingMode = $("#searchmeetingMode").val();

        $.ajax({
            url: '/Admin/GetAllMeeting',
            type: 'GET',
            data: {
                searchTerm: searchTerm,
                statusFilter: statusFilter,
                meetingMode: meetingMode
            },
            beforeSend: function () {
            },
            success: function (res) {
                showLoading(false);
                $('#meetingTable').DataTable().clear().destroy();
                $('#meetingTable tbody').empty();

                let rows = '';
                $.each(res.empList, function (index, item) {
                    rows += `<tr>
                   <td>${index + 1}</td>
                   <td><a href="#" data-title="View Details"><span onclick="showAllConclusion(${item.Id})" role="button">${item.MeetingTitle}</span></a></td>
                   <td>${item.MeetingType}</td>
                   <td>${item.MeetingDate}</td>
                   <td>
                     <span class="${item.CompleteStatus == 0 ? 'badge badge-pending' : 'badge badge-completed'}">
                       ${item.CompleteStatus == 0 ? 'Pending' : 'Completed'}
                     </span>
                   </td>
                </tr>`;
                });

                $('#meetingTable tbody').append(rows);

                $('#meetingTable').DataTable({
                    layout: {
                        topStart: {
                            buttons: ['excel', 'pdf']
                        }
                    }
                });
            },
            error: function (xhr) {
                console.log("Error: ", xhr);
            }
        });
    }


    function showAllConclusion(id) {
        $("#AllConclusionModal").modal("show")
        showLoading(true);

        $.ajax({
            url: '/Admin/GetConclusions',
            type: 'get',
            data: { id: id },
            success: function (res) {
                $("#conclusionContainer").empty();
                if (res != null) {
                    if (res.length > 0) {
                        res.forEach(function (d) {
                            $("#conclusionContainer").append(`

            <tr>
                <td>
                    ${d.MeetingDate} ${d.MeetingDate.toLowerCase() == "offline" ? item.address : ""}
                </td>
                <td>
                   ${d.mode}
                </td>
                <td>
                    ${d.Conclusion}
                </td>
                <td>
                    ${d.NextFollow}
                </td>

                <td>
                    <ul class="d-flex list-unstyled mb-0 justify-content-center">
                        <li class="me-2"><a href="#" onclick="ShowPresentMember(${d.Id})" class="ShowPresentMember" data-bs-toggle="modal" data-bs-target="#AllMemmberDetails"><i class="fa-solid fa-circle-user" style="font-size:18px; color:green" title="View Meeting Members"> </i></a></li>
                        <li class="me-2"><a href="#" onclick="showKeyResponse(${d.Id})" class="showKeyResponse" data-bs-toggle="modal" data-bs-target="#customModalTwo"><i class="fa-solid fa-list" style="font-size:18px; color:red" title="View Key Points"> </i></a></li>

                    </ul>

                </td>
            </tr>
        }
    }
}`)
                        })
                    } else {
                        $("#conclusionContainer").html("<p class='text-center'>no result fount</p>")
                    }
                }
                showLoading(false);

            }, error: function (xhr) {
                console.log(xhr)
                Swal.fire({
                    title: 'Error',
                    icon: 'error',
                    text: 'An error occurred.',
                    confirmButtonText: 'ok'
                })
            }
        })
    }

    function ShowPresentMember(id) {
        $.ajax({
            url: "/admin/getPresentMember",
            type: "get",
            data: { id: id },
            success: function (res) {
                console.log(res)
                if (res != null) {
                    $("#presentMemberContainer").empty();
                    if (res.length > 0) {
                        res.forEach(function (d) {
                            $("#presentMemberContainer").append(` <tr>

    <td><img src="${d.Image_url}" alt="sliderimages" style="height: 20px;width: 20px;"> ${d.EmployeeName}	<span class="text-secondary">(${d.EmployeeRole})</span></td>
    <td>${d.PresentStatus ? "Joined" : "Not Joined"}</td>
</tr>`)
                        })
                    }
                }
            }, error: function (xhr) {
                swal.fire({
                    title: "error",
                    text: "something went wrong",
                    icon: "error"
                })
            }
        })
    }
    function showKeyResponse(id) {
        $.ajax({
            url: "/admin/getKeypointResponse",
            type: "get",
            data: { id: id },
            success: function (res) {
                console.log(res)
                if (res != null) {
                    $("#responseContainer").empty();
                    if (res.length > 0) {
                        res.forEach(function (d) {
                            $("#responseContainer").append(` <tr>

     <td>${d.KeyPoint}</td>
<td>${d.Response}</td>
</tr>`)
                        })
                    }
                }
            }, error: function (xhr) {
                swal.fire({
                    title: "error",
                    text: "something went wrong",
                    icon: "error"
                })
            }
        })
    }
