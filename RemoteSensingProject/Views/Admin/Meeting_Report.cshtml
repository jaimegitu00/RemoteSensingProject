
@{
    ViewBag.Title = "Meeting_Report";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
    int i = 1;
}
<style>
    .link-icon {
        height: 16px;
    }
</style>

<div class="search-box p-4 bg-white rounded mb-3 box-shadow">
    <form class="forms-sample">
        <div class="row align-items-center">
            <div class="col-lg-2">
                <div class="t-header"><h4 class="mb-2 text-primary"><a href="#">Meeting Lists</a></h4></div>
            </div>
            <div class="col-lg-4 col-md-4">
                <input type="search" placeholder="Search by meeting name" class="form-control" id="searchByMeetingName">
            </div>
            <div class="col-lg-3 col-md-6">
                <select class="form-select form-select-lg" id="searchByMeetingStatus">
                    <option selected value="">Meeting Status</option>
                    <option>Pending</option>
                    <option>Concluded</option>
                </select>
            </div>
            <div class="col-lg-3 col-md-6">
                <select class="form-select form-select-lg" id="searchByMeetingMode">
                    <option selected value="">-- Meeting Mode --</option>
                    <option>Online</option>
                    <option>Offline</option>
                </select>
            </div>

        </div>
    </form>
</div>

<div class="row gutters my-3">
    <div class="card">
        <div class="card-body">
            <div class="table-container">
                <div class="table-responsive">
                    <table id="dataTableExample" class="table table-striped">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Date</th>
                                <th>Title</th>
                                <th>Meet Mode</th>
                                <th>Meet Address</th>
                                <th>Meet Status</th>
                                <th>Action</th>
                               
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in ViewBag.MeetingList as List<RemoteSensingProject.Models.Admin.main.Meeting_Model>)
                            {
                                <tr>
                                    <td>@i</td>
                                    <td>
                                        @item.MeetingDate
                                    </td>
                                    <td>
                                        @item.MeetingTitle
                                    </td>
                                    <td>
                                        @item.MeetingType
                                    </td>
                                    <td>
                                        @item.MeetingLink
                                    </td>
                                    <td><span class="badge bg-warning">Pending</span></td>
                                    <td>
                                        <ul class="d-flex list-unstyled mb-0 justify-content-center">
                                            <li class="me-2"><a href="#" title="View User" data-bs-toggle="modal" data-bs-target="#AllMemmberDetails"><i class="fa-regular fa-circle-user text-primary"> </i></a></li>
                                            <li class="me-2"><a href="#" title="meeting key points" data-bs-toggle="modal" data-bs-target="#customModalTwo"><i class="fa-solid fa-list text-warning"></i></a></li>

                                        </ul>

                                    </td>

                                </tr>
                                i++;
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


