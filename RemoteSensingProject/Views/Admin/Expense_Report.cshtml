<div class="search-box p-4 bg-white rounded mb-3 box-shadow">
    <form class="forms-sample">
        <div class="row align-items-center">
            <div class="col-lg-2">
                <h5>Expense Report</h5>
            </div>
            @*<div class="col-lg-4 col-md-6">
                    <input type="text" placeholder="Search by project name" class="form-control">
                </div>*@
            <div class="col-lg-4 col-md-6">
                <select id="projectName" class="form-select form-select-lg">
                    <option>--Select Project--</option>
                    @if (ViewBag.ProjectList != null)
                    {
                        if (ViewBag.ProjectList.Count > 0)
                        {
                            foreach (var item in ViewBag.ProjectList)
                            {
                                <option value="@item.Id">@item.ProjectTitle</option>
                            }
                        }
                    }
                </select>
            </div>
            <div class="col-lg-4 col-md-6">
                <select class="form-select form-select-lg expenses" id="expenseDropdown">
                    <option selected>--Select head--</option>
                    @*<option value="1">Project Expenses</option>
                        <option value="2">Equipment Expenses</option>
                        <option value="3">Miscellaneous Expenses</option>*@
                </select>
            </div>
            <div class="col-lg-2 col-md-6 float-end text-center">
                <img src="~/assets/gif/pdf (1).png" height="30" />
                <img src="~/assets/gif/office365.png" height="30" />
            </div>
        </div>
    </form>
</div>
<div class="row" id="expenseDetails" hidden>
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table" id="dataTableExample">
                        <thead>
                            <tr>
                                <th>S.No.</th>
                                <th>Date</th>
                                <th>Title</th>
                                <th>Description</th>
                                <th>Amount</th>
                                <th>Receipt</th>
                            </tr>
                        </thead>
                        <tbody>
                            <!----Dynamic Data---->
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/jquery-3.7.1.min.js"></script>


<script>
    document.getElementById('expenseDropdown').onchange = function () {
        var selectedValue = this.value;
        var expenseDetailsDiv = document.getElementById('expenseDetails');
        const projectId = $("#projectName").val();
        debugger
        if (selectedValue) {
            expenseDetailsDiv.removeAttribute('hidden');
            getExpenses(selectedValue, projectId)
        } else {
            expenseDetailsDiv.setAttribute('hidden', true);
        }
  
    };

    function getExpenses(pId, hId) {
        $.ajax({
            url: "/Admin/GetExpenses",
            type: "get",
            data: { pId: pId, hId: hId },
            success: function (res) {
                const $tbody = $("#dataTableExample tbody");
                $tbody.empty();

                if (Array.isArray(res._list) && res._list.length > 0) {
                    $.each(res._list, function (index, item) {
                        const row = `
                    <tr>
                        <td>${index + 1}</td>
                        <td>${item.DateString}</td>
                        <td>${item.title}</td>
                        <td>${item.description}</td>
                        <td>${item.amount}</td>
                        <td><a href="${item.attachment_url}" target="_blank" title="View Attachment">View</a></td>
                    </tr>`;
                        $tbody.append(row);
                    });
                } else {
                    $tbody.append('<tr><td colspan="6" class="text-center">No expenses available</td></tr>');
                }
            },
            error: function (xhr) {
                console.error("Error:", xhr.responseText);
                Swal.fire({
                    title: "Error",
                    text: "An error occurred while fetching the expenses.",
                    icon: "error"
                });
            }
        });
    }



</script>

<script>
    $(document).ready(function () {
        $("#projectName").on("change", function () {
            const projectId = $(this).val();

            $.ajax({
                url: "/Admin/getHeadsByProject",
                type: "GET",
                data: { id: projectId },
                success: function (res) {
                    $(".expenses").empty();
                    console.log(res._headList)
                    $(".expenses").append('<option selected>--Select head--</option>');

                    $.each(res._headList, function (index, item) {
                        var row = `<option value="${item.Id}">${item.heads}</option>`;
                        $(".expenses").append(row);
                    });

                },
                error: function (xhr, error) {
                    console.log("An error occurred:", error);
                }
            });
        });
    });

</script>



