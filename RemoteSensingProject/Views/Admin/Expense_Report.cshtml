
@{
    ViewBag.Title = "Expense_Report";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<style>
    .link-icon {
        height: 16px;
    }
</style>
<style>
    .progress-bar {
        width: 100% !important;
        background-color: #f3f3f3 !important;
        border-radius: 5px !important;
        height: 20px !important;
    }

    .progress {
        height: 100% !important;
