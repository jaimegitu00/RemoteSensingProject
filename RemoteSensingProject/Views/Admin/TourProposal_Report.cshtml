
@{
    ViewBag.Title = "TourProposal_Report";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
    var data = ViewData["allTourList"] as List<RemoteSensingProject.Models.ProjectManager.tourProposal>;
    var projects = ViewData["projects"] as List<RemoteSensingProject.Models.Admin.main.Project_model>;
    string projectId = Request.QueryString["projectFilter"];
}
<link href="~/assets/css/TourProposalStyle.css" rel="stylesheet" />
<!--Style button DataTable-->
<style>

    .dt-search {
        float: right;
        margin-bottom: 5px !important;
    }
</style>

<div class="row mx-0">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="row">

                    <div class="col-sm-4">
                        <select id="Filter2" class="form-select form-select-sm">
                            <option selected value="">Filter By Project</option>
                            @if (projects != null)
                            {
                                foreach (var proj in projects)
                                {
                                    <option value="@proj.Id">@proj.ProjectTitle</option>
                                }
                            }
                        </select>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row mx-0">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="d-flex">
                    <a href="/admin/DownloadTourProposalReport?type=excel&projectFilter=@projectId"><button class="btn btn-success">Excel</button></a>
                    <a href="/admin/DownloadTourProposalReport?type=pdf&projectFilter=@projectId"><button class="btn btn-danger">Pdf</button></a>
                </div>
                <div class="table-responsive">
                    <table id="tableTour" class="table">
                        <thead>
                            <tr>
                                <th class="text-center">Sr. No.</th>
                                <th>Project Code</th>
                                <th>Project</th>
                                <th>Purpose</th>
                                <th>Date of Depart</th>
                                <th>Place Visit</th>
                                <th>Period From</th>
                                <th>Period To</th>
                                <th>Date of return</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (data != null)
                            {
                                int i = 1;
                                foreach (var item in data)
                                {
                                    <tr>
                                        <td>@i</td>
                                        <td>@item.projectCode</td>
                                        <td data-id="@item.id">
                                            <a href="#" data-title="View Details" class="action">@item.projectName</a>
                                        </td>
                                        <td>@item.purpose</td>
                                        <td>@item.dateOfDept</td>
                                        <td>@item.place</td>
                                        <td>@item.periodFrom</td>
                                        <td>@item.periodTo</td>
                                        <td>@item.returnDate</td>
                                    </tr>
                                    i++;
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

