<script>
    $(document).ready(function () {
        $(".changeStatus").on("click", function (e) {
            e.preventDefault();
            Swal.fire({
                title: 'Please wait !',
                text: 'Your request under process',
                didOpen: () => { Swal.showLoading(); }
            })
            let status = $(this).data("value");
            let id = $(this).data("id")
            $.ajax({
                url: '/admin/HiringRequest',
                type: 'post',
                data: { status: status, id: id },
                success: function (res) {
                    if (res.status) {
                        Swal.fire({
                            title: 'Success',
                            text: res.message,
                            icon: 'success',
                            didClose: () => { location.reload() }
                        })
                    }
                    else {
                        Swal.fire({
                            title: 'Warning',
                            text: res.message,
                            icon: 'warning'
                        })
                    }
                },
                error: function (xhr) {
                    Swal.fire({
                        title: 'error',
                        text: 'Server busy Please try after sometime.',
                        icon: 'error'
                    })
                }
            })
        })
    });
</script>