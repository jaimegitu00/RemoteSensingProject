
@{
    ViewBag.Title = "HiringRequest";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
    var data = ViewData["hiringList"] as List<RemoteSensingProject.Models.ProjectManager.HiringVehicle>;
    var data1 = ViewData["projectlist"] as List<RemoteSensingProject.Models.ProjectManager.HiringVehicle>;
    var projects = ViewData["projects"] as List<RemoteSensingProject.Models.Admin.main.Project_model>;
    string baseUrl = $"{Request.Url.Scheme}://{Request.Url.Authority}";
    int i = 1;
}
<link href="~/assets/css/hiringVehicleStyle.css" rel="stylesheet" />
<style>
    #reimbursementForm {
        display: none;
    }

    .row label {
        font-size: 12px !important;
    }

    input::placeholder {
        font-size: 12px !important;
    }

    .modal-dialog {
        margin-top: 5vh; /* You can adjust this value */
    }
</style>

<div class="row mx-0">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-4">
                        <select id="projectFilter" class="form-select form-select-sm">
                            <option selected value="">Filter By Project</option>
                            @if (projects != null)
                            {
                                foreach (var proj in projects)
                                {
                                    <option value="@proj.Id">@proj.ProjectTitle</option>
                                }
                            }
                        </select>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row mx-0">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table id="dataTableExample" class="table">
                        <thead>
                            <tr>
                                <th>Sr. No.</th>
                                <th>Project Code</th>
                                <th>Project Name</th>
                                <th>Head Name</th>
                                <th>Date From</th>
                                <th>Date To</th>
                                <th>Proposed Place</th>
                                <th>Purpose of Visit</th>
                                <th>Total Days & Night</th>
                                <th>Avaiability of fund</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (data != null)
                            {
                                foreach (var item in data)
                                {
                                    <tr>
                                        <td>@i</td>
                                        <td>@item.projectCode</td>
                                        <td>
                                            <a href="#" data-title="View Details">
                                                <span class="action" data-id="@item.id">@item.projectName</span>
                                            </a>
                                        </td>
                                        <td>@item.headName</td>
                                        <td>@Convert.ToDateTime(item.dateFrom).ToString("dd-MMM-yyyy")</td>
                                        <td>@Convert.ToDateTime(item.dateTo).ToString("dd-MMM-yyyy")</td>
                                        <td>@item.proposedPlace</td>
                                        <td>@item.purposeOfVisit</td>
                                        <td>@item.totalDaysNight</td>
                                        <td>@item.amount</td>
                                        <td><a class="edit-btn" data-id="@item.id"><i class="fa-solid fa-pencil"></i></a></td>
                                    </tr>
                                    i++;
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header d-flex justify-content-between">
                <h1 class="modal-title fs-5" id="staticBackdropLabel">Indent For Hiring Vehicle for Field Form </h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="formToPrint">
                <div class="form-container">
                    <div class="header">
                        <img src="@baseUrl/assets/images/remote_sensing_logo.jfif" alt="Logo" class="logo" width="50">
                        <div class="header-text">
                            <h4>REMOTE SENSING APPLICATIONS CENTRE</h4>
                            <h4>UTTAR PRADESH</h4>
                            <h5>INDENT FOR HIRING VEHICLE FOR FIELD WORK</h5>
                        </div>
                    </div>
                    <div class="form-content mt-4">
                        <div class="form-row">
                            <div class="form-label w-30">1. Name of the Project</div>
                            <span class="dotted-line w-70" id="nameProject"></span>
                        </div>
                        <div class="form-row">
                            <div class="form-label w-30">2. Date of Field Programme : From</div>
                            <span class="dotted-line w-70" id="from"></span>
                            <div class="ms-2">to</div>
                            <span class="dotted-line w-70" id="to"></span>
                        </div>
                        <div class="form-row">
                            <div class="form-label w-30">3. Proposed Place/Places of Field Programme</div>
                            <span class="dotted-line w-70" id="proposed"></span>
                        </div>
                        <div class="form-row">
                            <div class="form-label w-30">4. Purpose of Visit</div>
                            <span class="dotted-line w-70" id="purpose"></span>
                        </div>
                        <div class="form-row">
                            <div class="form-label w-30">5. Total Number of Days & Night Halt</div>
                            <span class="dotted-line w-70" id="totalNo"></span>
                        </div>
                        <div class="form-row">
                            <div class="form-label w-30">6. Total Area Travel in Plain & Hills</div>
                            <span class="dotted-line w-70" id="totalArea"></span>
                        </div>
                        <div class="form-row">
                            <div class="form-label w-30">7. Taxi (Ambassdor/Maruti/Gypsy/Jeep/Other)</div>
                            <span class="dotted-line w-70" id="taxi1"></span>
                        </div>
                        <div class="form-row">
                            <div class="form-label w-30">8. Book against Centre/Project Account</div>
                            <span class="dotted-line w-70" id="book"></span>
                        </div>
                        <div class="form-row">
                            <div class="form-label w-30">9. Availability of fund in the Project in this Head</div>
                            <span class="dotted-line w-70" id="availability"></span>
                        </div>

                        <div class="note-section w-100">
                            <div>
                                Note :
                                <span class="dotted-line w-100" id="note1">
                                </span>
                            </div>
                        </div>

                        <div class="signature-section">
                            <div class="signature-block">
                                <h6>Indented By</h6>
                                <div class="signature-line">Signature :</div>
                                <div class="signature-line">Name :</div>
                                <div class="signature-line">Designation :</div>
                            </div>
                            <div class="signature-block">
                                <h6>Forwarded By</h6>
                                <div class="signature-line">Signature :</div>
                                <div class="signature-line">Name :</div>
                                <div class="signature-line">Head of Division/Project Manager</div>
                            </div>
                        </div>

                        <div class="approved-section">
                            <h6>Approved By</h6>
                        </div>
                    </div>
                </div>
            </div>
            <div class="text-end m-5">
                <button class="btn btn-secondary py-1 rounded-0" id="printBtn">Download</button>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $("#printBtn").click(function () {

            Swal.fire({
                title: "Please wait !",
                text: "Processing your request....",
                allowOutsideClick: false,
                allowEscapeKey: false,
                didOpen: () => {
                    Swal.showLoading();
                }
            })
            var formContent = document.getElementById("formToPrint").outerHTML;

            var style = `<link href="${window.location.origin}/assets/css/hiringVehicleStyle.css" rel="stylesheet" type="text/css"/>
<link href="${window.location.origin}/assets/css/style.css" rel="stylesheet" type="text/css"/>
`;
            let htmlContentToPdf = `<html><head>${style}</head><body><div>${formContent}</div></body></html>`;

            fetch("/login/ExportHtmlToPdf", {
                method: "POST",
                headers: {
                    "Content-Type": "application/json"
                },
                body: JSON.stringify({ HtmlText: htmlContentToPdf })
            })
                .then(response => {
                    if (!response.ok) {
                        throw new Error("Failed to generate PDF");
                    }

                    const contentDisposition = response.headers.get("Content-Disposition");
                    let fileName = "Generated.pdf";

                    if (contentDisposition) {
                        const match = contentDisposition.match(/filename="?([^"]+)"?/);
                        if (match && match[1]) {
                            fileName = match[1];
                        }
                    }

                    return response.blob().then(blob => ({ blob, fileName }));
                })
                .then(({ blob, fileName }) => {
                    Swal.fire({
                        title: "Successfully !",
                        text: "Reinbursement pdf generated successfully.",
                        icon: "success"
                    })
                    const link = document.createElement("a");
                    const url = URL.createObjectURL(blob);
                    link.href = url;
                    link.download = fileName;
                    document.body.appendChild(link);
                    link.click();
                    link.remove();
                    URL.revokeObjectURL(url);
                })
                .catch(error => {
                    Swal.fire({
                        title: "Sorry !",
                        text: "Some issue occured while processing your request.",
                        icon: "error"
                    })
                    console.error("Error:", error)
                });

        })
    });

    function loadHiringDetails(id, mode) {
        Swal.fire({
            title: "Please Wait!",
            text: "Processing Your Request.",
            allowOutsideClick: false,
            allowEscapeKey: false,
            didOpen: () => { Swal.showLoading(); }
        });

        $.ajax({
            url: '/api/getHiringList',
            type: 'get',
            data: { id: id },
            success: function (res) {
                const data = res.data[0];

                if (mode === "view") {
                    // VIEW MODE (existing logic)
                    $("#nameProject").text(data.projectName);
                    $("#from").text(convertToDate(data.dateFrom));
                    $("#to").text(convertToDate(data.dateTo));
                    $("#proposed").text(data.proposedPlace);
                    $("#purpose").text(data.purposeOfVisit);
                    $("#totalNo").text(data.totalDaysNight);
                    $("#totalArea").text(data.totalPlainHills);
                    $("#taxi1").text(data.taxi);
                    $("#book").text(data.BookAgainstCentre);
                    $("#availability").text(data.amount);
                    $("#note1").text(data.note);
                }

                if (mode === "edit") {
                    // EDIT MODE (example inputs)
                    $("#editProjectName").val(data.projectName);
                    $("#editFrom").val(data.dateFrom.split('T')[0]);
                    $("#editTo").val(data.dateTo.split('T')[0]);
                    $("#editProposed").val(data.proposedPlace);
                    $("#editPurpose").val(data.purposeOfVisit);
                    $("#editTotalDays").val(data.totalDaysNight);
                    $("#editTotalArea").val(data.totalPlainHills);
                    $("#editTaxi").val(data.taxi);
                    $("#editBook").val(data.BookAgainstCentre);
                    $("#editAmount").val(data.amount);
                    $("#editNote").val(data.note);
                }

                $("#staticBackdrop").modal("show");
                Swal.close();
            },
            error: function () {
                Swal.fire("Error", "Unable to fetch data", "error");
            }
        });
    }

    function convertToDate(timestamp) {
        const date = new Date(timestamp);
        return date.toLocaleDateString();
    }
    $(document).on("click", ".action", function () {
        const id = $(this).data("id");
        loadHiringDetails(id, "view");
    });
</script>

<script>
    
    // Project Filter
    $("#projectFilter").on("change", function () {
        const url = new URL(window.location.href);
        const project = $(this).val();

        if (project) url.searchParams.set("projectFilter", project);
        else url.searchParams.delete("projectFilter");

        showLoader(); // optional
        window.location.href = url.toString();
    });

    // Restore selected values on load
    $(document).ready(function () {
        const urlParams = new URLSearchParams(window.location.search);
        const project = urlParams.get("projectFilter");

        if (project) $("#projectFilter").val(project);
    });
</script>