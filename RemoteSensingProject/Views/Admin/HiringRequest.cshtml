
@{
    ViewBag.Title = "HiringRequest";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
    var data = ViewData["hiringList"] as List<RemoteSensingProject.Models.Admin.main.HiringVehicle1>;
    var data1 = ViewData["projectlist"] as List<RemoteSensingProject.Models.ProjectManager.HiringVehicle>;
    var projects = ViewData["projects"] as List<RemoteSensingProject.Models.Admin.main.Project_model>;
    var projManager = ViewData["projectMangaer"] as List<RemoteSensingProject.Models.Admin.main.Employee_model>;
    string baseUrl = $"{Request.Url.Scheme}://{Request.Url.Authority}";
    int i = 1;
}
<link href="~/assets/css/hiringVehicleStyle.css" rel="stylesheet" />
<style>
    #reimbursementForm {
        display: none;
    }

    .row label {
        font-size: 12px !important;
    }

    input::placeholder {
        font-size: 12px !important;
    }

    .modal-dialog {
        margin-top: 5vh; /* You can adjust this value */
    }
</style>

<div class="row mx-0">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-4">
                        <select id="Filter1" class="form-select form-select-sm">
                            <option selected value="">Filter By Project Manager</option>
                            @if (projManager != null)
                            {
                                foreach (var proman in projManager)
                                {
                                    if (proman.EmployeeRole == "projectManager")
                                    {
                                        <option value="@proman.EmployeeName">@proman.EmployeeName</option>
                                    }
                                }
                            }
                        </select>
                    </div>
                    <div class="col-sm-4">
                        <select id="Filter2" class="form-select form-select-sm">
                            <option selected value="">Filter By Project</option>
                            @if (projects != null)
                            {
                                foreach (var proj in projects)
                                {
                                    <option value="@proj.ProjectTitle">@proj.ProjectTitle</option>
                                }
                            }
                        </select>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row mx-0">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table id="dataTableExample" class="table">
                        <thead>
                            <tr>
                                <th>Sr. No.</th>
                                <th>Project Manager</th>
                                <th>Project Code</th>
                                <th>Project Name</th>
                                <th>Head Name</th>
                                <th>Date From</th>
                                <th>Date To</th>
                                <th>Proposed Place</th>
                                <th>Purpose of Visit</th>
                                <th>Total Days & Night</th>
                                <th>Avaiability of fund</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (data != null)
                            {
                                foreach (var item in data)
                                {
                                    <tr>
                                        <td>@i</td>
                                        <td>
                                            <a href="#" data-title="View Details">
                                                <span class="action" data-id="@item.id">@item.projectManager</span>
                                            </a>
                                        </td>
                                        <td>@item.projectCode</td>
                                        <td>@item.projectName</td>
                                        <td>@item.headName</td>
                                        <td>@Convert.ToDateTime(item.dateFrom).ToString("dd-MMM-yyyy")</td>
                                        <td>@Convert.ToDateTime(item.dateTo).ToString("dd-MMM-yyyy")</td>
                                        <td>@item.proposedPlace</td>
                                        <td>@item.purposeOfVisit</td>
                                        <td>@item.totalDaysNight</td>
                                        <td>@item.amount</td>
                                        <td data-id="id_@item.id" class="text-center">
                                            <a href="#" class="changeStatus" data-value="true" data-title="Approve" data-id="@item.id">
                                                <i class="fa-solid fa-check text-success"></i>
                                            </a>  &nbsp; | &nbsp;
                                            <a href="#" class="changeStatus" data-value="false" data-title="Reject" data-id="@item.id">
                                                <i class="fa-solid fa-xmark text-danger"></i>
                                            </a>

                                        </td>
                                    </tr>
                                    i++;
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


