<div class="row mx-0">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-4">
                        <select id="Filter1" class="form-select form-select-sm">
                            <option selected>Filter By Project Manager</option>
                            @if (projManager != null)
                            {
                                foreach (var proman in projManager)
                                {
                                    if (proman.EmployeeRole == "projectManager")
                                    {
                                        <option value="@proman.EmployeeRole">@proman.EmployeeName</option>
                                    }
                                }
                            }
                        </select>
                    </div>
                    <div class="col-sm-4">
                        <select id="Filter2" class="form-select form-select-sm">
                            <option selected>Filter By Project</option>
                            @if (projects != null)
                            {
                                foreach (var proj in projects)
                                {
                                    <option value="@proj.ProjectTitle">@proj.ProjectTitle</option>
                                }
                            }
                        </select>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row mx-0">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table id="dataTableExample" class="table">
                        <thead>
                            <tr>
                                <th>S.N.</th>
                                <th>Project Manager</th>
                                <th>Project Name</th>
                                <th>Head Name</th>
                                <th>Date From</th>
                                <th>Date To</th>
                                <th>Proposed Place</th>
                                <th>Purpose of Visit</th>
                                <th>Total Days & Night</th>
                                <th>Avaiability of fund</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (data != null)
                            {
                                foreach (var item in data)
                                {
                                    <tr>
                                        <td>@item.id</td>
                                        <td>@item.projectManager</td>
                                        <td>@item.projectName</td>
                                        <td>@item.headName</td>
                                        <td>@Convert.ToDateTime(item.dateFrom).ToString("dd-MMM-yyyy")</td>
                                        <td>@Convert.ToDateTime(item.dateTo).ToString("dd-MMM-yyyy")</td>
                                        <td>@item.proposedPlace</td>
                                        <td>@item.purposeOfVisit</td>
                                        <td>@item.totalDaysNight</td>
                                        <td>@item.amount</td>
                                        <td data-id="id_@item.id" class="text-center">
                                            <a href="#" class="changeStatus" data-value="true" data-id="@item.id">
                                                <i class="fa-solid fa-check text-success"></i>
                                            </a>  |
                                            <a href="#" class="changeStatus" data-value="false" data-id="@item.id">
                                                <i class="fa-solid fa-xmark text-danger"></i>
                                            </a>  |
                                            <a href="#">
                                                <i class="fa-solid fa-eye action" data-id="@item.id"></i>
                                            </a>

                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


