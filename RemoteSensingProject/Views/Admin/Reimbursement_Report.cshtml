                        <div class="table-responsive mb-0 px-5">
                            <table class="table table-bordered mb-0">
                                <thead class="text-center">
                                    <tr>
                                        <th>S.N.</th>
                                        <th>Vr. No. & Date</th>
                                        <th>Particulars</th>
                                        <th>Items</th>
                                        <th>Purpose</th>
