<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-header">
                <span class="card-title">Project Stages Status Update </span>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table id="dataTableExample" class="table">
                        <thead>
                            <tr>
                                <th class="text-center">Stage</th>
                                <th>Key</th>
                                <th>Pdf Document</th>
                                <th>Completion Date</th>
                                <th>Status</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(var item in ViewBag.ProjectStages as List<RemoteSensingProject.Models.Admin.main.Project_Statge>)
                             {
                            <tr>
                                <td class="text-start">Stage @i</td>
                                <td>@item.KeyPoint</td>
                                <td>
                                    <a href="@item.Document_Url"><span>Document</span> <i class="fa-regular fa-file-pdf"></i></a>
                                </td>
                                <td>@Convert.ToDateTime(item.CompletionDate).ToString("dd MMM yyyy")</td>
                                <td>
                                    @if (item.Status.Equals("completed", StringComparison.OrdinalIgnoreCase))
                                    {
                                        <span class="badge bg-success">Completed</span>
                                    }
                                    else if (item.Status.Equals("delay", StringComparison.OrdinalIgnoreCase) || item.CompletionDate < DateTime.Now)
                                    {
                                        <span class="badge bg-secondary">Delay</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Not Started</span>
                                    }

                                </td>
                                <td>
                                    <a href="#" class="ViewStagesStatus" data-id="@item.Id"><i class="link-icon" data-feather="eye"></i></a>
                                </td>
                            </tr>
                                i++;
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="viewStatusModal" tabindex="-1" aria-labelledby="viewStatusModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header text-center text-white">
                <button type="button" class="btn-close float-end" data-bs-dismiss="modal" aria-label="Close"></button>

                <h5 class="modal-title float-start" id="viewStatusModalLabel">View Detail</h5>
            </div>
            <div class="modal-body">
                <div id="viewCompletedFields">
                   
                </div>
            </div>            
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>



<script>

    $(document).ready(function () {
        $(document).on('click', '.ViewStagesStatus', function (e) {
            e.preventDefault();
            var dataId = $(this).data('id');
            debugger
            $.ajax({
                url: '/Employee/viewStagesReason',
                type: 'GET',
                data: { stageId: dataId },
                success: function (res) {
                    var completedFields = $('#viewCompletedFields');
                    completedFields.empty();
                    $.each(res.stageList, function (index, item) {
                        completedFields.append(`
                        <div class="delay-reason-item">
                            <h6>Status:</h6>
                            <p>${item.Status}</p> 
                             <hr />
                             <h6>Update Date:</h6>
                            <p>${item.CreatedDate}</p> 
                             <hr />

                            <h6>Reason:</h6>
                            <p>${item.Comment}</p>
                            <hr />
                            <h6>Document:</h6>
                            <p>
                                <a href="${item.StageDocument_Url}" aria-label="Download PDF" target="_blank">
                                    <i class="fa-regular fa-file-pdf"></i> Download Document
                                </a>
                            </p>
                            <hr />
                        </div>
                    `);
                    });
                    $("#viewStatusModal").modal("show");
                },
                error: function (xhr, status, error) {
                    console.error('Error fetching data:', error);
                }
            });
        });


    });

</script>