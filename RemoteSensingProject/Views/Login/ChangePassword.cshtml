<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Remote & Sensing - Change Password</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">
    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
    <!-- SweetAlert -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <style>
        body {
            font-family: 'Inter', sans-serif;
            background: linear-gradient(135deg, #667eea, #764ba2);
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .card {
            max-width: 900px;
            width: 100%;
            border-radius: 20px;
            overflow: hidden;
            box-shadow: 0 20px 60px rgba(0,0,0,.3);
        }

        .split-container {
            display: flex;
            min-height: 450px;
        }

        .left-section {
            flex: 1;
            padding: 40px;
            color: #fff;
            background: linear-gradient(135deg, #667eea, #764ba2);
        }

        .right-section {
            flex: 1;
            padding: 40px;
            background: #fff;
        }

        .logo-container img {
            max-height: 45px;
            margin-right: 10px;
/*            filter: brightness(0) invert(1);*/
        }

        .form-label {
            font-weight: 600;
            font-size: 14px;
        }

        .form-control {
            font-size: 14px;
        }

        .btn-submit {
            width: 100%;
            background: linear-gradient(135deg, #667eea, #764ba2);
            border: none;
            color: #fff;
            padding: 12px;
            border-radius: 10px;
            font-weight: 600;
        }

        .text-danger {
            font-size: 13px;
            margin-top: 4px;
            display: block;
        }

        @@media(max-width:768px){
            .split-container {
                flex-direction: column;
            }
        }
    </style>
</head>

<body>

    <div class="card">
        <div class="split-container">

            <!-- LEFT -->
            <div class="left-section">
                <div class="logo-container text-center mb-4">
                    <img src="~/assets/images/macreel.png">
                    <img src="~/assets/images/remote_sensing_logo.jfif">
                </div>
                <h3 class="text-center mt-4 pt-4 fw-bold">Secure Your Account</h3>
                <p>Create a strong password to protect your account.</p>

                <div class="mt-4">
                    <h6>Password Requirements</h6>
                    <ul>
                        <li>Minimum 8 characters</li>
                        <li>Uppercase & lowercase</li>
                        <li>At least one number</li>
                    </ul>
                </div>
            </div>

            <!-- RIGHT -->
            <div class="right-section">
                <h4 class="text-center mb-4">Change Password</h4>

                <form id="change-password-form">

                    <!-- OLD PASSWORD -->
                    <div class="mb-3">
                        <label class="form-label">Old Password</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-lock-fill"></i></span>
                            <input type="password" id="old-password" class="form-control">
                            <span class="input-group-text" id="toggle-old"><i class="bi bi-eye"></i></span>
                        </div>
                        <small class="text-danger d-none" id="old-error"></small>
                    </div>

                    <!-- NEW PASSWORD -->
                    <div class="mb-3">
                        <label class="form-label">New Password</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-lock"></i></span>
                            <input type="password" id="new-password" class="form-control">
                            <span class="input-group-text" id="toggle-new"><i class="bi bi-eye"></i></span>
                        </div>
                        <small class="text-danger d-none" id="new-error"></small>
                    </div>

                    <!-- CONFIRM PASSWORD -->
                    <div class="mb-3">
                        <label class="form-label">Confirm Password</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-lock"></i></span>
                            <input type="password" id="confirm-password" class="form-control">
                            <span class="input-group-text" id="toggle-confirm"><i class="bi bi-eye"></i></span>
                        </div>
                        <small class="text-danger d-none" id="confirm-error"></small>
                    </div>

                    <button type="submit" class="btn-submit">
                        <i class="bi bi-check-circle me-2"></i>Change Password
                    </button>

                </form>

                @*<div class="text-center mt-3">
                        <a href="/login">
                            <i class="bi bi-arrow-left"></i>
                            Back to Login
                        </a>
                    </div>*@
            </div>
        </div>
    </div>

    <!-- Bootstrap 5 JS Bundle -->
    <script src="~/Scripts/bootstrap.bundle.js"></script>

    <!-- jQuery -->
    <script src="~/Scripts/jquery-3.7.1.min.js"></script>

    <script>
        function togglePassword(btn, input) {
            btn.on("click", function () {
                input.attr("type", input.attr("type") === "password" ? "text" : "password");
                $(this).find("i").toggleClass("bi-eye bi-eye-slash");
            });
        }

        togglePassword($("#toggle-old"), $("#old-password"));
        togglePassword($("#toggle-new"), $("#new-password"));
        togglePassword($("#toggle-confirm"), $("#confirm-password"));

        $("#new-password").on("input", function () {
            validateNewPassword();
            validateConfirmPassword(); // re-check confirm when new changes
        });

        $("#confirm-password").on("input", function () {
            validateConfirmPassword();
        });

        $("#change-password-form").submit(function (e) {
            e.preventDefault();
            $(".text-danger").addClass("d-none");

            let oldPwd = $("#old-password").val().trim();
            let newPwd = $("#new-password").val().trim();
            let confirmPwd = $("#confirm-password").val().trim();
            let valid = true;

            if (!oldPwd) {
                $("#old-error").text("Old password is required").removeClass("d-none");
                valid = false;
            }

            if (newPwd.length < 8 || !/[A-Z]/.test(newPwd) || !/[a-z]/.test(newPwd) || !/\d/.test(newPwd)) {
                $("#new-error").text("Password must contain uppercase, lowercase & number (min 8 chars)")
                    .removeClass("d-none");
                valid = false;
            }

            if (newPwd !== confirmPwd) {
                $("#confirm-error").text("Passwords do not match").removeClass("d-none");
                valid = false;
            }

            if (!valid) return;

            Swal.fire({ title: "Updating...", didOpen: () => Swal.showLoading(), allowOutsideClick: false });

            $.ajax({
                url: "/login/ChangePassword",
                type: "put",
                data: {
                    oldPassword: oldPwd,
                    newPassword: newPwd,
                    confirmPassword: confirmPwd
                },
                success: function (res) {
                    if (res.status) {
                        Swal.fire("Success", "Password updated successfully", "success")
                            .then(() => window.location.href = "/login");
                    } else {
                        Swal.fire("Error", res.message, "error");
                    }
                },
                error: function () {
                    Swal.fire("Error", "Server error occurred", "error");
                }
            });
        });

        function validateNewPassword() {
            let newPwd = $("#new-password").val().trim();

            if (newPwd.length === 0) {
                $("#new-error").addClass("d-none");
                return false;
            }

            if (
                newPwd.length < 8 ||
                !/[A-Z]/.test(newPwd) ||
                !/[a-z]/.test(newPwd) ||
                !/\d/.test(newPwd)
            ) {
                $("#new-error")
                    .text("min 8 chars, uppercase, lowercase & number")
                    .removeClass("d-none");
                return false;
            }

            $("#new-error").addClass("d-none");
            return true;
        }

        function validateConfirmPassword() {
            let newPwd = $("#new-password").val().trim();
            let confirmPwd = $("#confirm-password").val().trim();

            if (confirmPwd.length === 0) {
                $("#confirm-error").addClass("d-none");
                return false;
            }

            if (newPwd !== confirmPwd) {
                $("#confirm-error")
                    .text("Passwords do not match")
                    .removeClass("d-none");
                return false;
            }

            $("#confirm-error").addClass("d-none");
            return true;
        }

    </script>

</body>
</html>