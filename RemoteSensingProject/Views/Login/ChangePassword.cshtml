
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Remote & Sensing - Change Password</title>

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <!-- SweetAlert2 -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            overflow: hidden;
        }

        .change-password-container {
            max-width: 900px;
            width: 100%;
            padding: 20px;
        }

        .card {
            border: none;
            border-radius: 20px;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
            overflow: hidden;
        }

        .card-body {
            padding: 0;
        }

        /* Added split layout with left info section and right form section */
        .split-container {
            display: flex;
            min-height: 500px;
        }

        .left-section {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 40px 35px;
            flex: 1;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

        .right-section {
            background: white;
            padding: 40px 35px;
            flex: 1;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

        .logo-container {
            margin-bottom: 30px;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 15px;

        }

        .logo-container img {
            max-height: 50px;
            filter: brightness(0) invert(1);
        }

        .left-section h2 {
            font-size: 28px;
            font-weight: 700;
            margin-bottom: 15px;
        }

        .left-section p {
            font-size: 15px;
            line-height: 1.6;
            margin-bottom: 25px;
            opacity: 0.9;
        }

        .info-icon {
            font-size: 60px;
            margin-bottom: 25px;
            opacity: 0.9;
        }

        .password-requirements {
            background-color: rgba(255, 255, 255, 0.15);
            border-left: 4px solid white;
            padding: 15px;
            border-radius: 8px;
        }

        .password-requirements h6 {
            font-size: 14px;
            font-weight: 700;
            margin-bottom: 10px;
        }

        .password-requirements ul {
            margin: 0;
            padding-left: 20px;
            list-style: none;
        }

        .password-requirements li {
            font-size: 13px;
            margin-bottom: 6px;
            position: relative;
            opacity: 0.95;
        }

        .password-requirements li::before {
            content: "✓";
            position: absolute;
            left: -20px;
            font-weight: bold;
        }

        .form-title {
            text-align: center;
            margin-bottom: 25px;
        }

        .form-title h3 {
            font-size: 22px;
            font-weight: 700;
            color: #1a1a1a;
            margin-bottom: 5px;
        }

        .form-title p {
            color: #666;
            font-size: 13px;
        }

        .form-label {
            font-weight: 600;
            color: #333;
            font-size: 13px;
            margin-bottom: 6px;
        }

        .input-group {
            margin-bottom: 18px;
        }

        .input-group-text {
            background-color: #f8f9fa;
            border: 1px solid #e0e0e0;
            border-right: none;
            padding: 10px 14px;
        }

        .input-group-text i {
            color: #667eea;
            font-size: 16px;
        }

        .form-control {
            border: 1px solid #e0e0e0;
            border-left: none;
            padding: 10px 14px;
            font-size: 14px;
            transition: all 0.3s ease;
        }

        .form-control:focus {
            box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
            border-color: #667eea;
        }

        .input-group:focus-within .input-group-text {
            border-color: #667eea;
            background-color: #f0f3ff;
        }

        .btn-submit {
            width: 100%;
            padding: 11px;
            font-size: 15px;
            font-weight: 600;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
            border-radius: 10px;
            color: white;
            transition: all 0.3s ease;
            margin-top: 10px;
        }

        .btn-submit:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 25px rgba(102, 126, 234, 0.4);
        }

        .btn-submit:active {
            transform: translateY(0);
        }

        .back-to-login {
            text-align: center;
            margin-top: 20px;
            padding-top: 20px;
            border-top: 1px solid #e0e0e0;
        }

        .back-to-login a {
            color: #667eea;
            text-decoration: none;
            font-weight: 600;
            font-size: 14px;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            transition: all 0.3s ease;
        }

        .back-to-login a:hover {
            color: #764ba2;
            gap: 12px;
        }

        .password-strength {
            margin-top: 8px;
            margin-bottom: 18px;
            display: none;
        }

        .strength-bar {
            height: 4px;
            background-color: #e0e0e0;
            border-radius: 2px;
            overflow: hidden;
            margin-bottom: 5px;
        }

        .strength-bar-fill {
            height: 100%;
            width: 0%;
            transition: all 0.3s ease;
            border-radius: 2px;
        }

        .strength-text {
            font-size: 12px;
            font-weight: 600;
        }

        .strength-weak .strength-bar-fill {
            width: 33%;
            background-color: #ef4444;
        }

        .strength-weak .strength-text {
            color: #ef4444;
        }

        .strength-medium .strength-bar-fill {
            width: 66%;
            background-color: #f59e0b;
        }

        .strength-medium .strength-text {
            color: #f59e0b;
        }

        .strength-strong .strength-bar-fill {
            width: 100%;
            background-color: #10b981;
        }

        .strength-strong .strength-text {
            color: #10b981;
        }

        /* Added responsive styles for mobile view */
        @@media (max-width: 768px) {
            .split-container {
                flex-direction: column;
            }

            .left-section {
                padding: 30px 25px;
            }

            .right-section {
                padding: 30px 25px;
            }

            .logo-container {
                margin-bottom: 20px;
            }

            .left-section h2 {
                font-size: 24px;
            }

            .info-icon {
                font-size: 48px;
                margin-bottom: 20px;
            }
        }
    </style>
</head>
<body>

    <div class="change-password-container">
        <div class="card">
            <div class="card-body">
                <!-- Split layout: left section for info, right section for form -->
                <div class="split-container">
                    <!-- Left Section: Information -->
                    <div class="left-section">
                        <!-- Logo Section -->
                        <div class="logo-container">
                            <img src="~/assets/images/macreel.png" alt="Macreel Logo">
                            <img src="~/assets/images/remote_sensing_logo.jfif" alt="Remote Sensing Logo">
                        </div>

                        <div class="info-icon text-center">
                            <i class="bi bi-shield-check"></i>
                        </div>

                        <h2>Secure Your Account</h2>
                        <p>Create a strong password to protect your account. Your password should be unique and meet all the requirements listed below.</p>

                        <!-- Password Requirements -->
                        <div class="password-requirements">
                            <h6>Password Requirements:</h6>
                            <ul>
                                <li>At least 8 characters long</li>
                                <li>Contains uppercase and lowercase letters</li>
                                <li>Includes at least one number</li>
                                <li>Use a unique password for this account</li>
                            </ul>
                        </div>
                    </div>

                    <!-- Right Section: Form -->
                    <div class="right-section">
                        <div class="form-title">
                            <h3>Change Password</h3>
                            <p>Enter and confirm your new password</p>
                        </div>

                        <!-- Change Password Form -->
                        <form id="change-password-form">
                            <div class="mb-3">
                                <label for="new-password" class="form-label">New Password</label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="bi bi-lock"></i>
                                    </span>
                                    <input type="password"
                                           class="form-control"
                                           id="new-password"
                                           name="new-password"
                                           placeholder="Enter new password"
                                           autocomplete="new-password"
                                           required>
                                    <span class="input-group-text" style="cursor: pointer; border-left: none;" id="toggle-new-password">
                                        <i class="bi bi-eye" id="eye-icon-new"></i>
                                    </span>
                                </div>

                                <!-- Password Strength Indicator -->
                                <div class="password-strength" id="password-strength">
                                    <div class="strength-bar">
                                        <div class="strength-bar-fill"></div>
                                    </div>
                                    <div class="strength-text">Password strength</div>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label for="confirm-password" class="form-label">Confirm Password</label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="bi bi-lock-fill"></i>
                                    </span>
                                    <input type="password"
                                           class="form-control"
                                           id="confirm-password"
                                           name="confirm-password"
                                           placeholder="Confirm your password"
                                           autocomplete="new-password"
                                           required>
                                    <span class="input-group-text" style="cursor: pointer; border-left: none;" id="toggle-confirm-password">
                                        <i class="bi bi-eye" id="eye-icon-confirm"></i>
                                    </span>
                                </div>
                            </div>

                            <button type="submit" class="btn btn-submit">
                                <i class="bi bi-check-circle me-2"></i>Change Password
                            </button>
                        </form>

                        <!-- Back to Login Link -->
                        <div class="back-to-login">
                            <a href="login.html">
                                <i class="bi bi-arrow-left"></i>
                                Back to Login
                            </a>
                        </div>
                    </div>
                </div>
                <!-- </CHANGE> -->
            </div>
        </div>
    </div>

    <!-- Bootstrap 5 JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- jQuery -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

    <script>
        // Toggle password visibility
        $("#toggle-new-password").on("click", function () {
            const passwordInput = $("#new-password");
            const eyeIcon = $("#eye-icon-new");

            if (passwordInput.attr("type") === "password") {
                passwordInput.attr("type", "text");
                eyeIcon.removeClass("bi-eye").addClass("bi-eye-slash");
            } else {
                passwordInput.attr("type", "password");
                eyeIcon.removeClass("bi-eye-slash").addClass("bi-eye");
            }
        });

        $("#toggle-confirm-password").on("click", function () {
            const passwordInput = $("#confirm-password");
            const eyeIcon = $("#eye-icon-confirm");

            if (passwordInput.attr("type") === "password") {
                passwordInput.attr("type", "text");
                eyeIcon.removeClass("bi-eye").addClass("bi-eye-slash");
            } else {
                passwordInput.attr("type", "password");
                eyeIcon.removeClass("bi-eye-slash").addClass("bi-eye");
            }
        });

        // Password strength checker
        $("#new-password").on("input", function () {
            const password = $(this).val();
            const strengthIndicator = $("#password-strength");

            if (password.length === 0) {
                strengthIndicator.hide();
                return;
            }

            strengthIndicator.show();
            strengthIndicator.removeClass("strength-weak strength-medium strength-strong");

            let strength = 0;

            // Length check
            if (password.length >= 8) strength++;
            if (password.length >= 12) strength++;

            // Contains uppercase and lowercase
            if (/[a-z]/.test(password) && /[A-Z]/.test(password)) strength++;

            // Contains number
            if (/\d/.test(password)) strength++;

            // Contains special character
            if (/[^a-zA-Z0-9]/.test(password)) strength++;

            if (strength <= 2) {
                strengthIndicator.addClass("strength-weak");
                strengthIndicator.find(".strength-text").text("Weak password");
            } else if (strength <= 4) {
                strengthIndicator.addClass("strength-medium");
                strengthIndicator.find(".strength-text").text("Medium password");
            } else {
                strengthIndicator.addClass("strength-strong");
                strengthIndicator.find(".strength-text").text("Strong password");
            }
        });

        // Form submission handler
        $("#change-password-form").on("submit", function (e) {
            e.preventDefault();

            const newPassword = $("#new-password").val().trim();
            const confirmPassword = $("#confirm-password").val().trim();

            // Password validation
            if (newPassword === "" || confirmPassword === "") {
                Swal.fire({
                    icon: 'error',
                    title: 'Missing Information',
                    text: 'Please fill in both password fields!',
                    confirmButtonColor: '#667eea',
                    allowOutsideClick: false,
                });
                return false;
            }

            if (newPassword.length < 8) {
                Swal.fire({
                    icon: 'error',
                    title: 'Weak Password',
                    text: 'Password must be at least 8 characters long!',
                    confirmButtonColor: '#667eea',
                    allowOutsideClick: false,
                }).then(() => {
                    $("#new-password").focus();
                });
                return false;
            }

            // Check for uppercase, lowercase, and number
            if (!/[a-z]/.test(newPassword) || !/[A-Z]/.test(newPassword) || !/\d/.test(newPassword)) {
                Swal.fire({
                    icon: 'error',
                    title: 'Weak Password',
                    text: 'Password must contain uppercase letters, lowercase letters, and numbers!',
                    confirmButtonColor: '#667eea',
                    allowOutsideClick: false,
                }).then(() => {
                    $("#new-password").focus();
                });
                return false;
            }

            if (newPassword !== confirmPassword) {
                Swal.fire({
                    icon: 'error',
                    title: 'Password Mismatch',
                    text: 'The passwords do not match. Please try again!',
                    confirmButtonColor: '#667eea',
                    allowOutsideClick: false,
                }).then(() => {
                    $("#confirm-password").val("").focus();
                });
                return false;
            }

            // Show loading
            Swal.fire({
                title: 'Please wait!',
                html: 'Updating your password...',
                allowOutsideClick: false,
                allowEscapeKey: false,
                allowEnterKey: false,
                didOpen: () => {
                    Swal.showLoading();
                }
            });

            // AJAX request to change password
            $.ajax({
                async: true,
                url: "/login/ChangePassword", // Update this URL to match your backend endpoint
                type: 'POST',
                data: {
                    password: newPassword
                },
                success: function (data) {
                    if (data.status) {
                        Swal.fire({
                            icon: 'success',
                            title: 'Password Changed Successfully!',
                            html: '<p style="font-size: 16px;">Your password has been changed successfully. You can now login with your new password.</p>',
                            confirmButtonColor: '#667eea',
                            confirmButtonText: 'Go to Login'
                        }).then(() => {
                            // Redirect to login page
                            window.location.href = "login.html";
                        });
                    } else {
                        Swal.fire({
                            icon: 'error',
                            title: 'Error',
                            html: '<p style="font-size: 16px;">' + data.message + '</p>',
                            confirmButtonColor: '#667eea',
                        });
                    }
                },
                error: function (xhr, textStatus, errorThrown) {
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        html: '<p style="font-size: 16px;">An error occurred while updating your password. Please try again later.</p>',
                        confirmButtonColor: '#667eea',
                    });
                }
            });

            return false;
        });
    </script>
</body>
</html>



