                            },
                            value: {
                                color: colors.bodyColor,
                                fontSize: "30px",
                                show: true
                            }
                        }
                    }
                },
                fill: {
                    opacity: 1
                },
                stroke: {
                    lineCap: "round",
                },
                labels: ["Project Data"]
            };

            var chart = new ApexCharts(document.querySelector("#storageChart"), options);
            chart.render();
        }

    });
</script>


