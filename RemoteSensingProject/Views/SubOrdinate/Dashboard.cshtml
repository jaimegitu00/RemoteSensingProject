<script>
    $(document).ready(function () {
        var prdata = @Html.Raw(Json.Encode(ViewData["AssignedProjectList"]));
        console.log(prdata)
        if ($('#monthlySalesChart').length) {
            var categories = [];
            var data = [];
            debugger

            $.each(prdata, function (index, item) {
                categories.push(item.Title);
                data.push(item.projectStatus);
            });

            var options = {
                chart: {
                    type: 'bar',
                    height: '318',
                    parentHeightOffset: 0,
                    foreColor: '#6c757d', // Replacing colors.bodyColor with a gray color
                    background: '#ffffff', // Replacing colors.cardBg with white
                    toolbar: {
                        show: false
                    },
                },
                theme: {
                    mode: 'light'
                },
                tooltip: {
                    theme: 'light'
                },
                colors: ['#1aa7a6'], // Primary color for the bars (blue)
                fill: {
                    opacity: .9
                },
                grid: {
                    padding: {
                        bottom: -4
                    },
                    borderColor: '#D6E9E9', // Replacing colors.gridBorder with a light gray color
                    xaxis: {
                        lines: {
                            show: true
                        }
                    }
                },
                series: [{
                    name: 'Completed',
                    data: data
                }],
                xaxis: {
                    type: 'category', // Change type from 'datetime' to 'category'
                    categories: categories, // Updated categories
                    axisBorder: {
                        color: '#dee2e6', // Light gray color
                    },
                    axisTicks: {
                        color: '#dee2e6', // Light gray color
                    },
                },
                yaxis: {
                    min: 0,
                    max: 100,
                    tickAmount: 5,
                    title: {
                        text: 'Project Completion',
                        style: {
                            fontSize: '12px',
                            color: '#adb5bd',
                            fontFamily: 'inherit',
                        }
                    },
                },
                legend: {
                    show: true,
                    position: "top",
                    horizontalAlign: 'center',
                    fontFamily: 'inherit', // Replace with your desired font
                    itemMargin: {
                        horizontal: 8,
                        vertical: 0
                    },
                },
                stroke: {
                    width: 0
                },
                dataLabels: {
                    enabled: true,
                    style: {
                        fontSize: '10px',
                        fontFamily: 'inherit', // Replace with your desired font
                    },
                    offsetY: -27
                },
                plotOptions: {
                    bar: {
                        columnWidth: "50%",
                        borderRadius: 4,
                        dataLabels: {
                            position: 'top',
                            orientation: 'vertical',
                        }
                    },
                },
            };

            var apexBarChart = new ApexCharts(document.querySelector("#monthlySalesChart"), options);
            apexBarChart.render();
        }


        if ($('#storageChart').length) {
            var colors = {
                primary: '#029e9d', // Set the primary color to #029e9d
                light: '#f3f3f3',   // You can define other colors like light, muted, etc.
                muted: '#6c757d',
                bodyColor: '#212529'
            };
            var options = {
                chart: {
                    height: 260,
                    type: "radialBar",
                    events: {
                        // Listen for click event on the chart
                        click: function (event, chartContext, config) {
                            // Redirect based on the click event
                            window.location.href = "/SubOrdinate/Assigned_Project";  // Change this to your desired URL
                        }
                    }
                },
                series: [@data.CompletedProject],
                colors: [colors.primary],
                plotOptions: {
                    radialBar: {
                        hollow: {
                            margin: 15,
                            size: "70%"
