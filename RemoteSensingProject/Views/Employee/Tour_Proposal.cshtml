                    <div class="row">
                        <div class="col-lg-4 mb-3">
                            <label for="project" class="form-label">Project</label>
                            <select class="form-select form-select-sm" id="project" name="projectId">
                                <option value="">select project</option>
                                @if (dta != null)
                                {
                                    foreach (var item in dta)
                                    {
                                        <option value="@item.projectId">@item.projectName</option>
                                    }
                                }
                            </select>
                        </div>
                        <div class="col-lg-4 mb-3">
                            <label for="dateOfDept" class="form-label">Date of Departure</label>
                            <input type="date" class="form-control form-control-sm" id="dateOfDept" name="dateOfDept" />
                        </div>
                        <div class="col-lg-4 mb-3">
                            <label for="place" class="form-label">Place</label>
                            <input type="text" class="form-control form-control-sm" id="place" name="place" placeholder="Enter Place" />
