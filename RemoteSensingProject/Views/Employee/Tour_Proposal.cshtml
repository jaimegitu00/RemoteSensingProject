
@{
    ViewBag.Title = "Tour_Proposal";
    Layout = "~/Views/Shared/_employeeLayout.cshtml";
    var data = ViewData["tourlist"] as List<RemoteSensingProject.Models.ProjectManager.tourProposal>;
    var dta = ViewData["projectList"] as List<RemoteSensingProject.Models.Admin.main.Project_model>;
}
<link href="~/assets/css/TourProposalStyle.css" rel="stylesheet" />
<style>
    #reimbursementForm {
        display: none;
    }
</style>

<nav class="page-breadcrumb mx-0 d-flex align-items-center justify-content-between">
    <ol class="breadcrumb mb-0">
        <li class="breadcrumb-item active" aria-current="page">Tour Proposal</li>
    </ol>
</nav>
<div class="row mx-0">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-4">
                        <select id="Filter2" class="form-select form-select-sm">
                            <option selected value="">Filter By Project</option>
                            @if (dta != null)
                            {
                                foreach (var item in dta)
