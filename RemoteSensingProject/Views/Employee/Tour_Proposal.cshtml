                }
            })
        })
    })
</script>

<script>
    $(document).ready(function () {
        $("#tourForm").submit(function (e) {
            e.preventDefault();
            Swal.fire({
                title: 'Please Wait',
                text: 'Your request under process. Please wait!',
                didOpen: () => { Swal.showLoading(); }
            })
            let formData = new FormData(this);
            $.ajax({
                url: '/employee/Tour_proposal',
                type: 'post',
                data: formData,
                contentType: false,
                processData: false,
                success: function (res) {
                    if (res.status) {
                        Swal.fire({
                            title: 'Success',
                            text: res.message,
                            icon: 'success',
                            didClose: () => { location.reload() }
                        })
                    }
                    else {
                        Swal.fire({
                            title: 'warning',
                            text: res.message,
                            icon: 'warning'
                        })
                    }
                },
                error: function (xhr) {
                    Swal.fire({
                        title: 'error',
                        text: 'Server busy Please try after sometime.',
                        icon: 'error'
                    })
                }
            })
        })
    })
</script>

