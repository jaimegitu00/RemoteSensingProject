                                    <option value="@item.Id">@item.ProjectTitle</option>
                                }
                            }
                        </select>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row mx-0">
    <div class="col-sm-12">
        <table class="table-bordered table-striped" id="dataTableExample">
            <thead>
                <tr>
                    <th>Sr. No.</th>
                    <th>Project Code</th>
                    <th>Project Name</th>
                    <th>Purpose</th>
                    <th>Date of Depart</th>
                    <th>Place Visit</th>
                    <th>Period From</th>
                    <th>Period To</th>
                    <th>Date of return</th>
                </tr>
            </thead>
            <tbody>
                @if (data != null)
                {
                    int i = 1;
                    foreach (var item in data)
                    {
                        <tr>
                            <td>@i</td>
                            <td>@item.projectCode</td>
                            <td data-id="@item.id"><a data-title="View Details" class="action" href="#">@item.projectName</a></td>
                            <td>@item.purpose</td>
                            <td>@item.dateOfDept</td>
                            <td>@item.place</td>
                            <td>@item.periodFrom</td>
                            <td>@item.periodTo</td>
                            <td>@item.returnDate</td>
                        </tr>
                        i++;
                    }
                }
            </tbody>
        </table>
    </div>
</div>

