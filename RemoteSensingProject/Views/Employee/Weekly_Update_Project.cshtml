<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table id="dataTableExample" class="table">
                        <thead>
                            <tr>
                                <th class="text-center">S.No.</th>
                                <th>Date</th>
                                <th>Comment</th>
                                <th>Completion in %</th>
                              </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td class="text-start">1</td>
                                <td>25/09/2024</td>
                                <td class="w-25">
                                    This project aims to develop an innovative mobile app that enhances daily productivity by integrating task management, calendar scheduling, and reminder functionalities.
                                </td>
                                <td>10%</td>
                                
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="addslider" tabindex="-1" aria-labelledby="addslider" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header text-center">
                <h5 class="modal-title" id="exampleModalLabel">Add Weekly Status</h5>
            </div>
            <div class="modal-body">
                <form class="forms-sample">
                    <div class="row">
                        <div class="mb-3 col-md-12">
                            <label for="subtitle" class="form-label">Date</label>
                            <input type="date" class="form-control form-control-sm" name="date" value="@DateTime.Now.ToString("yyyy-MM-dd")" />

                        </div>
                        <div class="mb-3 col-md-12">
                            <label for="subtitle" class="form-label">Comment</label>
                            <textarea class="form-control form-control-sm" name="tinymce" id="tinymceExample" rows="10" placeholder="Enter Comment"></textarea>
                        </div>
                        <div class="mb-3 col-md-12">
                            <label for="title" class="form-label">Completion in %</label>
                            <input type="number" class="form-control" id="title" placeholder="Enter Completion in %">
                        </div>

                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-primary"><i class="link-icon" data-feather="plus"></i> Update Status</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

