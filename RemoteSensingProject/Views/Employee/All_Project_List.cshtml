<div class="search-box p-4 bg-white rounded mb-3 box-shadow">
    <form class="forms-sample">
        <div class="row align-items-center">
            <div class="col-lg-2">
                <h5>All Project Lists</h5>
            </div>
            <div class="col-lg-6 col-md-6">
                <input type="text" id="searchProjectBy" name="searchByProjectName" placeholder="Search by project name" class="form-control">
            </div>
            <div class="col-lg-3 col-md-6">
                <select id="filterProjectStatus" class="form-select form-select-lg">
                    <option selected value="">Project Status</option>
                    <option value="Ongoing">Ongoing</option>
                    <option value="Upcoming">Upcoming</option>
                    <option value="delay">Delay</option>
                    <option value="Complete">Completed</option>
                </select>
            </div>
        </div>
    </form>
</div>
<div class="row mx-0">
    <div class="col-md-12 grid-margin p-0 stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table" id="dataTableExample">
                        <thead>
                            <tr>
                                <th>Sr No.</th>
                                <th>Project Code</th>
                                <th>Project Name</th>
                                <th>Assign Date</th>
                                <th>Start Date</th>
                                <th>Completion Date</th>
                                <th>Physical Status</th>
                                <th>Financial Status</th>
                                <th>Overall Status</th>
                                <th>Project Status</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (data != null && data.Count > 0)
                            {
                                var currentDate = DateTime.Now.Date;
                                foreach (var item in data)
                                {
                                    <tr>
                                        <td>@i</td>
                                        <td>@item.projectCode</td>
                                        <td> <a href="#" data-title="View Details" class="viewProject" data-id="@item.Id">@item.ProjectTitle</a></td>
                                        <td>@item.AssignDateString</td>
                                        <td>@item.StartDateString</td>
                                        <td>@item.CompletionDatestring</td>
                                        <td>
                                            <div class="progress-bar">
                                                <div class="progress" style="width:@item.physicalcomplete%;">@item.physicalcomplete%</div>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="progress-bar">
                                                <div class="progress" style="width:@item.Percentage%;">@item.Percentage%</div>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="progress-bar">
                                                <div class="progress" style="width:@item.overallPercentage%;">@item.overallPercentage%</div>
                                            </div>
                                        </td>
                                        <td>
                                            @if (item.ProjectStatus && (item.CompletionDate < currentDate || item.CompletionDate > currentDate))
                                            {
                                                <span class="badge bg-success">Completed</span>
                                            }
                                            else if (item.StartDate > currentDate && item.CompletionDate > currentDate)
                                            {
                                                <span class="badge bg-secondary">Not Started</span>
                                            }
                                            else if (!item.ProjectStatus && item.CompletionDate > currentDate)
                                            {
                                                <span class="badge bg-warning text-dark">Work in Progress</span>
                                            }

                                            else
                                            {
                                                <span class="badge bg-danger">Delay</span>
                                            }
                                        </td>
                                        <td class="text-center">
                                            <ul class="d-flex list-unstyled mb-0 justify-content-center">
                                                <li class="me-2">
                                                    @*<a href="#" class="viewProject" title="View" data-id="@item.Id">
                                                        <i class="link-icon" data-feather="eye"></i>
                                                    </a>*@

                                                </li>
                                                <li class="me-2">
                                                    <a href="@(item.ProjectType.Equals("Internal") ? $"/Employee/Weekly_Update_Project?Id={item.Id}" : item.ProjectType.Equals("External") ? $"/Employee/monthly_extr_ProjectStatue?Id={item.Id}" : "")" data-title="Weekly Update">
                                                        <i class="link-icon" data-feather="calendar" style="color:orangered"></i>
                                                    </a>
                                                </li>
                                                <li class="me-2">
                                                    <a href="javascript:void(0);"
                                                       class="updateStageBtn"
                                                       data-id="@item.Id"
                                                       data-projectstage="@item.ProjectStage">
                                                        <i class="link-icon text-info" data-feather="plus-circle"></i>
                                                    </a>
                                                </li>
                                                <li class="me-2">
                                                    <a href="/Employee/Add_Expenses?Id=@item.Id" data-title="Add Expenses">
                                                        <i class="link-icon text-danger" data-feather="file-plus"></i>
                                                    </a>
                                                </li>
                                            </ul>
                                        </td>
                                    </tr>
                                    i++;
                                }
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="modal fade" id="viewProjectModal" tabindex="-1" aria-labelledby="viewProjectModal" aria-hidden="true">
            <div class="modal-dialog modal-dialog-scrollable modal-lg modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header d-flex">
                        <h1 class="modal-title fs-5 text-success" id="exampleModalLabel"> Detail</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body" id="viewProjectModalBody">

                    </div>
                </div>
            </div>
        </div>

        <!--Update project Stage status MOdal-->
