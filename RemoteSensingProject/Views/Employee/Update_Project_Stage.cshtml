<script>
    document.getElementById('status').addEventListener('change', function () {
        const completedFields = document.getElementById('completedFields');
        const delayedFields = document.getElementById('delayedFields');

        if (this.value === 'completed') {
            completedFields.classList.remove('d-none');
            delayedFields.classList.add('d-none');
        } else if (this.value === 'delayed') {
            delayedFields.classList.remove('d-none');
            completedFields.classList.add('d-none');
        } else {
            completedFields.classList.add('d-none');
            delayedFields.classList.add('d-none');
        }
    });

</script>

