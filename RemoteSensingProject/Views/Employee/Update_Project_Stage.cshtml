<script>
    document.getElementById('status').addEventListener('change', function () {
        const completedFields = document.getElementById('completedFields');
        const delayedFields = document.getElementById('delayedFields');

        if (this.value === 'completed') {
            completedFields.classList.remove('d-none');
            delayedFields.classList.add('d-none');
        } else if (this.value === 'delayed') {
            delayedFields.classList.remove('d-none');
            completedFields.classList.add('d-none');
        } else {
            completedFields.classList.add('d-none');
            delayedFields.classList.add('d-none');
        }
    });

</script>

<script>

    $(document).ready(function () {
        // Ensure that the 'a' elements exist and have data-bs-toggle="modal" attribute
        $('body').on('click', 'a[data-bs-toggle="modal"]', function () {
            const stageIdValue = $(this).data('id');

            $('#stageId').val(stageIdValue);

        });
    });



</script>

<script>
    $("#statusForm").on("submit", function (event) {
        event.preventDefault();

        var formData = new FormData(this);
        const stageId = $('#stageId').val();
        formData.append("Stage_Id", stageId);

        var projectId = $("#dataTableExample tbody tr:first").data("project-id");
        if (projectId) {
            formData.append("Project_Id", projectId);
        }

        debugger

        if ($("#upload").get(0).files.length > 0) {
            formData.append("StageDocument", $("#upload").get(0).files[0]);
        }
        if ($("#delayedUpload").get(0).files.length > 0) {
            formData.append("DelayedStageDocument", $("#delayedUpload").get(0).files[0]);
        }
        debugger

        $.ajax({
            url: "/Employee/AddStageStatus",
            type: "POST",
            data: formData,
            contentType: false,
            processData: false,
            success: function (res) {
                if (res.status == true) {
                    Swal.fire({
                        icon: 'success',
                        title: 'Success!',
                        text: 'The stage status was added successfully.',
                        confirmButtonText: "OK"
                    }).then(() => {
                        window.location.reload();
                    });

                } else {
                    Swal.fire({
                        icon: 'warning',
                        title: 'Something went wrong!',
                        text: 'The stage status could not be added.'
                    });
                }
            },
            error: function (xhr, error) {
                console.error("Error:", error);
                console.error("Details:", xhr.responseText);
                Swal.fire({
                    icon: 'error',
                    title: 'Error!',
                    text: 'An error occurred while processing your request.'
                });
            }
        });
    });


</script>
<script>
    $(document).ready(function () {
        $(document).on('click', '#viewCompleteDetails', function (e) {
            e.preventDefault();

            const id = $(this).data('id'); // Retrieve the ID from data attribute

            // Clear the modal content before making the request
            $('#viewCompleteStatus').empty();

            $.ajax({
                url: '/Employee/ViewStageCompleteStatus',
                type: 'GET',
                data: { stageId: id },
                success: function (res) {
                    console.log(res)
                    const modalContent = `
                <h6>Update Date:</h6>
                <p>${res.data.CreatedDate}</p>
                <hr />
                 <h6>Comment:</h6>
                <p>${res.data.Comment}</p>
                <hr />
                <h6>Completion Percentage:</h6>
                <p>${res.data.CompletionPrecentage}%</p>
                <hr />
                <h6>Document:</h6>
                <p>
                    <a href="${res.data.StageDocument_Url}" aria-label="Download PDF" target="_blank">
                        <i class="fa-regular fa-file-pdf"></i> Download Document
                    </a>
                </p>
            `;
                    $('#viewCompleteStatus').append(modalContent);
                },
                error: function (xhr, status, error) {
                    console.error(error);
                    const errorMessage = `<p class="text-danger">Failed to load data. Please try again.</p>`;
                    $('#viewCompleteStatus').append(errorMessage);
                }
            });
        });
    });

</script>

