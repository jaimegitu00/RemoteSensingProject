                                            {
                                                <span class="badge bg-success">Completed</span>
                                            }
                                            else if (stages.completionStatus == 0 && stages.CompletionDate < currentDate)
                                            {
                                                <span class="badge bg-danger">Delay by 10 Days</span>
                                            }
