@{
    ViewBag.Title = "Update_Project_Stage";
    Layout = "~/Views/Shared/_employeeLayout.cshtml";
}



<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-header">
                <span class="card-title">Project Stages Status Update </span>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table id="dataTableExample" class="table">
                        <thead>
                            <tr>
                                <th class="text-center">Stage</th>
                                <th>Key</th>
                                <th>Pdf Document</th>
                                <th>Completion Date</th>
                                <th>Status</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{ int index = 1; }
                            @if (ViewBag.ProjectStages != null)
                            {
                                var currentDate = DateTime.Now.Date;

                                foreach (var stages in ViewBag.ProjectStages)
                                {
                                    <tr data-project-id="@stages.Project_Id">

                                        <td>@index</td>
                                        <td>@stages.KeyPoint</td>
                                        <td>
                                            <img src="@stages.Document_Url" height="60" width="100" />
                                        </td>
                                        <td>@stages.CompletionDatestring</td>
                                        <td>
                                            @if (stages.completionStatus == 1 && ( stages.CompletionDate < currentDate || stages.CompletionDate > currentDate))
                                            {
                                                <span class="badge bg-success">Completed</span>
                                            }
                                            else if (stages.completionStatus == 0 && stages.CompletionDate > currentDate)
                                            {
                                                <span class="badge bg-danger">Delay </span>
                                            }
                                            else 
                                            {
                                                <span class="badge bg-info">Pending</span>
                                            }
                                        </td>
                                        <td>
                                            @if (stages.completionStatus == 1 && (stages.CompletionDate < currentDate || stages.CompletionDate > currentDate))
                                            {
                                                <a href="#" id="viewCompleteDetails" data-id="@stages.Id" data-bs-toggle="modal" data-bs-target="#viewStatusModal">
                                                    <i class="link-icon" data-feather="eye"></i>
                                                </a>

                                            }
                                            else if (stages.completionStatus == 0 && stages.CompletionDate > currentDate)
                                            {
                                                <a href="#" data-id="@stages.Id" data-bs-toggle="modal" data-bs-target="#addslider"><i class="link-icon" data-feather="edit"></i></a>
                                                <a href="#" id="viewDetail" data-id="@stages.Id" data-bs-toggle="modal" data-bs-target="#viewDelayStatusModal"><i class="link-icon" data-feather="eye"></i></a>
                                            }
                                            else 
                                            {
                                                <a href="#" data-id="@stages.Id" data-bs-toggle="modal" data-bs-target="#addslider"><i class="link-icon" data-feather="edit"></i></a>
                                            }
                                        </td>
                                    </tr>
                                    index++;
                                }
                            }

