<script>
    $("#statusForm").on("submit", function (event) {
        event.preventDefault();

        var formData = new FormData(this);
        const projectId = $('#projectId').val();

        formData.append("projectId", projectId);
        if ($("#upload").get(0).files.length > 0) {
            formData.append("StageDocument", $("#upload").get(0).files[0]);
        }
     

        $.ajax({
            url: "/Employee/AddStageStatus",
            type: "POST",
            data: formData,
            contentType: false, 
            processData: false, 
            success: function (res) {
                if (res.status == true) {
                    Swal.fire({
                        icon: 'success',
                        title: 'Success!',
                        text: 'The stage status was added successfully.',
                        confirmButtonText: "OK"
                    }).then(() => {
                        window.location.reload();
                    });

                } else {
                    Swal.fire({
                        icon: 'warning',
                        title: 'Something went wrong!',
                        text: 'The stage status could not be added.'
                    });
                }
            },
            error: function (xhr, error) {
                console.error("Error:", error);
                console.error("Details:", xhr.responseText);
                Swal.fire({
                    icon: 'error',
                    title: 'Error!',
                    text: 'An error occurred while processing your request.'
                });
            }
        });
    });


</script>