<div class="modal fade" id="addslider" tabindex="-1" aria-labelledby="addslider" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header text-center text-light">
                <button type="button" class="btn-close float-end" data-bs-dismiss="modal" aria-label="Close"></button>

                <h5 class="modal-title float-start" id="exampleModalLabel">Add Weekly Status</h5>
            </div>
            <div class="modal-body">
                <form class="forms-sample" id="statusForm">
                    <input type="hidden" class="form-control" name="Stage_Id" id="stageId" />
                    <div class="mb-3">
                        <label for="status" class="form-label">Status</label>
                        <select class="form-select" id="status" name="Status">
                            <option value="">Select Status</option>
                            <option value="completed">Completed</option>
                            <option value="delayed">Delayed</option>
                        </select>
                    </div>

                    <div id="completedFields" class="d-none">
                        <div class="mb-3">
                            <label for="comment" class="form-label">Comment</label>
                            <textarea class="form-control form-control-sm" name="Comment" id="Comment" rows="10" placeholder="Project Description"></textarea>
                        </div>
                        <div class="mb-3">
                            <label for="completion" class="form-label">Completion in %</label>
                            <input type="number" class="form-control" id="completion" name="CompletionPrecentage" placeholder="Enter Completion Percentage" min="0" max="100">
                        </div>
                        <div class="mb-3">
                            <label for="upload" class="form-label">Upload Document</label>
                            <input class="form-control" type="file" id="upload" name="StageDocument">
                        </div>
                    </div>

                    <div id="delayedFields" class="d-none">
                        <div class="mb-3">
                            <label for="delayReason" class="form-label">Reason for Delay</label>
                            <textarea class="form-control form-control-sm" name="DelayReason" id="delayReason" rows="4" placeholder="Enter Reason for Delay"></textarea>
                        </div>
                        <div class="mb-3">
                            <label for="upload" class="form-label">Upload Document</label>
                            <input class="form-control" type="file" id="delayedUpload" name="DelayedStageDocument">
                        </div>
                    </div>

                    <div class="text-center">
                        <button type="submit" class="btn btn-primary"><i class="link-icon" data-feather="plus"></i> Add Status</button>
                    </div>
                </form>
            </div>
