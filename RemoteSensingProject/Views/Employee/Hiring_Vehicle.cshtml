<script>

    $("#availbilityOfFund").change(function () {
        let selectedElem = $(this).find("option:selected")
        $("#availablefund").val(selectedElem.attr("data-availabelFund"))
    })

    $("#projectName").change(function () {
        let prId = $(this).val();
        $.ajax({
            url: '/api/GetProjectBudgets',
            type: 'get',
            data: { projectId: prId },
            success: function (res) {
                console.log(res)
                $("#availbilityOfFund").empty();
                for (let i in res.data) {
                    let option = `<option value="${res.data[i].Id}" data-availabelFund="${res.data[i].ProjectAmount - res.data[i].ApproveAmount}">${res.data[i].ProjectHeads}</option>`;
                    $("#availbilityOfFund").append(option);
                }
            },
            error: function (xhr) {

            }
        });
    });

</script>
<script>
    $(document).ready(function () {
        $("#createProjectForm").submit(function (e) {
            e.preventDefault();
            Swal.fire({
                title: 'Please Wait!',
                text: 'Your request under process.',
                didOpen: () => { Swal.showLoading(); }
            })
            let formData = new FormData(this);
            $.ajax({
                url: '/employee/Hiring_Vehicle',
                type: 'post',
                data: formData,
                contentType: false,
                processData: false,
                success: function (res) {
                    if (res.status) {
                        Swal.fire({
                            title: 'Success',
                            text: res.message,
                            icon: 'success',
                            didClose: () => { location.reload(true) }
                        })
                    }
                    else {
                        Swal.fire({
                            title: 'warning',
                            text: res.message,
                            icon: 'warning'
                        })
                    }
                },
                error: function (xhr) {
                    Swal.fire({
                        titel: 'Error',
                        text: 'Server Busy.Try after sometime!',
                        icon:'error'
                    })
                }
            })
        })
    })
</script>