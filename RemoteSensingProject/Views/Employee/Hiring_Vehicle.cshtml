<script>

    $("#availbilityOfFund").change(function () {
        let selectedElem = $(this).find("option:selected")
        $("#availablefund").val(selectedElem.attr("data-availabelFund"))
    })

    $("#projectName").change(function () {
        let prId = $(this).val();
        $.ajax({
            url: '/api/GetProjectBudgets',
            type: 'get',
            data: { projectId: prId },
            success: function (res) {
                $("#availbilityOfFund").empty();
                let option = `<option selected value="">Select Head</option>`;
                $.each(res.data, function (i, d) {
                    option += `<option value="${d.Id}" data-availabelFund="${d.ProjectAmount - d.ApproveAmount}">${d.ProjectHeads}</option>`;
                })
                    $("#availbilityOfFund").append(option);
            },
            error: function (xhr) {
                Swal.fire({
                    title: "Server issue !",
                    text: "Server is busy. Please try after sometime.",
                    icon: "error",
                    didClose: () => {
                        location.reload(true);   
                    }
                })
            }
        });
    });

</script>
<script>
    $(document).ready(function () {
        $("#createProjectForm").submit(function (e) {
            e.preventDefault();
            Swal.fire({
                title: 'Please Wait!',
                text: 'Your request under process.',
                didOpen: () => { Swal.showLoading(); }
            })
            let formData = new FormData(this);
            $.ajax({
                url: '/employee/Hiring_Vehicle',
                type: 'post',
                data: formData,
                contentType: false,
                processData: false,
                success: function (res) {
                    if (res.status) {
                        Swal.fire({
                            title: 'Success',
                            text: res.message,
                            icon: 'success',
                            didClose: () => { location.reload(true) }
                        })
                    }
                    else {
                        Swal.fire({
                            title: 'warning',
                            text: res.message,
                            icon: 'warning'
                        })
                    }
                },
                error: function (xhr) {
                    Swal.fire({
                        titel: 'Error',
                        text: 'Server Busy.Try after sometime!',
                        icon: 'error'
                    })
                }
            })
        })
    });

    // Project Filter
    $("#projectFilter").on("change", function () {
        const url = new URL(window.location.href);
        const project = $(this).val();

        if (project) url.searchParams.set("projectFilter", project);
        else url.searchParams.delete("projectFilter");

        showLoader(); // optional
        window.location.href = url.toString();
    });

    // Restore selected values on load
    $(document).ready(function () {
        const urlParams = new URLSearchParams(window.location.search);
        const project = urlParams.get("projectFilter");

        if (project) $("#projectFilter").val(project);
    });
</script>