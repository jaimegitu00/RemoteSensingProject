<div class="row mx-0">
    <div class="col-sm-12">
        <table class="table-bordered table-striped" id="dataTableExample">
            <thead>
                <tr>
                    <th>Sr. No.</th>
                    <th>ProjectCode</th>
                    <th>Project Name</th>
                    <th>Head Name</th>
                    <th>Date From</th>
                    <th>Date To</th>
                    <th>Proposed Place</th>
                    <th>Purpose of Visit</th>
                    <th>Total Days & Night</th>
                    <th>Avaiability of fund</th>
                    <th>Remark</th>
                    @*<th>Action</th>*@
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @if (data != null)
                            {
                                int i = 1;
                                foreach (var item in data)
                                {
                        <tr>
                            <td>@i</td>
                            <td>@item.projectCode</td>
                            <td class="text-center" data-id="@item.id"><a data-title="View Details" class="action" href="#">@item.projectName</a></td>
                            <td>@item.headName</td>
                            <td>@Convert.ToDateTime(item.dateFrom).ToString("dd-MMM-yyyy")</td>
                            <td>@Convert.ToDateTime(item.dateTo).ToString("dd-MMM-yyyy")</td>
                            <td>@item.proposedPlace</td>
                            <td>@item.purposeOfVisit</td>
                            <td>@item.totalDaysNight</td>
                            <td>@item.amount</td>
                            <td>
                                @if (item.adminappr && !item.newRequest && item.remark == null)
                                {<span>Approved</span> }
                                else if (item.newRequest && !item.adminappr)
                                { <span>Pending</span>}
                                else
                                { <span>@item.remark</span>}
                        </td>
                        @*<td class="text-center" data-id="@item.id"><i class="fa-solid fa-eye action"></i></td>*@
                        <td>
                            @{
                                if (item.newRequest == true && item.adminappr == false)
                                { <span id="status" class="badge bg-primary pt-1">Pending</span> }
                                else if (item.newRequest == false && item.adminappr == true)
                                { <span id="status" class="badge bg-success">Approved</span> }
                                else if (item.newRequest == false && item.adminappr == false)
                                { <span id="status" class="badge bg-danger">Rejected</span> }
                            }
                        </td>
                        </tr>
                                            i++;
                                        }
                                    }
            </tbody>
        </table>
    </div>
</div>


