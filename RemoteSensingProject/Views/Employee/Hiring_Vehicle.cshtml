                            <label for="availablefund" class="form-label">Availability of fund</label>
                            <input type="number" readonly name="amount" id="availablefund" class="form-control form-control-sm" placeholder="Amount"/>
                         </div>
                        <div class="col-lg-4 mb-3">
                            <label for="taxiReportTo" class="form-label">Taxi may report to Shri</label>
                            <input type="text" name="taxiReportTo" class="form-control form-control-sm" id="taxiReportTo" placeholder="Enter Name">
                        </div>
                        <div class="col-lg-4 mb-3">
                            <label for="taxiReportAt" class="form-label">Time</label>
                            <input type="time" name="taxiReportAt" class="form-control form-control-sm" id="taxiReportAt">
                        </div>
                        <div class="col-lg-4 mb-3">
                            <label for="taxiReportPlace" class="form-label">Destination</label>
                            <input type="text" name="taxiReportPlace" class="form-control form-control-sm" id="taxiReportPlace" placeholder="Enter Place">
                        </div>
