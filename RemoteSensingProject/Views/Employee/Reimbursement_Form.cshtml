<script>
    $(document).ready(function () {

        $("#createProjectForm").submit(function (e) {
            e.preventDefault();
            Swal.fire({
                title: 'Please Wait!',
                text: 'Your request under process Please wait.',
                allowOutsideClick: false,
                allowEscapeKey: false,
                didOpen: () => { Swal.showLoading() }
            });
            let formData = new FormData(this);
            $.ajax({
                url: '/employee/Reimbursement_Form',
                type: 'post',
                data: formData,
                contentType: false,
                processData:false,
                success: function (res) {
                    if (res.status) {
                        Swal.fire({
                            title: 'Success',
                            text: res.message,
                            icon: 'success',
                            didClose: () => { location.reload() }
                        })
                    }
                    else {
                        Swal.fire({
                            title: 'warning',
                            text: res.message,
                            icon: 'warning'
                        })
                    }
                },
                error: function (xhr) {
                    Swal.fire({
                        title: 'error',
                        text: 'Server busy Please try after sometime.',
                        icon: 'error'
                    })
                }
            })
        })


        $(".viewSanctionreciept").click(function () {
            Swal.fire({
                title: "Please wait !",
                text: "Processing your request ....",
                allowOutsideClick: false,
                allowEscapeKey: false,
                didOpen: () => {
                    Swal.showLoading();
                }
            });

            let type = $(this).attr("data-type");

            $.ajax({
                url: "/employee/ViewReinbursementListByType",
                type: "Get",
                data: { "type": type },
                success: function (result) {
                    if (result.status) {
                        $("#viewReinburseRecieptListBody").empty();
                        Swal.close();
                        let totalAmout = 0;
                        let element = "";
                        $.each(result.data, function (i, d) {
                            element += `
                            <tr>
                            <td>${i + 1}</td>
                            <td>${d.vrNo} & ${convertToDate(d.date)}</td>
                            <td>${d.particulars}</td>
                            <td>${d.items}</td>
                            <td>${d.purpose}</td>
                            <td>${d.amount}</td>
                            </tr>
                            `
                            totalAmout += d.amount;
                        });

                        element += ` <tr>
                             <td colspan="5" class="text-end"><b>Total</b></td>
                             <td>${totalAmout}</td>
                         </tr>`;

                        $("#viewReinburseRecieptListBody").append(element);
                        $("#ViewReinburseMentReciept").modal("show");
                    }
                    else {
                        Swal.fire({
                            title: "Sorry !",
                            text: "Some issue occured !",
                            icon: "warning"
                        })
                    }
                },
                error: function () {
                    Swal.fire({
                        title: "Server issue !",
                        text: "Server is busy ! Please try after sometime.",
                        icon: "error",
                        didClose: () => {
                            location.reload(true);
                        }
                    })
                }
            })
        })


        function convertToDate(timestamp) {
            const parsedTimestamp = parseInt(timestamp.match(/\d+/)[0], 10);
            const date = new Date(parsedTimestamp);
            return date.toLocaleDateString();
        }


        $(".saveSanctionReciept").click(function () {
            let type = $(this).attr("data-type");
            const swalWithBootstrapButtons = Swal.mixin({
                customClass: {
                    confirmButton: "btn btn-success",
                    cancelButton: "btn btn-danger"
                },
                buttonsStyling: false
            });
            swalWithBootstrapButtons.fire({
                title: "Are you sure?",
                text: "You want a final submit !",
                icon: "warning",
                showCancelButton: true,
                confirmButtonText: "Yes, Submit!",
                cancelButtonText: "No, cancel!",
                reverseButtons: true
            }).then((result) => {
                if (result.isConfirmed) {
                    swalWithBootstrapButtons.fire({
                        title: "Please wait !",
                        text: "Processing your request ....",
                        allowEscapeKey: false,
                        allowOutsideClick: false,
                        didOpen: () => {
                            Swal.showLoading();
                        }
                    })

                    $.ajax({
                        url: "/employee/submitReinbursementFormType",
                        type: "post",
                        data: { type: type },
                        success: function (res) {
                            if (res.status) {
                                Swal.fire({
                                    title: "Successfully !",
                                    text: "Submitted successfully !",
                                    icon: "success",
                                    didClose: () => {
                                        location.reload(true);
                                    }
                                })
                            }
                            else {
                                Swal.fire({
                                    title: "Sorry !",
                                    text: "Some issue occured ! Please try after sometime.",
                                    icon: "warning",
                                    didClose: () => {
                                        location.reload(true);
                                    }
                                });
                            }
                        },
                        error: function () {
                            Swal.fire({
                                title: "Server busy !",
                                text: "Server is busy ! Please try after sometime.",
                                icon: "error",
                                didClose: () => {
                                    location.reload(true);
                                }
                            })
                        }
                    })
                    swalWithBootstrapButtons.fire({
                        title: "Deleted!",
                        text: "Your file has been deleted.",
                        icon: "success"
                    });
                } else if (
                    result.dismiss === Swal.DismissReason.cancel
                ) {
                    swalWithBootstrapButtons.fire({
                        title: "Cancelled",
                        text: "Your imaginary data is safe :)",
                        icon: "error"
                    });
                }
            });
        })
    })
</script>