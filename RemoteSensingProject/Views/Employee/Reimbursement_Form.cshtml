<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header d-flex justify-content-between">
                <h1 class="modal-title fs-5" id="staticBackdropLabel">Reimbursement Form </h1>
                <p class="text-danger ps-4"><b>Note :</b> Contingency limit is 50,000, PI Adjustment limit is 5,000*.</p>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form class="forms-sample" id="createProjectForm">
                    <div class="row">
                        <div class="col-lg-4 mb-3">
                            <label for="type" class="form-label">Type</label>
                            <select class="form-select form-select-sm" id="type" name="type">
                                <option value="" selected>Select Option</option>
                                <option value="contigency">Contigency</option>
                                <option value="pi_adjustment">P.I adjustment</option>
                            </select>
                        </div>
                        <div class="col-lg-4 mb-3">
                            <label for="vr_no" class="form-label">Vr. No.</label>
                            <input type="text" name="vrNo" class="form-control form-control-sm" id="vr_no" placeholder="Enter Voucher Number">
                        </div>
                        <div class="col-lg-4 mb-3">
                            <label for="vrdate" class="form-label">Date</label>
                            <input type="date" name="date" class="form-control form-control-sm" id="vrdate" placeholder="Enter Date">
                        </div>
                        <div class="col-lg-4 mb-3">
                            <label for="particular" class="form-label">Particulars</label>
                            <input type="text" name="particulars" class="form-control form-control-sm" id="particulars" placeholder="Enter Particular">
                        </div>
                        <div class="col-lg-4 mb-3">
                            <label for="items" class="form-label">Items</label>
                            <input type="text" name="items" class="form-control form-control-sm" id="items" placeholder="Enter Items">
                        </div>
                        <div class="col-lg-4 mb-3">
                            <label for="purpose" class="form-label">Purpose</label>
                            <input type="text" name="purpose" class="form-control form-control-sm" id="purpose" placeholder="Enter Purpose">
                        </div>
                        <div class="col-lg-4 mb-3">
                            <label for="amount" class="form-label">Amount</label>
                            <input type="number" name="amount" class="form-control form-control-sm" id="amount" placeholder="Enter Amount" step="any">
                            <span class="text-danger" id="amountMsg"></span>
                        </div>
                    </div>
                    <div class="text-center">
                        <button type="submit" id="btnreim" class="btn btn-primary"><i class="link-icon" data-feather="plus"></i>Add Reimbursement</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="row mx-0">
    <div class="col-sm-12">
        <table class="table-bordered table-striped" id="dataTableExample">
            <thead>
                <tr>
                    <th>S.N.</th>
                    <th>Type</th>
                    <th>Amount</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @if (data != null)
                {
                    foreach (var items in data)
                    {
                        <tr>
                            <td>@i</td>
                            <td>@items.type</td>
                            <td>₹ @Convert.ToDecimal(items.amount).ToString("N2")</td>
                        
                            <td>
                                <a href="#" class="viewSanctionreciept" data-type="@items.type">
                                    <i class="fa-solid fa-eye"></i>
                                </a> &nbsp; | &nbsp;
                                <a href="#" class="saveSanctionReciept" data-type="@items.type">
                                    <i class="fa-solid fa-floppy-disk"></i>
                                </a>

                            </td>
                        </tr>
                        i++;
                    }
                }
            </tbody>
        </table>
    </div>
</div>

