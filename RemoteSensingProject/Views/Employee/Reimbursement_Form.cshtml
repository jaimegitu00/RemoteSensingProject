                            <th>Sr. No.</th>
                            <th>Type</th>
                            <th>Amount</th>
                            <th class="text-center">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (data != null)
                        {
                            foreach (var items in data)
                            {
                                <tr>
                                    <td>@i</td>
                                    <td>@items.type</td>
                                    <td>₹ @Convert.ToDecimal(items.amount).ToString("N2")</td>

                                    <td class="text-center">
                                        <a href="#" data-title="View" class="viewSanctionreciept" data-type="@items.type" data-userId="@items.userId" data-id="@items.id" data-chequeNum="@items.chequeNum" data-chequeDate="@items.chequeDate" data-apprAmt="@items.approveAmount">
                                            <i class="fa-solid fa-eye"></i>
                                        </a>
                                        @{

                                            if (!items.subStatus && items.type.Equals("pi_adjustment") && items.amount >= 5000)
                                            {
                                                <span>&nbsp; | &nbsp;</span>
                                                <a href="#" class="saveSanctionReciept" data-type="@items.type" data-id="@items.id">
                                                    <i class="fa-solid fa-floppy-disk"></i>
                                                </a>
                                            }
                                            else if (!items.subStatus && items.type.Equals("contigency"))
                                            {
                                                <a href="#" data-title="Save" class="saveSanctionReciept" data-type="@items.type" data-id="@items.id"> <span>&nbsp; | &nbsp;</span>
                                                    <i class="fa-solid fa-floppy-disk"></i>
                                                </a>
                                            }
                                        }
                                    </td>
                                </tr>
                                i++;
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
