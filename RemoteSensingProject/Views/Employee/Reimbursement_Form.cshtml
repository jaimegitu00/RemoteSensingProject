
@{
    ViewBag.Title = "Reimbursement_Form";
    Layout = "~/Views/Shared/_employeeLayout.cshtml";
    var data = ViewData["reimlist"] as List<RemoteSensingProject.Models.ProjectManager.Reimbursement>;
    int i = 1;
    string baseUrl = $"{Request.Url.Scheme}://{Request.Url.Authority}";

}

<style>
    #reimbursementForm {
        display: none;
    }
    #dataTableExample thead tr:first-child {
        width: 10px !important;
    }
</style>
<link href="~/assets/css/reinbursementCssDesign.css" rel="stylesheet" />
<nav class="page-breadcrumb mx-0 d-flex align-items-center justify-content-between">
    <ol class="breadcrumb mb-0">
        <li class="breadcrumb-item active" aria-current="page">Reimburserment</li>
    </ol>
    <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#staticBackdrop">Add Reimbursement</button>
