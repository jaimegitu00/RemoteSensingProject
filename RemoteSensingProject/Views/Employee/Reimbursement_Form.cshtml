<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header d-flex justify-content-between">
                <h1 class="modal-title fs-5" id="staticBackdropLabel">Reimbursement Form </h1>
                <p class="text-danger ps-4"><b>Note :</b> Contingency limit is 50,000, PI Adjustment limit is 5,000*.</p>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form class="forms-sample" id="createProjectForm">
                    <div class="row">
                        <div class="col-lg-4 mb-3">
                            <label for="type" class="form-label">Type</label>
                            <select class="form-select form-select-sm" id="type" name="data[0].type" required>
                                <option value="" selected>Select Option</option>
                                <option value="contigency">Contigency</option>
                                <option value="pi_adjustment">P.I adjustment</option>
                            </select>
                        </div>
                        <div class="col-lg-4 mb-3">
                            <label for="vr_no" class="form-label">Vr. No.</label>
                            <input type="text" name="data[0].vrNo" class="form-control form-control-sm" id="vr_no" placeholder="Enter Voucher Number" required>
                        </div>
                        <div class="col-lg-4 mb-3">
                            <label for="vrdate" class="form-label">Date</label>
                            <input type="date" name="data[0].date" class="form-control form-control-sm" id="vrdate" placeholder="Enter Date" required>
                        </div>
                        <div class="col-lg-4 mb-3">
                            <label for="particular" class="form-label">Particulars</label>
                            <input type="text" name="data[0].particulars" class="form-control form-control-sm" id="particulars" placeholder="Enter Particular" required>
                        </div>
                        <div class="col-lg-4 mb-3">
                            <label for="items" class="form-label">Items</label>
                            <input type="text" name="data[0].items" class="form-control form-control-sm" id="items" placeholder="Enter Items" required>
                        </div>
                        <div class="col-lg-4 mb-3">
                            <label for="purpose" class="form-label">Purpose</label>
                            <input type="text" name="data[0].purpose" class="form-control form-control-sm" id="purpose" placeholder="Enter Purpose" required>
                        </div>
                        <div class="col-lg-4 mb-3">
                            <label for="amount" class="form-label">Amount</label>
                            <input type="number" name="data[0].amount" class="form-control form-control-sm" id="amount" placeholder="Enter Amount" step="any" required>
                            <span class="text-danger" id="amountMsg"></span>
                        </div>
                    </div>
                    <div id="anotherFormData"></div>
                    <div class="text-center">
                        <button type="submit" id="btnreim" class="btn btn-primary">Save</button>
                        <button type="button" id="addAnotherRow" data-count="1" class="btn btn-primary"><i class="link-icon" data-feather="plus"></i>Add Reimbursement</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="row mx-0">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-body">
                <table class="table-bordered table-striped" id="dataTableExample">
                    <thead>
