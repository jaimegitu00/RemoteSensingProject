<script>
    $(document).ready(function () {

        //$("#typeFilter").on("change", function () {
        //    let tp = $(this).val();
        //    let table = $("#dataTableExample").DataTable();
        //    table.column(1).search(tp).draw();
        //});

        $("#printBtn").click(function () {

            Swal.fire({
                title: "Please wait !",
                text: "Processing your request....",
                allowOutsideClick: false,
                allowEscapeKey: false,
                didOpen: () => {
                    Swal.showLoading();
                }
            })
            var formContent = document.getElementById("formToPrint").outerHTML;

            var style = `<link href="${window.location.origin}/assets/css/reinbursementCssDesign.css" rel="stylesheet" type="text/css"/>
<link href="${window.location.origin}/assets/css/style.css" rel="stylesheet" type="text/css"/>`;
            let htmlContentToPdf = `<html><head>${style}</head><body><div>${formContent}</div></body></html>`;

            fetch("/login/ExportHtmlToPdf", {
                method: "POST",
                headers: {
                    "Content-Type": "application/json"
                },
                body: JSON.stringify({ HtmlText: htmlContentToPdf }) // Ensure case matches C# model
            })
                .then(response => {
                    if (!response.ok) {
                        throw new Error("Failed to generate PDF");
                    }

                    // Extract filename from Content-Disposition header
                    const contentDisposition = response.headers.get("Content-Disposition");
                    let fileName = "Generated.pdf"; // Default fallback filename

                    if (contentDisposition) {
                        const match = contentDisposition.match(/filename="?([^"]+)"?/);
                        if (match && match[1]) {
                            fileName = match[1];
                        }
                    }

                    return response.blob().then(blob => ({ blob, fileName }));
                })
                .then(({ blob, fileName }) => {
                    Swal.fire({
                        title: "Successfully !",
                        text: "Reinbursement pdf generated successfully.",
                        icon: "success"
                    })
                    const link = document.createElement("a");
                    const url = URL.createObjectURL(blob);
                    link.href = url;
                    link.download = fileName;
                    document.body.appendChild(link);
                    link.click();
                    link.remove();
                    URL.revokeObjectURL(url); // Free up memory
                })
                .catch(error => {
                    Swal.fire({
                        title: "Sorry !",
                        text: "Some issue occured while processing your request.",
                        icon: "error"
                    })
                    console.error("Error:", error)
                });

        })
    });

    $(document).ready(function () {

        $("#addAnotherRow").on("click", function () {
            let count = $(this).attr("data-count");
            let element = `

            <div class="row">
            <div class="col-sm-12">
             <hr />
            </div>
            <div class="col-sm-12">
            <div class="d-flex justify-content-end">
                <div><a href="#" class="removeCurrentRowElement"><i class="fa-solid fa-trash text-danger"></i></a></div>
            </div>
            </div>
      <div class="col-lg-4 mb-3">
          <label for="type" class="form-label">Type</label>
          <select class="form-select form-select-sm" id="type" name="data[${count}].type" required>
              <option value="" selected>Select Option</option>
              <option value="contigency">Contigency</option>
              <option value="pi_adjustment">P.I adjustment</option>
          </select>
      </div>
      <div class="col-lg-4 mb-3">
          <label for="vr_no" class="form-label">Vr. No.</label>
          <input type="text" name="data[${count}].vrNo" class="form-control form-control-sm" id="vr_no" placeholder="Enter Voucher Number" required>
      </div>
      <div class="col-lg-4 mb-3">
          <label for="vrdate" class="form-label">Date</label>
          <input type="date" name="data[${count}].date" class="form-control form-control-sm" id="vrdate" placeholder="Enter Date" required>
      </div>
      <div class="col-lg-4 mb-3">
          <label for="particular" class="form-label">Particulars</label>
          <input type="text" name="data[${count}].particulars" class="form-control form-control-sm" id="particulars" placeholder="Enter Particular" required>
      </div>
      <div class="col-lg-4 mb-3">
          <label for="items" class="form-label">Items</label>
          <input type="text" name="data[${count}].items" class="form-control form-control-sm" id="items" placeholder="Enter Items" required>
      </div>
      <div class="col-lg-4 mb-3">
          <label for="purpose" class="form-label">Purpose</label>
          <input type="text" name="data[${count}].purpose" class="form-control form-control-sm" id="purpose" placeholder="Enter Purpose" required>
      </div>
      <div class="col-lg-4 mb-3">
          <label for="amount" class="form-label">Amount</label>
          <input type="number" name="data[${count}].amount" class="form-control form-control-sm" id="amount" placeholder="Enter Amount" step="any" required>
          <span class="text-danger" id="amountMsg"></span>
      </div>
  </div>`
            $("#anotherFormData").append(element)
            count++;
            $(this).attr("data-count", count);
        })

        $("#anotherFormData").on("click", ".removeCurrentRowElement", function () {
            let count = $("#addAnotherRow").attr("data-count");
            if (count > 1) {
                count--;
            }
            $("#addAnotherRow").attr("data-count", count);
            $(this).closest(".row").remove();
        })

        $("#createProjectForm").submit(function (e) {
            e.preventDefault();
            Swal.fire({
                title: 'Please Wait!',
                text: 'Your request under process Please wait.',
                allowOutsideClick: false,
                allowEscapeKey: false,
                didOpen: () => { Swal.showLoading() }
            });
            let formData = new FormData(this);
            $.ajax({
                url: '/employee/Reimbursement_Form',
                type: 'post',
                data: formData,
                contentType: false,
                processData: false,
                success: function (res) {
                    if (res.status) {
                        Swal.fire({
                            title: 'Success',
                            text: res.message,
                            icon: 'success',
                            didClose: () => { location.reload() }
                        })
                    }
                    else {
                        Swal.fire({
                            title: 'warning',
                            text: res.message,
                            icon: 'warning'
                        })
                    }
                },
                error: function (xhr) {
                    Swal.fire({
                        title: 'error',
                        text: 'Server busy Please try after sometime.',
                        icon: 'error'
                    })
                }
            })
        })


        $(".viewSanctionreciept").click(function () {
            Swal.fire({
                title: "Please wait !",
                text: "Processing your request ....",
                allowOutsideClick: false,
                allowEscapeKey: false,
                didOpen: () => {
                    Swal.showLoading();
                }
            });

            let type = $(this).attr("data-type");
            let userId = $(this).attr("data-userId");
            let Id = $(this).attr("data-id");
            let chequeNum = $(this).attr("data-chequeNum")
            let chequeDate = $(this).attr("data-chequeDate")
            let apprvAmt = $(this).attr("data-apprAmt")
            $.ajax({
                url: "/api/ViewReinbursementBytype",
                type: "Get",
                data: { "userId": userId, "type": type, id: Id, page: null, limit:null },
                success: function (result) {
                    if (result.Status) {
                        $("#apprAmttext").text(apprvAmt);
                        $("#chequeNumberText").text(chequeNum);
                        $("#chequeDatetext").text(chequeDate);
                        $("#viewReinburseRecieptListBody").empty();
                        Swal.close();
                        let totalAmout = 0;
                        let apprStatus = false;
                        let newStatus = false;
                        let element = "";
                        $.each(result.data, function (i, d) {
                            apprStatus = d.adminappr;
                            newStatus = d.newRequest
                            element += `
   <tr>
   <td>${i + 1}</td>
   <td>${d.vrNo} & ${convertToDate(d.date)}</td>
   <td>${d.particulars}</td>
   <td>${d.items}</td>
   <td>${d.purpose}</td>
   <td>${d.amount}</td>
   </tr>
   `
                            totalAmout += d.amount;
                        });

                        $(".approved-text").text(apprStatus && !newStatus ? "Approved" : !apprStatus && !newStatus ? "Rejected" : "Pending");
                        element += ` <tr>
    <td colspan="5" class="text-end"><b>Total</b></td>
    <td>${totalAmout}</td>
</tr>`;



                        $("#viewReinburseRecieptListBody").append(element);
                        $("#ViewReinburseMentReciept").modal("show");
                    }
                    else {
                        Swal.fire({
                            title: "Sorry !",
                            text: "Some issue occured !",
                            icon: "warning"
                        })
                    }
                },
                error: function () {
                    Swal.fire({
                        title: "Server issue !",
                        text: "Server is busy ! Please try after sometime.",
                        icon: "error",
                        didClose: () => {
                            location.reload(true);
                        }
                    })
                }
            })
        })


        function convertToDate(timestamp) {
            const parsedTimestamp = parseInt(timestamp.match(/\d+/)[0], 10);
            const date = new Date(parsedTimestamp);
            return date.toLocaleDateString();
        }


        $(".saveSanctionReciept").click(function () {
            let type = $(this).attr("data-type");
            let id = $(this).attr("data-id");
            const swalWithBootstrapButtons = Swal.mixin({
                customClass: {
                    confirmButton: "btn btn-success",
                    cancelButton: "btn btn-danger"
                },
                buttonsStyling: false
            });
            swalWithBootstrapButtons.fire({
                title: "Are you sure?",
                text: "You want a final submit !",
                icon: "warning",
                showCancelButton: true,
                confirmButtonText: "Yes, Submit!",
                cancelButtonText: "No, cancel!",
                reverseButtons: true
            }).then((result) => {
                if (result.isConfirmed) {
                    swalWithBootstrapButtons.fire({
                        title: "Please wait !",
                        text: "Processing your request ....",
                        allowEscapeKey: false,
                        allowOutsideClick: false,
                        didOpen: () => {
                            Swal.showLoading();
                        }
                    })

                    $.ajax({
                        url: "/employee/submitReinbursementFormType",
                        type: "post",
                        data: { type: type, Id: id },
                        success: function (res) {
                            if (res.status) {
                                Swal.fire({
                                    title: "Successfully !",
                                    text: "Submitted successfully !",
                                    icon: "success",
                                    didClose: () => {
                                        location.reload(true);
                                    }
                                })
                            }
                            else {
                                Swal.fire({
                                    title: "Sorry !",
                                    text: "Some issue occured ! Please try after sometime.",
                                    icon: "warning",
                                    didClose: () => {
                                        location.reload(true);
                                    }
                                });
                            }
                        },
                        error: function () {
                            Swal.fire({
                                title: "Server busy !",
                                text: "Server is busy ! Please try after sometime.",
                                icon: "error",
                                didClose: () => {
                                    location.reload(true);
                                }
                            })
                        }
                    })
                    swalWithBootstrapButtons.fire({
                        title: "Deleted!",
                        text: "Your file has been deleted.",
                        icon: "success"
                    });
                } else if (
                    result.dismiss === Swal.DismissReason.cancel
                ) {
                    swalWithBootstrapButtons.fire({
                        title: "Cancelled",
                        text: "Your imaginary data is safe :)",
                        icon: "error"
                    });
                }
            });
        })
    })

    // Filter by Type
    $("#typeFilter").on("change", function () {
        const url = new URL(window.location.href);
        const type = $(this).val();

        if (type) url.searchParams.set("typeFilter", type);
        else url.searchParams.delete("typeFilter");

        showLoader(); // optional loader function
        window.location.href = url.toString();
    });

    // Set dropdowns on page load
    $(document).ready(function () {
        const urlParams = new URLSearchParams(window.location.search);
        const type = urlParams.get('typeFilter');

        if (type) $("#typeFilter").val(type);
    });
</script>