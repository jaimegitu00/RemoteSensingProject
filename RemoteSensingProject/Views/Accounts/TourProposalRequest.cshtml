<script>
    $(document).ready(function () {

        //Filter
        $("#printBtn").click(function () {

            Swal.fire({
                title: "Please wait !",
                text: "Processing your request....",
                allowOutsideClick: false,
                allowEscapeKey: false,
                didOpen: () => {
                    Swal.showLoading();
                }
            })
            var formContent = document.getElementById("formToPrint").outerHTML;

            var style = `<link href="${window.location.origin}/assets/css/TourProposalStyle.css" rel="stylesheet" type="text/css"/>
<link href="${window.location.origin}/assets/css/style.css" rel="stylesheet" type="text/css"/>
`;
            let htmlContentToPdf = `<html><head>${style}</head><body><div>${formContent}</div></body></html>`;

            fetch("/login/ExportHtmlToPdf", {
                method: "POST",
                headers: {
                    "Content-Type": "application/json"
                },
                body: JSON.stringify({ HtmlText: htmlContentToPdf })
            })
                .then(response => {
                    if (!response.ok) {
                        throw new Error("Failed to generate PDF");
                    }

                    const contentDisposition = response.headers.get("Content-Disposition");
                    let fileName = "Generated.pdf";

                    if (contentDisposition) {
                        const match = contentDisposition.match(/filename="?([^"]+)"?/);
                        if (match && match[1]) {
                            fileName = match[1];
                        }
                    }

                    return response.blob().then(blob => ({ blob, fileName }));
                })
                .then(({ blob, fileName }) => {
                    Swal.fire({
                        title: "Successfully !",
                        text: "Reinbursement pdf generated successfully.",
                        icon: "success"
                    })
                    const link = document.createElement("a");
                    const url = URL.createObjectURL(blob);
                    link.href = url;
                    link.download = fileName;
                    document.body.appendChild(link);
                    link.click();
                    link.remove();
                    URL.revokeObjectURL(url);
                })
                .catch(error => {
                    Swal.fire({
                        title: "Sorry !",
                        text: "Some issue occured while processing your request.",
                        icon: "error"
                    })
                    console.error("Error:", error)
                });

        })
    });
</script>

<script>
    $('#openModal').on('click', function () {
        $('#submitBtn').text('Submit');
        $('#tourForm')[0].reset();
        $("#staticBackdrop").modal("show");
    })
    function getTourById(id) {
        return $.ajax({
            url: '/api/getTourById',
            type: 'get',
            data: { id: id }
        });
    }
    function setViewTour(data) {

        $("#projectMan").text(data.projectManager);
        $("#project").text(data.projectName);

        $("#i1").text(data.purpose);
        $("#i2").text(data.dateOfDept);
        $("#i3").text(data.place);
        $("#i4").text(data.periodFrom);
        $("#i5").text(data.periodTo);
        $("#i6").text(data.returnDate);

        $("#staticBackdrop1").modal("show");
    }

    function setEditTour(data) {

        // text / date fields
        $("#dateOfDept").val(data.dateOfDept.split('T')[0]);
        $("#place").val(data.place);
        $("#periodFrom").val(data.periodFrom.split('T')[0]);
        $("#periodTo").val(data.periodTo.split('T')[0]);
        $("#returnDate").val(data.returnDate.split('T')[0]);
        $("#purpose").val(data.purpose);

        // 🔥 project select – delay added
        setTimeout(function () {
            $("#project").val(data.projectId).trigger("change");
        }, 300);

        // hidden id (for update)
        if ($("#tourId").length === 0) {
            $("#tourForm").append(`<input type="hidden" id="tourId" name="id">`);
        }
        $("#tourId").val(data.id);
        $('#submitBtn').text("Update");
        $("#staticBackdrop").modal("show");
    }

    $(document).on("click", ".action", function (e) {
        e.preventDefault();

        const id = $(this).closest("td").data("id");

        Swal.fire({
            title: "Please Wait!",
            allowOutsideClick: false,
            didOpen: () => Swal.showLoading()
        });

        getTourById(id)
            .done(function (res) {
                setViewTour(res.data[0]);
                Swal.close();
            })
            .fail(function () {
                Swal.fire("Error", "Unable to fetch details", "error");
            });
    });

    $(document).on("click", ".edit-btn", function () {

        const id = $(this).data("id");

        Swal.fire({
            title: "Please Wait!",
            allowOutsideClick: false,
            didOpen: () => Swal.showLoading()
        });

        getTourById(id)
            .done(function (res) {
                setEditTour(res.data[0]);
                Swal.close();
            })
            .fail(function () {
                Swal.fire("Error", "Unable to fetch details", "error");
            });
    });

</script>

<script>
    $(document).ready(function () {
        $("#tourForm").submit(function (e) {
            e.preventDefault();
            Swal.fire({
                title: 'Please Wait',
                text: 'Your request under process. Please wait!',
                didOpen: () => { Swal.showLoading(); }
            })
            let formData = new FormData(this);
            $.ajax({
                url: '/accounts/Tour_proposal',
                type: 'post',
                data: formData,
                contentType: false,
                processData: false,
                success: function (res) {
                    if (res.status) {
                        Swal.fire({
                            title: 'Success',
                            text: res.message,
                            icon: 'success',
                            didClose: () => { location.reload() }
                        })
                    }
                    else {
                        Swal.fire({
                            title: 'warning',
                            text: res.message,
                            icon: 'warning'
                        })
                    }
                },
                error: function (xhr) {
                    Swal.fire({
                        title: 'error',
                        text: 'Server busy Please try after sometime.',
                        icon: 'error'
                    })
                }
            })
        })
    });

