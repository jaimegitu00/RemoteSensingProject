<div class="row mx-0">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-4">
                        <select id="Filter1" class="form-select form-select-sm">
                            <option selected value="">Filter By Project Manager</option>
                            @if (projManager != null)
                            {
                                foreach (var proman in projManager)
                                {
                                    if (proman.EmployeeRole == "projectManager")
                                    {
                                        <option value="@proman.EmployeeName">@proman.EmployeeName</option>
                                    }
                                }
                            }
                        </select>
                    </div>
                    <div class="col-sm-4">
                        <select id="Filter2" class="form-select form-select-sm">
                            <option selected value="">Filter By Project</option>
                            @if (projects != null)
                            {
                                foreach (var proj in projects)
                                {
                                    <option value="@proj.ProjectTitle">@proj.ProjectTitle</option>
                                }
                            }
                        </select>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row mx-0">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table id="dataTableExample" class="table">
                        <thead>
                            <tr>
                                <th class="text-center">S.N.</th>
                                <th>Project Manager</th>
                                <th>Project</th>
                                <th>Purpose</th>
                                <th>Date of Depart</th>
                                <th>Place Visit</th>
                                <th>Period From</th>
                                <th>Period To</th>
                                <th>Date of return</th>
                                <th>Status</th>
                                <th>View</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (data != null)
                                        {
                                            int i = 1;
                                            foreach (var item in data)
                                            {
                                    <tr>
                                        <td>@i</td>
                                        <td>@item.projectManager</td>
                                        <td>@item.projectName</td>
                                        <td>@item.purpose</td>
                                        <td>@item.dateOfDept</td>
                                        <td>@item.place</td>
                                        <td>@item.periodFrom</td>
                                        <td>@item.periodTo</td>
                                        <td>@item.returnDate</td>
                                        <td>
                                                        @{
                                                    if (item.newRequest == true && item.adminappr == false)
                                                    { <span id="status" class="badge bg-primary pt-1">Pending</span> }
                                                else if (item.newRequest == false && item.adminappr == true)
                                                { <span id="status" class="badge bg-success">Approved</span> }
                                                else if (item.newRequest == false && item.adminappr == false)
                            { <span id="status" class="badge bg-danger">Rejected</span> }
                                            }
                                        </td>
                                        <td data-id="@item.id" class="text-center"><i class="fa-solid fa-eye action" ></i> </td>
                                    </tr>
                                                                    i++;
                                                                }
                                                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


