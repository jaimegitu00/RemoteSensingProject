<script>
    $(document).ready(function () {

        //Filter
        $("#Filter2").on("change", function () {
            let filter = $(this).val();
            let table = $("#dataTableExample").DataTable()
            table.column(2).search(filter).draw()
        })
        $("#Filter1").on("change", function () {
            let filter = $(this).val();
            let table = $("#dataTableExample").DataTable()
            table.column(1).search(filter).draw()
        })

        $(".action").on("click", function () {
            Swal.fire({
                title: "Please Wait!",
                text: "Processing Your Request.",
                allowOutsideClick: false,
                allowEscapeKey: false,
                didOpen: () => { Swal.showLoading(); }
            });
            let id = $(this).parent().attr("data-id")
            $.ajax({
                url: '/api/getTourById',
                type: 'get',
                data: { id: id },
                success: function (res) {
                    console.log(res.data)
                    $("#projectMan").text(res.data[0].projectManager)
                    $("#project").text(res.data[0].projectName)
                    $("#i1").text(res.data[0].purpose)
                    $("#i2").text(res.data[0].dateOfDept)
                    $("#i3").text(res.data[0].place)
                    $("#i4").text(res.data[0].periodFrom)
                    $("#i5").text(res.data[0].periodTo)
                    $("#i6").text(res.data[0].returnDate)
                    let status = "";
                    if (res.data[0].newRequest == true && res.data[0].adminappr == false) { status = "Pending" }
                    else if (res.data[0].newRequest == false && res.data[0].adminappr == false) { status = "Rejected" }
                    else if (res.data[0].newRequest == false && res.data[0].adminappr == true) { status = "Approved" }
                    $("#statuss").text(status);
                    $("#staticBackdrop").modal("show")
                    Swal.close();
                },
                error: function (xhr) {

                }
            })
        })
    })
</script>