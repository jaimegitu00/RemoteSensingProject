﻿
@{
    ViewBag.Title = "ReinbursementRequest";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
    var data = ViewData["ReimBurseData"] as List<RemoteSensingProject.Models.ProjectManager.Reimbursement>;
    int i = 1;
    string baseUrl = $"{Request.Url.Scheme}://{Request.Url.Authority}";

}
<link href="~/assets/css/reinbursementCssDesign.css" rel="stylesheet" />
<div class="row mx-0">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-baseline mb-2">
                    <h6 class="card-title mb-0">Reinbursement Requests</h6>
                </div>
                <div class="table-responsive">
                    <table id="dataTableExample" class="table table-hover mb-0">
                        <thead>
                            <tr>
                                <th class="text-center">Sr</th>
                                <th>Project Manager</th>
                                <th>Type</th>
                                <th>Amount</th>
                                <th class="text-center">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (data != null && data.Count > 0)
                            {
                                foreach (var item in data)
                                {
                                    <tr>
                                        <td>@i</td>
                                        <td>@item.EmpName</td>
                                        <td>@item.type</td>
                                        <td>₹@Convert.ToDecimal(item.amount).ToString("N2")</td>
                                        <td class="text-center">
                                            <a href="#" data-title="View" class="viewSanctionreciept" data-type="@item.type" data-userId="@item.userId" data-id="@item.id">
                                                <i class="fa-solid fa-eye text-success"></i>
                                            </a>
                                            @if (item.apprstatus)
                                            {

                                                <span>&nbsp; | &nbsp; </span>

                                                <a href="#" data-title="Accept" data-type="@item.type" data-userId="@item.userId" data-totalAmount="@item.amount" data-Id="@item.id" class="submitamoutSanction">
                                                    <i class="fa-solid fa-check text-success"></i>
                                                </a>

                                                <span>&nbsp; | &nbsp;</span>
                                                <a href="#" data-type="@item.type" data-title="Reject" data-userId="@item.userId" data-totalAmount="@item.amount" data-Id="@item.id" class="rejectAmountSanction">
                                                    <i class="fa-solid fa-xmark text-danger"></i>
                                                </a>
                                            }

                                        </td>
                                    </tr>
                                    i++;
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


<!--Modal-->
