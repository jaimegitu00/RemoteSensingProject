    <div class="modal-dialog modal-lg modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header d-flex justify-content-between">
                <h1 class="modal-title fs-5" id="ViewReinburseMentRecieptLabel">Reimbursement Form </h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="container">
                    <div class="form-container py-3">
                        <div class="text-center mb-3">
                            <h4>REMOTE SENSING APPLICATIONS CENTRE</h4>
                            <h5>UTTAR PRADESH</h5>
                            <div class="px-4 mt-1 d-flex justify-content-between">
                                <span>
                                    <p>
                                        <img src="@baseUrl/assets/images/remote_sensing_logo.jfif" width="50px" />
                                    </p><b>S.F.A.O/Director</b>
                                </span>
                                <span>
